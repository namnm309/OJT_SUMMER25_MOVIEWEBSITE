function updateMovieDisplay() {
    const movie = movies[currentMovieIndex];
    const heroSection = document.getElementById('heroSection');
    
    document.getElementById('movieTitle').textContent = movie.title;
    document.getElementById('movieTitleVn').textContent = movie.titleVn;
    document.getElementById('moviePlot').textContent = movie.plot;
    document.getElementById('movieGenre').textContent = movie.genre;
    document.getElementById('imdbRating').textContent = movie.imdb;
    document.getElementById('duration').textContent = movie.duration;
    
    // Update background with transition
    heroSection.style.background = `linear-gradient(107deg, rgba(0, 0, 0, 0.00) 36.24%, rgba(14, 14, 14, 0.55) 57.42%, rgba(12, 12, 12, 0.99) 76.93%), url('${movie.background}') lightgray 50% / cover no-repeat`;
}

function updatePaginationDots() {
    const dots = document.querySelectorAll('.dot');
    dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === currentMovieIndex);
    });
}

function nextMovie() {
    currentMovieIndex = (currentMovieIndex + 1) % movies.length;
    updateMovieDisplay();
    updatePaginationDots();
    resetCarouselTimer();
}

function previousMovie() {
    currentMovieIndex = (currentMovieIndex - 1 + movies.length) % movies.length;
    updateMovieDisplay();
    updatePaginationDots();
    resetCarouselTimer();
}

function startMovieCarousel() {
    movieInterval = setInterval(nextMovie, 5000); // Auto change every 5 seconds
}

function resetCarouselTimer() {
    clearInterval(movieInterval);
    startMovieCarousel();
}

// Click on pagination dots
document.addEventListener('click', function(e) {
    if (e.target.classList.contains('dot')) {
        const dots = Array.from(document.querySelectorAll('.dot'));
        currentMovieIndex = dots.indexOf(e.target);
        updateMovieDisplay();
        updatePaginationDots();
        resetCarouselTimer();
    }
});

