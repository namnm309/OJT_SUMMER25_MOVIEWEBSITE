@{
    ViewData["Title"] = "Trang Chủ - Cinema City";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

<div class="cinema-homepage">
    <!-- Hero Section -->
    <div class="hero-section" id="heroSection">
        <!-- Navigation -->
        <div class="hero-nav">
            <div class="nav-content">
                <div class="nav-left">
                    <div class="auth-buttons">
                        <a href="@Url.Action("Register", "Account")" class="btn-register">Đăng ký</a>
                        <a href="@Url.Action("Login", "Account")" class="btn-login">Đăng nhập</a>
                    </div>
                    <div class="search-box">
                        <input type="text" placeholder="Tìm kiếm phim..." class="search-input">
                        <i class="fas fa-search search-icon"></i>
                    </div>
                </div>
                <div class="nav-center">
                    <div class="nav-links">
                        <a href="#" class="nav-link">Giới thiệu</a>
                        <a href="@Url.Action("Index", "Events")" class="nav-link">
                            <span>Sự kiện</span>
                            <i class="fas fa-chevron-down"></i>
                        </a>
                        <a href="@Url.Action("Index", "Products")" class="nav-link">
                            <span>Sản phẩm</span>
                            <i class="fas fa-chevron-down"></i>
                        </a>
                        <a href="@Url.Action("Index", "Movies")" class="nav-link">
                            <span>Phim</span>
                            <i class="fas fa-chevron-down"></i>
                        </a>
                        <div class="nav-link active">
                            <span>Trang chủ</span>
                            <div class="nav-underline"></div>
                        </div>
                    </div>
                </div>
                <div class="nav-right">
                    <div class="divider"></div>
                    <div class="brand">
                        <div class="brand-content">
                            <div class="brand-header">
                                <span class="brand-name">Cinema City</span>
                                <div class="brand-logo"></div>
                            </div>
                            <div class="brand-subtitle">Rạp chiếu phim hiện đại</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Movie Content -->
        <div class="movie-content" id="movieContent">
            <div class="movie-info">
                <div class="movie-header">
                    <h1 class="movie-title" id="movieTitle">Oppenheimer 2023</h1>
                    <p class="movie-title-vn" id="movieTitleVn">Cha đẻ bom nguyên tử</p>
                </div>
                
                <div class="movie-details">
                    <div class="plot-section">
                        <h3>Tóm tắt nội dung</h3>
                        <p id="moviePlot">
                            Phim Oppenheimer kể về cuộc đời của J. Robert Oppenheimer, nhà vật lý lý thuyết người Mỹ được mệnh danh là "cha đẻ của bom nguyên tử" vì vai trò của ông trong Dự án Manhattan - chương trình nghiên cứu và phát triển vũ khí hạt nhân đầu tiên của thế giới trong Thế chiến II.
                        </p>
                    </div>

                    <div class="genre-section">
                        <h3>Thể loại</h3>
                        <p id="movieGenre">Lịch sử, Tiểu sử, Chính kịch</p>
                    </div>

                    <div class="ratings-section">
                        <div class="rating-item">
                            <i class="fab fa-imdb"></i>
                            <span id="imdbRating">8.3/10</span>
                        </div>
                        <div class="rating-item">
                            <i class="fas fa-clock"></i>
                            <span id="duration">3 Giờ</span>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <button class="btn-primary" onclick="bookTickets()">
                            <i class="fas fa-ticket-alt"></i>
                            Đặt vé ngay
                        </button>
                        <button class="btn-secondary" onclick="showMovieInfo()">
                            <i class="fas fa-info-circle"></i>
                            Thông tin phim
                        </button>
                    </div>
                </div>
            </div>

            <div class="movie-controls">
                <div class="control-left">
                    <button class="nav-btn" onclick="previousMovie()">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                </div>
                
                <div class="pagination-dots" id="paginationDots">
                    <span class="dot"></span>
                    <span class="dot"></span>
                    <span class="dot"></span>
                    <span class="dot active"></span>
                    <span class="dot"></span>
                    <span class="dot"></span>
                    <span class="dot"></span>
                </div>

                <div class="control-right">
                    <button class="nav-btn" onclick="nextMovie()">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Advanced Search Section -->
    <div class="search-section">
        <div class="search-header" onclick="toggleSearch()">
            <i class="fas fa-chevron-up search-toggle"></i>
            <h2>Tìm kiếm nâng cao phim và TV series</h2>
        </div>
        
        <div class="search-form" id="searchForm">
            <div class="form-grid">
                <div class="form-column">
                    <div class="form-group">
                        <label>Năm phát hành đến</label>
                        <select class="form-select">
                            <option>Chưa chọn</option>
                            <option>2024</option>
                            <option>2023</option>
                            <option>2022</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Điểm IMDB đến</label>
                        <select class="form-select">
                            <option>Chưa chọn</option>
                            <option>9-10</option>
                            <option>8-9</option>
                            <option>7-8</option>
                        </select>
                    </div>
                </div>

                <div class="form-column">
                    <div class="form-group">
                        <label>Năm phát hành từ</label>
                        <select class="form-select">
                            <option>Chưa chọn</option>
                            <option>1990</option>
                            <option>2000</option>
                            <option>2010</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Điểm IMDB từ</label>
                        <select class="form-select">
                            <option>Chưa chọn</option>
                            <option>6+</option>
                            <option>7+</option>
                            <option>8+</option>
                        </select>
                    </div>
                </div>

                <div class="form-column">
                    <div class="form-group">
                        <label>Thể loại</label>
                        <select class="form-select">
                            <option>Tất cả</option>
                            <option>Hành động</option>
                            <option>Tình cảm</option>
                            <option>Kinh dị</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Chất lượng</label>
                        <select class="form-select">
                            <option>Tất cả</option>
                            <option>4K</option>
                            <option>HD</option>
                            <option>Full HD</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Độ tuổi</label>
                        <select class="form-select">
                            <option>Tất cả</option>
                            <option>P</option>
                            <option>T13</option>
                            <option>T16</option>
                            <option>T18</option>
                        </select>
                    </div>
                </div>

                <div class="form-column">
                    <div class="form-group">
                        <label>Loại</label>
                        <select class="form-select">
                            <option>Tất cả</option>
                            <option>Phim lẻ</option>
                            <option>Phim bộ</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Quốc gia</label>
                        <select class="form-select">
                            <option>Tất cả</option>
                            <option>Việt Nam</option>
                            <option>Mỹ</option>
                            <option>Hàn Quốc</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Diễn viên</label>
                        <input type="text" class="form-input" placeholder="Nhập tên diễn viên">
                    </div>
                    <div class="form-group">
                        <label>Đạo diễn</label>
                        <input type="text" class="form-input" placeholder="Nhập tên đạo diễn">
                    </div>
                </div>
            </div>

            <div class="form-bottom">
                <button class="btn-search">Áp dụng bộ lọc và tìm kiếm</button>
                
                <div class="sort-section">
                    <label>Sắp xếp</label>
                    <select class="form-select">
                        <option>Theo điểm IMDB</option>
                        <option>Theo năm phát hành</option>
                        <option>Theo tên phim</option>
                    </select>
                </div>

                <div class="toggle-section">
                    <div class="toggle-item">
                        <span>Phụ đề</span>
                        <div class="toggle-switch active">
                            <div class="toggle-circle"></div>
                        </div>
                    </div>
                    <div class="toggle-item">
                        <span>Lồng tiếng</span>
                        <div class="toggle-switch">
                            <div class="toggle-circle"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recommended Movies Section -->
    <div class="recommended-section">
        <div class="section-header">
            <div class="nav-controls">
                <button class="nav-btn" onclick="slideMovies('left')">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button class="nav-btn" onclick="slideMovies('right')">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
            <h2>Phim đề xuất</h2>
        </div>

        <div class="movies-grid" id="moviesGrid">
            <div class="movie-card">
                <div class="movie-poster">
                    <img src="https://image.tmdb.org/t/p/w500/rAiYTfKGqDCRIIqo664sY9XZIvQ.jpg" alt="Tick Tick... Boom!" loading="lazy">
                </div>
                <div class="movie-meta">
                    <div class="meta-item">
                        <i class="fab fa-imdb"></i>
                        <span>7.5</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-clock"></i>
                        <span>1h 55m</span>
                    </div>
                </div>
                <h3 class="movie-name">Tick Tick... Boom 2021</h3>
            </div>

            <div class="movie-card featured">
                <div class="movie-poster-overlay">
                    <div class="overlay-content">
                        <h3>Tóm tắt nội dung</h3>
                        <p>Ethan Hunt và đội IMF phải đuổi theo một vũ khí cực kỳ nguy hiểm trước khi nó rơi vào tay kẻ xấu...</p>
                        <div class="overlay-cursor">
                            <i class="fas fa-mouse-pointer"></i>
                        </div>
                        <div class="overlay-details">
                            <div class="detail-col">
                                <span class="detail-label">Thể loại</span>
                                <span class="detail-value">Hành động, Phiêu lưu, Ly kỳ</span>
                            </div>
                            <div class="detail-col">
                                <span class="detail-label">Độ tuổi</span>
                                <span class="detail-value">T13</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="movie-meta">
                    <div class="meta-item">
                        <i class="fab fa-imdb"></i>
                        <span>7.6</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-clock"></i>
                        <span>2h 43m</span>
                    </div>
                </div>
                <h3 class="movie-name">Mission Impossible</h3>
            </div>

            <div class="movie-card">
                <div class="movie-poster">
                    <img src="https://image.tmdb.org/t/p/w500/dKqa850uvbNSCaQCV4Im1XlzEtQ.jpg" alt="Killers of the Flower Moon" loading="lazy">
                </div>
                <div class="movie-meta">
                    <div class="meta-item">
                        <i class="fab fa-imdb"></i>
                        <span>8.0</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-clock"></i>
                        <span>3h 26m</span>
                    </div>
                </div>
                <h3 class="movie-name">Killers Of The Flower...</h3>
            </div>

            <div class="movie-card">
                <div class="movie-poster">
                    <img src="https://image.tmdb.org/t/p/w500/t6HIqrRAclMCA60NsSmeqe9RmNV.jpg" alt="Avatar: The Way of Water" loading="lazy">
                </div>
                <div class="movie-meta">
                    <div class="meta-item">
                        <i class="fab fa-imdb"></i>
                        <span>7.7</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-clock"></i>
                        <span>3h 12m</span>
                    </div>
                </div>
                <h3 class="movie-name">Avatar The Way Of...</h3>
            </div>

            <div class="movie-card">
                <div class="movie-poster">
                    <img src="https://image.tmdb.org/t/p/w500/8Gxv8gSFCU0XGDykEGv7zR1n2ua.jpg" alt="Oppenheimer" loading="lazy">
                </div>
                <div class="movie-meta">
                    <div class="meta-item">
                        <i class="fab fa-imdb"></i>
                        <span>8.3</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-clock"></i>
                        <span>3h 5m</span>
                    </div>
                </div>
                <h3 class="movie-name">Oppenheimer 2023</h3>
            </div>
        </div>

        <button class="view-all-btn">
            <i class="fas fa-chevron-left"></i>
            <span>Xem tất cả</span>
        </button>
    </div>

    <!-- Featured Banner Section -->
    <div class="featured-banner">
        <div class="banner-content">
            <div class="banner-info">
                <div class="banner-header">
                    <h2 class="banner-title">Peaky Blinders</h2>
                    <p class="banner-title-vn">Băng đảng Peaky Blinders</p>
                </div>
                
                <div class="banner-plot">
                    <h3>Tóm tắt nội dung</h3>
                    <p>Trong thập niên 20, khi các băng đảng ở thành phố Birmingham, Anh ngày càng nhiều, một băng đảng cố gắng đưa mình lên vị trí quyền lực trong thập kỷ này...</p>
                </div>

                <div class="banner-genre">
                    <h3>Thể loại</h3>
                    <p>Hành động, Chính kịch, Tội phạm</p>
                </div>

                <div class="banner-ratings">
                    <div class="rating-item">
                        <i class="fab fa-imdb"></i>
                        <span>8.8/10</span>
                    </div>
                    <div class="rating-item">
                        <i class="fas fa-clock"></i>
                        <span>60 phút</span>
                    </div>
                </div>

                <button class="btn-banner">
                    Xem và tải về với tất cả chất lượng
                </button>
            </div>
        </div>
    </div>
</div>

<style>
.cinema-homepage {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    background: #303030;
    color: white;
    width: 100%;
    overflow-x: hidden;
}

/* Hero Section */
.hero-section {
    background: linear-gradient(107deg, rgba(0, 0, 0, 0.00) 36.24%, rgba(14, 14, 14, 0.55) 57.42%, rgba(12, 12, 12, 0.99) 76.93%), 
                url('https://image.tmdb.org/t/p/original/8Gxv8gSFCU0XGDykEGv7zR1n2ua.jpg') lightgray 50% / cover no-repeat;
    min-height: 707px;
    padding: 40px 94px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-end;
    position: relative;
}

/* Navigation */
.hero-nav {
    width: 100%;
    margin-bottom: 20px;
}

.nav-content {
    display: flex;
    align-items: center;
    gap: 12px;
    width: 100%;
}

.nav-left {
    display: flex;
    align-items: center;
    gap: 16px;
    flex: 1;
}

.auth-buttons {
    display: flex;
    gap: 16px;
}

.btn-register, .btn-login {
    padding: 6px 16px;
    border-radius: 4px;
    text-decoration: none;
    font-size: 14px;
    font-weight: 400;
    color: white;
    text-shadow: 0px 2px 4px rgba(0, 0, 0, 0.20);
    text-align: center;
    transition: all 0.3s ease;
}

.btn-register {
    background: #df2144;
}

.btn-login {
    border: 1px solid #df2144;
    color: #df2144;
}

.search-box {
    background: #222;
    border-radius: 4px;
    padding: 4px 8px;
    display: flex;
    align-items: center;
    gap: 12px;
    flex: 1;
    max-width: 300px;
}

.search-input {
    background: none;
    border: none;
    color: #eaeaea;
    font-size: 16px;
    flex: 1;
    outline: none;
}

.search-input::placeholder {
    color: #eaeaea;
    opacity: 0.7;
}

.search-icon {
    color: #eaeaea;
    width: 24px;
    height: 24px;
}

.nav-center {
    display: flex;
    align-items: center;
    flex: 1;
}

.nav-links {
    display: flex;
    align-items: center;
    gap: 8px;
    width: 100%;
}

.nav-link {
    color: white;
    text-decoration: none;
    font-size: 15px;
    padding: 8px 16px;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
}

.nav-link.active {
    font-size: 18px;
    font-weight: 700;
    flex-direction: column;
    position: relative;
}

.nav-underline {
    width: 85px;
    height: 2px;
    background: #df2144;
    border-radius: 1px;
}

.nav-right {
    display: flex;
    align-items: center;
    gap: 20px;
}

.divider {
    width: 2px;
    height: 50px;
    background: white;
    border-radius: 1px;
}

.brand {
    text-align: right;
}

.brand-header {
    display: flex;
    align-items: center;
    gap: 8px;
    justify-content: flex-end;
}

.brand-name {
    font-size: 12px;
    font-weight: 700;
    color: white;
}

.brand-logo {
    width: 40px;
    height: 32px;
    background: #df2144;
    border-radius: 4px;
}

.brand-subtitle {
    font-size: 13px;
    color: white;
    margin-top: 4px;
}

/* Movie Content */
.movie-content {
    display: flex;
    flex-direction: column;
    gap: 12px;
    max-width: 600px;
    align-self: flex-end;
}

.movie-header {
    display: flex;
    align-items: center;
    gap: 10px;
}

.movie-title {
    font-size: 40px;
    font-weight: 700;
    color: white;
    text-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
    margin: 0;
}

.movie-title-vn {
    font-size: 12px;
    color: #757575;
    text-shadow: 0px 4px 8px rgba(0, 0, 0, 0.25);
    margin: 0;
}

.movie-details {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.plot-section h3, .genre-section h3 {
    font-size: 20px;
    font-weight: 700;
    color: white;
    margin: 0 0 10px 0;
    text-align: right;
}

.plot-section p {
    color: white;
    font-size: 12px;
    line-height: 1.5;
    text-align: justify;
    margin: 0;
}

.genre-section {
    text-align: center;
}

.genre-section p {
    color: white;
    font-size: 12px;
    margin: 0;
}

.ratings-section {
    display: flex;
    justify-content: center;
    gap: 20px;
    padding: 0 36px;
}

.rating-item {
    display: flex;
    align-items: center;
    gap: 8px;
    color: white;
    font-size: 16px;
}

.rating-item i {
    color: #ffd600;
    width: 24px;
    height: 24px;
}

.action-buttons {
    display: flex;
    gap: 12px;
}

.btn-primary, .btn-secondary {
    padding: 8px 24px;
    border: none;
    border-radius: 4px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
    flex: 1;
    justify-content: center;
    text-decoration: none;
}

.btn-primary {
    background: #df2144;
    color: white;
    text-shadow: 0px 2px 4px rgba(0, 0, 0, 0.20);
}

.btn-secondary {
    background: transparent;
    border: 1px solid #df2144;
    color: #df2144;
}

.btn-primary:hover {
    background: #c01e3e;
    transform: translateY(-2px);
}

.btn-secondary:hover {
    background: #df2144;
    color: white;
}

/* Movie Controls */
.movie-controls {
    display: flex;
    align-items: center;
    gap: 24px;
    margin-top: 20px;
}

.control-left, .control-right {
    display: flex;
    align-items: center;
}

.nav-btn {
    background: #1e1e1e;
    border: none;
    border-radius: 24px;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    color: #df2144;
    transition: all 0.3s ease;
}

.nav-btn:hover {
    background: #333;
    transform: scale(1.1);
}

.pagination-dots {
    display: flex;
    gap: 16px;
    align-items: center;
}

.dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #df2144;
    cursor: pointer;
    transition: all 0.3s ease;
}

.dot.active {
    width: 12px;
    height: 12px;
    filter: drop-shadow(3px 0px 15px rgba(223, 33, 68, 0.8));
}

/* Search Section */
.search-section {
    margin: 28px auto 0;
    max-width: 1251px;
    width: 100%;
    padding: 0 20px;
}

.search-header {
    background: #202020;
    border-radius: 8px 8px 0 0;
    padding: 18px 25px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    cursor: pointer;
}

.search-header h2 {
    color: white;
    font-size: 24px;
    font-weight: 700;
    margin: 0;
    flex: 1;
    text-align: center;
}

.search-toggle {
    color: #df2144;
    width: 40px;
    height: 40px;
    transition: transform 0.3s ease;
}

.search-toggle.collapsed {
    transform: rotate(180deg);
