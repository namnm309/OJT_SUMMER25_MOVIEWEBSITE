function bookTickets() {
    window.location.href = '@Url.Action("Index", "Movies")';
}

function showMovieInfo() {
    const movieId = currentMovieIndex + 1; // Simple ID mapping
    window.location.href = `@Url.Action("Details", "Movies")?id=${movieId}`;
}

