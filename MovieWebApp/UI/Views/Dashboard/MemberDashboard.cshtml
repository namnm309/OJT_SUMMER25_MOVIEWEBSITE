@{
    ViewData["Title"] = "Bảng điều khiển";
}

<div class="row">
    <div class="col-12">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-tachometer-alt me-2"></i>
                Chào mừng, @ViewBag.UserName!
            </h1>
            <p class="page-subtitle">Hệ thống quản lý rạp chiếu phim</p>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="dashboard-card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-bolt me-2"></i>Thao tác nhanh
                </h5>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-primary w-100">
                            <i class="fas fa-user-edit me-2"></i>Chỉnh sửa hồ sơ
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a asp-controller="Account" asp-action="Members" class="btn btn-outline-success w-100">
                            <i class="fas fa-users me-2"></i>Xem danh sách thành viên
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline w-100">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger w-100">
                                <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- User Info -->
<div class="row">
    <div class="col-12">
        <div class="dashboard-card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-user-circle me-2"></i>Thông tin tài khoản
                </h5>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Tên đăng nhập:</strong> @ViewBag.UserName</p>
                        <p><strong>Email:</strong> @ViewBag.Email</p>
                        <p><strong>Vai trò:</strong> 
                            @if(ViewBag.Role == "Admin")
                            {
                                <span class="badge bg-danger">@ViewBag.Role</span>
                            }
                            else if(ViewBag.Role == "Staff")
                            {
                                <span class="badge bg-warning">@ViewBag.Role</span>
                            }
                            else
                            {
                                <span class="badge bg-info">@ViewBag.Role</span>
                            }
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Họ tên:</strong> @ViewBag.FullName</p>
                        <p><strong>Trạng thái:</strong> 
                            @if(ViewBag.IsActive)
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Không hoạt động</span>
                            }
                        </p>
                        <p><strong>Ngày tạo:</strong> @ViewBag.CreatedAt</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 