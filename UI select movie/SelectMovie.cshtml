<script>
    let selectedMovie = null;

    function selectMovie(button) {
        const movieCard = button.closest('.movie-card');
        const movieId = movieCard.dataset.movieId;
        const movieTitle = movieCard.dataset.movieTitle;
        const movieGenre = movieCard.dataset.movieGenre;
        const movieDuration = movieCard.dataset.movieDuration;
        const moviePrice = movieCard.dataset.moviePrice;

        // Remove selection from all cards
        document.querySelectorAll('.movie-card').forEach(card => {
            card.classList.remove('selected');
        });
        document.querySelectorAll('.select-button').forEach(btn => {
            btn.classList.remove('selected');
            btn.textContent = 'Ch·ªçn Phim';
        });

        // Add selection to current card
        movieCard.classList.add('selected');
        button.classList.add('selected');
        button.textContent = 'ƒê√£ Ch·ªçn';

        // Update selected movie data
        selectedMovie = {
            id: movieId,
            title: movieTitle,
            genre: movieGenre,
            duration: movieDuration,
            price: moviePrice
        };

        updateSelectionDisplay();
    }

    function updateSelectionDisplay() {
        const selectedCountElement = document.getElementById('selectedCount');
        const selectionStatusElement = document.getElementById('selectionStatus');
        const selectedMovieDisplayElement = document.getElementById('selectedMovieDisplay');
        const continueBtn = document.getElementById('continueBtn');

        if (selectedMovie) {
            selectedCountElement.textContent = '1';
            selectionStatusElement.textContent = 'ƒê√£ ch·ªçn';
            
            selectedMovieDisplayElement.innerHTML = `
                <div class="selected-movie-info">
                    <div class="selected-movie-title">${selectedMovie.title}</div>
                    <div class="selected-movie-meta">${selectedMovie.genre} ‚Ä¢ ${selectedMovie.duration} ph√∫t</div>
                </div>
            `;
            
            continueBtn.disabled = false;
        } else {
            selectedCountElement.textContent = '0';
            selectionStatusElement.textContent = 'Ch∆∞a ch·ªçn';
            selectedMovieDisplayElement.innerHTML = '<div class="no-selection">Vui l√≤ng ch·ªçn m·ªôt b·ªô phim t·ª´ danh s√°ch b√™n tr√°i</div>';
            continueBtn.disabled = true;
        }
    }

    // Handle continue button click
    document.getElementById('continueBtn').addEventListener('click', function() {
        if (selectedMovie) {
            // Redirect to seat selection page
            window.location.href = `/BookingManagement/Booking/SelectSeat?movieId=${selectedMovie.id}`;
        }
    });

    // Initialize display
    updateSelectionDisplay();
</script>