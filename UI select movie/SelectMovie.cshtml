@model UI.Areas.BookingManagement.Models.SelectMovieViewModel
@{
    ViewData["Title"] = "Ch·ªçn Phim";
    Layout = "_Layout";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%) !important;
        color: white !important;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif !important;
        min-height: 100vh;
    }

    .main-container {
        display: grid;
        grid-template-columns: 1fr 400px;
        gap: 2rem;
        padding: 2rem;
        max-width: 1400px;
        margin: 0 auto;
        min-height: 100vh;
    }

    .movie-section {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .page-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        background: linear-gradient(45deg, #fff, #87ceeb);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .page-subtitle {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.8);
    }

    .movies-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .movie-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
        cursor: pointer;
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        position: relative;
    }

    .movie-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(135, 206, 235, 0.3);
        border-color: rgba(135, 206, 235, 0.5);
    }

    .movie-card.selected {
        border-color: #667eea;
        box-shadow: 0 0 20px rgba(102, 126, 234, 0.6);
        transform: translateY(-5px);
    }

    .movie-poster {
        width: 100%;
        height: 400px;
        position: relative;
        overflow: hidden;
    }

    .movie-poster img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .movie-card:hover .movie-poster img {
        transform: scale(1.05);
    }

    .movie-info {
        padding: 1.5rem;
    }

    .movie-title {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: white;
    }

    .movie-genre {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 1rem;
    }

    .movie-duration {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.6);
        margin-bottom: 1rem;
    }

    .select-button {
        width: 100%;
        padding: 0.8rem;
        background: linear-gradient(45deg, #87ceeb, #4682b4);
        border: none;
        border-radius: 8px;
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

    .select-button:hover {
        background: linear-gradient(45deg, #4682b4, #87ceeb);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(135, 206, 235, 0.4);
    }

    .select-button.selected {
        background: linear-gradient(45deg, #667eea, #764ba2) !important;
        box-shadow: 0 0 15px rgba(102, 126, 234, 0.5);
    }

    /* Booking section - sidebar b√™n ph·∫£i */
    .booking-section {
        width: 350px;
        padding: 1rem;
    }

    .movie-selection-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 1.5rem;
        color: white;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .card-header h3 {
        margin: 0;
        font-size: 1rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .selection-icon {
        font-size: 1.5rem;
    }

    .selection-details {
        margin-bottom: 1.5rem;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.8rem;
        font-size: 0.9rem;
    }

    .label {
        color: rgba(255, 255, 255, 0.8);
    }

    .value {
        font-weight: 600;
    }

    .selected-movie-display {
        margin: 1.5rem 0;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        min-height: 60px;
        text-align: center;
    }

    .no-selection {
        color: rgba(255, 255, 255, 0.6);
        font-style: italic;
    }

    .selected-movie-info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .selected-movie-title {
        font-weight: 600;
        font-size: 1rem;
    }

    .selected-movie-meta {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.8);
    }

    .btn-continue {
        width: 100%;
        padding: 1rem;
        background: rgba(0, 0, 0, 0.8);
        border: none;
        border-radius: 10px;
        color: white;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-continue:hover:not(:disabled) {
        background: rgba(0, 0, 0, 0.9);
        transform: translateY(-2px);
    }

    .btn-continue:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .empty-state i {
        font-size: 3rem;
        margin-bottom: 1rem;
        color: rgba(255, 255, 255, 0.3);
    }

    /* Responsive */
    @@media (max-width: 1024px) {
        .main-container {
            grid-template-columns: 1fr;
        }

        .booking-section {
            width: 100%;
            margin-top: 2rem;
        }

        .movies-grid {
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        }
    }

    @@media (max-width: 768px) {
        .main-container {
            padding: 1rem;
        }

        .movies-grid {
            grid-template-columns: 1fr;
        }

        .page-title {
            font-size: 2rem;
        }
    }
</style>

