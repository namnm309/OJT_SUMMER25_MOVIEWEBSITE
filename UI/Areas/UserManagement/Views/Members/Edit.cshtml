    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>

        document.addEventListener('DOMContentLoaded', function() {
            initializeForm();
            setupPasswordToggle();
            loadUserData();
        });
        

        function initializeForm() {
            const form = document.getElementById('editUserForm');
            form.addEventListener('submit', handleSubmit);
            

            const inputs = form.querySelectorAll('input, select');
            inputs.forEach(input => {
                input.addEventListener('blur', validateField);
                input.addEventListener('input', clearFieldError);
            });
        }
        

        function setupPasswordToggle() {
            const toggleBtn = document.getElementById('togglePasswordBtn');
            const passwordSection = document.getElementById('passwordSection');
            const newPasswordInput = document.getElementById('newPassword');
            const confirmPasswordInput = document.getElementById('confirmNewPassword');
            
            toggleBtn.addEventListener('click', function() {
                const isVisible = passwordSection.classList.contains('show');
                
                if (isVisible) {
                    passwordSection.classList.remove('show');
                    toggleBtn.innerHTML = '<i class="fas fa-key me-1"></i>Đổi mật khẩu';

                    newPasswordInput.value = '';
                    confirmPasswordInput.value = '';
                    newPasswordInput.removeAttribute('required');
                    confirmPasswordInput.removeAttribute('required');
                } else {
                    passwordSection.classList.add('show');
                    toggleBtn.innerHTML = '<i class="fas fa-times me-1"></i>Hủy đổi mật khẩu';
                    newPasswordInput.setAttribute('required', 'required');
                    confirmPasswordInput.setAttribute('required', 'required');
                    

                    newPasswordInput.addEventListener('input', checkPasswordStrength);
                    confirmPasswordInput.addEventListener('input', checkPasswordMatch);
                }
            });
        }
        

        function loadUserData() {

            const userData = {
                id: '12345',
                username: 'johndoe',
                fullName: 'John Doe',
                email: 'john.doe@example.com',
                phone: '0123456789',
                role: 'Admin',
                status: true,
                dateOfBirth: '1990-01-15',
                gender: 'Male',
                address: '123 Main Street, City, Country',
                joinDate: '15/01/2024'
            };
            

            document.getElementById('userId').value = userData.id;
            document.getElementById('username').value = userData.username;
            document.getElementById('fullName').value = userData.fullName;
            document.getElementById('email').value = userData.email;
            document.getElementById('phone').value = userData.phone;
            document.getElementById('role').value = userData.role;
            document.getElementById('status').value = userData.status.toString();
            document.getElementById('dateOfBirth').value = userData.dateOfBirth;
            document.getElementById('gender').value = userData.gender;
            document.getElementById('address').value = userData.address;
            

            document.getElementById('currentUserId').textContent = '#' + userData.id;
            document.getElementById('currentUserName').textContent = userData.fullName;
            document.getElementById('currentJoinDate').textContent = userData.joinDate;
            

            const statusBadge = document.getElementById('currentStatus');
            statusBadge.textContent = userData.status ? 'Hoạt động' : 'Không hoạt động';
            statusBadge.className = `status-badge ${userData.status ? 'status-active' : 'status-inactive'}`;
            

            const roleBadge = document.getElementById('currentRole');
            roleBadge.textContent = userData.role;
            roleBadge.className = `role-badge role-${userData.role.toLowerCase()}`;
        }
        

        function checkPasswordStrength() {
            const password = document.getElementById('newPassword').value;
            const strengthContainer = document.getElementById('passwordStrength');
            

            const hasLength = password.length >= 8;
            const hasUppercase = /[A-Z]/.test(password);
            const hasLowercase = /[a-z]/.test(password);
            const hasNumber = /\d/.test(password);
            

            document.getElementById('req-length').className = hasLength ? 'requirement-met' : '';
            document.getElementById('req-uppercase').className = hasUppercase ? 'requirement-met' : '';
            document.getElementById('req-lowercase').className = hasLowercase ? 'requirement-met' : '';
            document.getElementById('req-number').className = hasNumber ? 'requirement-met' : '';
            

            const score = [hasLength, hasUppercase, hasLowercase, hasNumber].filter(Boolean).length;
            

            strengthContainer.className = 'password-strength';
            if (score >= 4) {
                strengthContainer.classList.add('strength-strong');
            } else if (score >= 2) {
                strengthContainer.classList.add('strength-medium');
            } else if (score >= 1) {
                strengthContainer.classList.add('strength-weak');
            }
        }
        

        function checkPasswordMatch() {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmNewPassword').value;
            const confirmInput = document.getElementById('confirmNewPassword');
            
            if (confirmPassword && newPassword !== confirmPassword) {
                confirmInput.classList.add('is-invalid');
            } else {
                confirmInput.classList.remove('is-invalid');
            }
        }
        

        function validateField(event) {
            const field = event.target;
            const value = field.value.trim();
            

            field.classList.remove('is-invalid', 'is-valid');
            

            let isValid = true;
            
            if (field.hasAttribute('required') && !value) {
                isValid = false;
            } else if (field.type === 'email' && value) {
                const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                isValid = emailRegex.test(value);
            } else if (field.id === 'username' && value) {
                isValid = value.length >= 3 && /^[a-zA-Z0-9_]+$/.test(value);
            } else if (field.id === 'newPassword' && value) {
                isValid = value.length >= 8;
            }
            

            if (value) {
                field.classList.add(isValid ? 'is-valid' : 'is-invalid');
            }
            
            return isValid;
        }
        

        function clearFieldError(event) {
            const field = event.target;
            field.classList.remove('is-invalid');
        }
        

        function handleSubmit(event) {
            event.preventDefault();
            
            const form = event.target;
            const formData = new FormData(form);
            const errors = [];
            const passwordSection = document.getElementById('passwordSection');
            const isChangingPassword = passwordSection.classList.contains('show');
            

            const requiredFields = form.querySelectorAll('[required]');
            requiredFields.forEach(field => {
                if (!validateField({ target: field })) {
                    errors.push(`${field.previousElementSibling.textContent.replace(' *', '')} không hợp lệ`);
                }
            });
            

            if (isChangingPassword) {
                const newPassword = document.getElementById('newPassword').value;
                const confirmPassword = document.getElementById('confirmNewPassword').value;
                if (newPassword !== confirmPassword) {
                    errors.push('Mật khẩu xác nhận không khớp');
                }
            }
            

            if (errors.length > 0) {
                showValidationErrors(errors);
                return;
            }
            

            hideValidationErrors();
            submitForm(formData, isChangingPassword);
        }
        

        function showValidationErrors(errors) {
            const errorContainer = document.getElementById('validationErrors');
            const errorList = document.getElementById('errorList');
            
            errorList.innerHTML = errors.map(error => `<li>${error}</li>`).join('');
            errorContainer.style.display = 'block';
            

            errorContainer.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
        

        function hideValidationErrors() {
            document.getElementById('validationErrors').style.display = 'none';
        }
        

        function submitForm(formData, isChangingPassword) {
            const saveBtn = document.getElementById('saveBtn');
            

            saveBtn.disabled = true;
            saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Đang cập nhật...';
            

            setTimeout(() => {
                const message = isChangingPassword ? 
                    'Cập nhật thông tin và mật khẩu thành công!' : 
                    'Cập nhật thông tin thành công!';
                alert(message);
                window.location.href = '/UserManagement/Members';
            }, 2000);
        }
    </script>
