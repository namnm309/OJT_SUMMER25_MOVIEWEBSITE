@model SearchMovieViewModel
@{
    ViewData["Title"] = "Tìm kiếm phim";
    Layout = "_Layout";
}

<div class="container-fluid bg-dark text-white min-vh-100 py-4">
    <div class="container">
        <div class="text-center mb-4">
            <h1 class="text-danger">Tìm Kiếm Phim</h1>
        </div>

        
        <div class="row justify-content-center mb-4">
            <div class="col-md-6">
                <form method="get" asp-action="SearchMovies">
                    <div class="input-group">
                        <input type="text" name="searchTerm" value="@Model.SearchTerm" 
                               class="form-control form-control-lg bg-dark text-white border-secondary" 
                               placeholder="Nhập tên phim..." required>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-search"></i> Tìm kiếm
                        </button>
                    </div>
                </form>
            </div>
        </div>

        
        @if (Model.HasSearched)
        {
            <div class="text-center mb-4">
                <p class="text-muted">Tìm thấy <strong>@Model.TotalResults</strong> kết quả cho "<strong>@Model.SearchTerm</strong>"</p>
            </div>

            @if (Model.Results.Any())
            {
                <div class="row">
                    @foreach (var movie in Model.Results)
                    {
                        <div class="col-md-4 col-lg-3 mb-4">
                            <div class="card bg-secondary text-white h-100">
                                <img src="@movie.Poster" alt="@movie.Title" class="card-img-top" style="height: 300px; object-fit: cover;">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@movie.Title</h5>
                                    <p class="card-text text-muted">@movie.Genre</p>
                                    <p class="card-text">
                                        <small><i class="fas fa-clock"></i> @movie.Duration phút</small><br>
                                        <small class="text-success"><i class="fas fa-money-bill"></i> @String.Format("{0:N0}", movie.Price) VNĐ</small>
                                    </p>
                                    <div class="mt-auto">
                                        <a href="/BookingManagement/Booking/SelectMovie" class="btn btn-danger btn-sm w-100">
                                            <i class="fas fa-ticket-alt"></i> Đặt vé
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center">
                    <div class="alert alert-warning">
                        <h4><i class="fas fa-exclamation-triangle"></i> Không tìm thấy kết quả</h4>
                        <p>Không có phim nào phù hợp với từ khóa "<strong>@Model.SearchTerm</strong>"</p>
                        <a href="/BookingManagement/Booking/SelectMovie" class="btn btn-primary">
                            <i class="fas fa-film"></i> Xem tất cả phim
                        </a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-muted">
                <i class="fas fa-search fa-3x mb-3"></i>
                <h4>Nhập từ khóa để tìm kiếm phim</h4>
                <p>Hãy nhập tên phim, thể loại hoặc diễn viên để tìm kiếm</p>
            </div>
        }

        
        <div class="text-center mt-5">
            <a href="/BookingManagement/Booking/SelectMovie" class="btn btn-outline-light me-2">
                <i class="fas fa-arrow-left"></i> Quay lại chọn phim
            </a>
            <a href="/Dashboard" class="btn btn-outline-success">
                <i class="fas fa-home"></i> Trang chủ
            </a>
        </div>
    </div>
</div> 