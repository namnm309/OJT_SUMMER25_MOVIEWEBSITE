@{
    ViewData["Title"] = "Đặt vé";
    Layout = null;
    ViewBag.PageTitle = "Đặt vé";
    ViewBag.ParentTitle = "Dashboard";
    ViewBag.ParentUrl = Url.Action("AdminDashboard", "Dashboard");
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema City</title>
    
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/new-dashboard.css" />
    
    <link rel="stylesheet" href="~/css/book-ticket.css" />
    
    <link rel="stylesheet" href="~/css/book-ticket-fix.css" />
    <link rel="stylesheet" href="~/css/shared-action-buttons.css" />
    
</head>
<body>
    
    
    <div class="new-dashboard-layout">
        
        
        @await Html.PartialAsync("~/Views/Shared/_DashboardSidebar.cshtml")

        
        <main class="new-dashboard-main">
            <div class="movie-management-content">
                
                <div class="movie-page-header">
                    @await Html.PartialAsync("~/Views/Shared/_DashboardBreadcrumb.cshtml")
                    <h1 class="movie-page-title">
                        <i class="fas fa-ticket-alt"></i>
                        Đặt vé cho khách hàng
                    </h1>
                    <p class="movie-page-subtitle">Hỗ trợ khách hàng đặt vé xem phim tại quầy</p>
                </div>
                
                
                <div class="booking-container">
                    
                    <div class="booking-steps">
                        <div class="step active" data-step="1">
                            <div class="step-number">1</div>
                            <div class="step-title">Chọn phim & suất chiếu</div>
                        </div>
                        <div class="step" data-step="2">
                            <div class="step-number">2</div>
                            <div class="step-title">Chọn ghế</div>
                        </div>
                        <div class="step" data-step="3">
                            <div class="step-number">3</div>
                            <div class="step-title">Xác nhận & thanh toán</div>
                        </div>
                    </div>

                    
                    <div class="step-content">
                        
                        <div class="step-panel active" id="step1">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="card">
                                                <div class="card-header">
            <h5><i class="fas fa-film me-2"></i>Chọn phim</h5>
        </div>
                                        <div class="card-body">
                                            <div class="movie-selection mb-3">
                                                <label for="movieSelect" class="form-label">Chọn phim:</label>
                                                <select class="form-select" id="movieSelect">
                                                    <option value="">-- Chọn phim --</option>
                                                    
                                                </select>
                                            </div>
                                            <div class="selected-movie-info" id="selectedMovieInfo" style="display: none;">
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5><i class="fas fa-clock me-2"></i>Lịch chiếu</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="showtime-selection" id="showtimeSelection">
                                                <p class="text-muted">Vui lòng chọn phim trước</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        
                        <div class="step-panel" id="step2">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5><i class="fas fa-couch me-2"></i>Sơ đồ ghế</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="cinema-screen">
                                                <div class="screen">
                                                    <i class="fas fa-tv me-2"></i>
                                                    MÀN HÌNH
                                                </div>
                                            </div>
                                            <div class="seat-map" id="seatMap">
                                                
                                            </div>
                                            <div class="seat-legend">
                                                <div class="legend-item">
                                                    <div class="legend-seat"></div>
                                                    <span><i class="fas fa-circle me-1"></i>Ghế trống</span>
                                                </div>
                                                <div class="legend-item">
                                                    <div class="legend-seat"></div>
                                                    <span><i class="fas fa-check-circle me-1"></i>Ghế đã chọn</span>
                                                </div>
                                                <div class="legend-item">
                                                    <div class="legend-seat"></div>
                                                    <span><i class="fas fa-times-circle me-1"></i>Ghế đã đặt</span>
                                                </div>
                                                <div class="legend-item">
                                                    <div class="legend-seat"></div>
                                                    <span><i class="fas fa-star me-1"></i>Ghế VIP</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5><i class="fas fa-list me-2"></i>Ghế đã chọn</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="selected-seats" id="selectedSeats">
                                                <p class="text-muted">Chưa có ghế nào được chọn</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        
                        <div class="step-panel" id="step3">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5><i class="fas fa-user me-2"></i>Thông tin khách hàng</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="customer-search mb-3">
                                                <div class="input-group">
                                                    <input type="text" class="form-control" id="customerPhone" placeholder="Nhập số điện thoại khách hàng">
                                                    <button class="btn btn-primary" type="button" id="searchCustomer">
                                                        <i class="fas fa-search"></i> Tìm kiếm
                                                    </button>
                                                    <button class="btn btn-success" type="button" id="createCustomer">
                                                        <i class="fas fa-user-plus"></i> Tạo mới
                                                    </button>
                                                </div>
                                                <!-- Thông báo tìm kiếm -->
                                                <div id="searchMessage" class="mt-2" style="display: none;"></div>
                                            </div>
                                            <div class="customer-info" id="customerInfo" style="display: none;">
                                                
                                            </div>
                                            
                                            <div class="points-usage mt-3">
                                                <label for="usePoints" class="form-label">Sử dụng điểm thưởng:</label>
                                                <input type="number" class="form-control" id="usePoints" 
                                                       min="0" max="0" value="0"
                                                       placeholder="Nhập số điểm muốn sử dụng">
                                                <small class="text-muted">1 điểm = 1,000 VNĐ</small>
                                            </div>
                                            
                                            @* <div class="payment-methods mt-4">
                                                <h6>Phương thức thanh toán</h6>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="paymentMethod" id="cashPayment" value="cash" checked>
                                                    <label class="form-check-label" for="cashPayment">
                                                        <i class="fas fa-money-bill-wave me-2"></i>Tiền mặt
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="paymentMethod" id="vnpayPayment" value="vnpay">
                                                    <label class="form-check-label" for="vnpayPayment">
                                                        <i class="fas fa-credit-card me-2"></i>VNPay
                                                    </label>
                                                </div>
                                            </div> *@
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="card order-summary-card">
                                        <div class="card-header order-summary-header">
                                            <h5>
                                                <i class="fas fa-receipt me-2"></i>
                                                Tóm tắt đơn hàng
                                            </h5>
                                        </div>
                                        <div class="promotion-selection mb-3">
                                            <label for="promotionSelect" class="form-label">
                                                <i class="fas fa-tags me-1"></i> Chọn khuyến mãi:
                                            </label>
                                            <select class="form-select" id="promotionSelect">
                                                <option value="">Không áp dụng</option>
                                            </select>
                                        </div>
                                        <div class="card-body order-summary-body">
                                            <div class="order-summary" id="orderSummary">
                                                <!-- Nội dung tóm tắt đơn hàng sẽ được JS render -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    
                    <div class="booking-navigation">
                        <button type="button" class="btn btn-secondary" id="prevBtn" style="display: none;">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại
                        </button>
                        <button type="button" class="btn btn-primary" id="nextBtn">
                            Tiếp theo <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                        <button type="button" class="btn btn-success" id="confirmBtn" style="display: none;">
                            <i class="fas fa-check me-2"></i>Xác nhận đặt vé
                        </button>
                    </div>
                </div>
            </div>
        </main>
    </div>

    
    <div class="loading-overlay" id="loadingOverlay" style="display: none;">
        <div class="loading-spinner">
            <i class="fas fa-spinner fa-spin"></i>
            <p>Đang xử lý...</p>
        </div>
    </div>

    <!-- Modal xác nhận đặt vé -->
    <div class="modal fade" id="bookingConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="bookingConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="bookingConfirmationModalLabel">Xác nhận đặt vé</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="booking-confirmation-details">
                        <div class="text-center mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                            <h4 class="text-success mt-2">Đặt vé thành công!</h4>
                        </div>
                        
                        <div class="confirmation-item">
                            <strong>Mã đặt vé:</strong>
                            <span class="booking-code fw-bold text-primary"></span>
                        </div>
                        <div class="confirmation-item">
                            <strong>Phim:</strong>
                            <span class="movie-title"></span>
                        </div>
                        <div class="confirmation-item">
                            <strong>Phòng chiếu:</strong>
                            <span class="cinema-room"></span>
                        </div>
                        <div class="confirmation-item">
                            <strong>Ngày chiếu:</strong>
                            <span class="show-date"></span>
                        </div>
                        <div class="confirmation-item">
                            <strong>Giờ chiếu:</strong>
                            <span class="show-time"></span>
                        </div>
                        <div class="confirmation-item">
                            <strong>Ghế:</strong>
                            <span class="seats fw-bold"></span>
                        </div>
                        <div class="confirmation-item">
                            <strong>Tạm tính:</strong>
                            <span class="sub-total"></span>
                        </div>
                        <div class="confirmation-item points-section">
                            <strong>Điểm sử dụng:</strong>
                            <span class="points-used"></span>
                            <span class="points-discount text-success"></span>
                        </div>
                        <div class="confirmation-item total border-top pt-2">
                            <strong>Tổng thanh toán:</strong>
                            <span class="total-price fw-bold text-danger" style="font-size: 1.25rem;"></span>
                        </div>
                        <div class="confirmation-item">
                            <strong>Ngày đặt:</strong>
                            <span class="booking-date"></span>
                        </div>
                        <div class="confirmation-item">
                            <strong>Phương thức thanh toán:</strong>
                            <span class="payment-method"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary print-ticket">In vé</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal tạo khách hàng mới -->
    <div class="modal fade" id="createCustomerModal" tabindex="-1" role="dialog" aria-labelledby="createCustomerModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createCustomerModalLabel">
                        <i class="fas fa-user-plus me-2"></i>Tạo khách hàng mới
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="createCustomerForm">
                        <div class="mb-3">
                            <label for="newCustomerFullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="newCustomerFullName" placeholder="Nhập họ và tên">
                        </div>
                        <div class="mb-3">
                            <label for="newCustomerPhone" class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="newCustomerPhone" placeholder="Nhập số điện thoại">
                        </div>
                        <div class="mb-3">
                            <label for="newCustomerEmail" class="form-label">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="newCustomerEmail" placeholder="Nhập email">
                        </div>
                        <div class="mb-3">
                            <label for="newCustomerIdentity" class="form-label">CMND/CCCD <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="newCustomerIdentity" placeholder="Nhập CMND/CCCD">
                        </div>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Khách hàng sẽ nhận được thông tin đăng nhập qua email sau khi tạo tài khoản thành công.
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-success" id="saveCustomer">
                        <i class="fas fa-save me-2"></i>Tạo khách hàng
                    </button>
                </div>
            </div>
        </div>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/book-ticket-dashboard.js"></script>
</body>
</html>