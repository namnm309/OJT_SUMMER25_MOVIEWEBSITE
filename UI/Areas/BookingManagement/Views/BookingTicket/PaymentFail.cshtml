@{
    Layout = null;
    var booking = ViewBag.Booking;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thanh toán thất bại</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="bg-light d-flex align-items-center" style="min-height:100vh;">
    <div class="container text-center">
        <div class="card shadow-sm p-4">
            <h2 class="text-danger mb-3"><i class="fas fa-times-circle me-2"></i>Thanh toán thất bại</h2>
            <p>Rất tiếc, giao dịch không thành công. Vui lòng thử lại hoặc liên hệ hỗ trợ.</p>
            @if (booking != null)
            {
                <p>Mã đặt vé: <strong>@booking.bookingCode</strong></p>
            }
            <a href="@Url.Action("BookingList", "BookingTicket", new { area = "BookingManagement" })" class="btn btn-secondary mt-3">Quay lại danh sách</a>
        </div>
    </div>
</body>
</html> 