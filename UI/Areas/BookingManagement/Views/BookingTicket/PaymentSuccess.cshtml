@{
    Layout = null;
    var booking = ViewBag.Booking;
    string bookingCode = "";
    string movieTitle = "";
    string seats = "";
    string total = "";
    string cinemaRoom = "";
    string showDate = "";
    string showTime = "";
    string memberName = "";
    if (booking != null)
    {
        if (booking is System.Text.Json.JsonElement json)
        {
            if (json.TryGetProperty("bookingCode", out var codeProp))
                bookingCode = codeProp.GetString();
            if (json.TryGetProperty("movieTitle", out var movieProp))
                movieTitle = movieProp.GetString();
            if (json.TryGetProperty("seats", out var seatsProp))
            {
                if (seatsProp.ValueKind == System.Text.Json.JsonValueKind.Array)
                    seats = string.Join(", ", seatsProp.EnumerateArray().Select(x => x.GetString()));
                else
                    seats = seatsProp.ToString();
            }
            if (json.TryGetProperty("totalPrice", out var totalProp))
                total = string.Format("{0:N0} VNĐ", totalProp.GetDecimal());
            if (json.TryGetProperty("cinemaRoom", out var roomProp))
                cinemaRoom = roomProp.GetString();
            if (json.TryGetProperty("showDate", out var dateProp))
                showDate = dateProp.GetString();
            if (json.TryGetProperty("showTime", out var timeProp))
                showTime = timeProp.GetString();
            if (json.TryGetProperty("memberInfo", out var memProp) && memProp.ValueKind == System.Text.Json.JsonValueKind.Object)
            {
                if (memProp.TryGetProperty("fullName", out var nameProp))
                    memberName = nameProp.GetString();
            }
        }
    }
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thanh toán thành công</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            background: #f6f8fa;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }
        .success-container {
            max-width: 540px;
            margin: 60px auto;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.08);
            padding: 36px 32px 32px 32px;
        }
        .success-icon {
            font-size: 3.5rem;
            color: #28a745;
            margin-bottom: 12px;
        }
        .success-title {
            font-size: 2rem;
            font-weight: 700;
            color: #28a745;
            margin-bottom: 8px;
        }
        .success-desc {
            color: #444;
            font-size: 1.1rem;
            margin-bottom: 24px;
        }
        .ticket-table th {
            background: #f0f4f8;
            color: #333;
            width: 40%;
        }
        .ticket-table td {
            color: #222;
            font-weight: 500;
        }
        .action-btns {
            margin-top: 32px;
            display: flex;
            gap: 16px;
            justify-content: center;
        }
        @@media (max-width: 600px) {
            .success-container { padding: 18px 6px; }
            .ticket-table th, .ticket-table td { font-size: 0.95rem; }
        }
    </style>
</head>
<body>
    <div class="success-container text-center">
        <div class="success-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <div class="success-title">Thanh toán thành công!</div>
        <div class="success-desc">Cảm ơn bạn đã thanh toán. Dưới đây là thông tin vé của bạn:</div>
        @if (!string.IsNullOrEmpty(bookingCode))
        {
            <div class="table-responsive">
                <table class="table ticket-table table-bordered align-middle mb-0">
                    <tr><th>Mã đặt vé</th><td>@bookingCode</td></tr>
                    <tr><th>Khách hàng</th><td>@memberName</td></tr>
                    <tr><th>Tên phim</th><td>@movieTitle</td></tr>
                    <tr><th>Phòng chiếu</th><td>@cinemaRoom</td></tr>
                    <tr><th>Ngày chiếu</th><td>@showDate</td></tr>
                    <tr><th>Giờ chiếu</th><td>@showTime</td></tr>
                    <tr><th>Ghế</th><td>@seats</td></tr>
                    <tr><th>Tổng tiền</th><td class="text-danger fw-bold">@total</td></tr>
                </table>
            </div>
        }
        <div class="action-btns">
            <a href="@Url.Action("BookingList", "BookingTicket", new { area = "BookingManagement" })" class="btn btn-outline-primary">
                <i class="fas fa-list me-1"></i> Quay lại danh sách
            </a>
            <a href="@Url.Action("Index", "BookingTicket", new { area = "BookingManagement" })" class="btn btn-success">
                <i class="fas fa-plus-circle me-1"></i> Tiếp tục đặt vé
            </a>
        </div>
    </div>
</body>
</html> 