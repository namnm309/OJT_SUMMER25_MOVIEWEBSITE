@{
    Layout = null;
    var booking = ViewBag.Booking;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thanh toán thành công</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="bg-light d-flex align-items-center" style="min-height:100vh;">
    <div class="container text-center">
        <div class="card shadow-sm p-4">
            <h2 class="text-success mb-3"><i class="fas fa-check-circle me-2"></i>Thanh toán thành công</h2>
            <p>Cám ơn bạn đã thanh toán. Chi tiết đơn đặt vé:</p>
            @if (booking != null)
            {
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tr><th>Mã đặt vé</th><td>@booking.bookingCode</td></tr>
                        <tr><th>Tên phim</th><td>@booking.movieTitle</td></tr>
                        <tr><th>Số ghế</th><td>@booking.seats</td></tr>
                        <tr><th>Tổng tiền</th><td>@booking.total</td></tr>
                    </table>
                </div>
            }
            @if (User?.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Staff")))
            {
                <a href="@Url.Action("BookingList", "BookingTicket", new { area = "BookingManagement" })" class="btn btn-primary mt-3">Quay lại danh sách</a>
            }
            else
            {
                <a href="/" class="btn btn-primary mt-3">Về trang chủ</a>
            }
        </div>
    </div>
</body>
</html> 