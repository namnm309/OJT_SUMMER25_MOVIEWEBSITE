@model List<UI.Models.PromotionViewModel>
@{
    ViewData["Title"] = "Quản lý khuyến mãi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema City</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- Homepage Base CSS for Footer -->
    <link rel="stylesheet" href="~/css/HomePage/base.css" />
    <!-- Dashboard CSS -->
    <link rel="stylesheet" href="~/css/dashboard.css" />

    <style>
        body {
            background-color: #0a0a0a;
            color: #ffffff;
            font-family: 'Inter', sans-serif;
        }

        .page-header {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            padding: 2rem;
            border-radius: 1rem;
            margin-bottom: 2rem;
            border: 1px solid rgba(223, 33, 68, 0.3);
        }

        .page-title {
            color: #ffffff;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
        }

            .page-title i {
                color: #df2144;
                margin-right: 1rem;
            }

        .dashboard-card {
            background: #1a1a1a;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 1rem;
            padding: 1.5rem;
            margin-bottom: 2rem;
            transition: all 0.3s ease;
        }

            .dashboard-card:hover {
                border-color: rgba(223, 33, 68, 0.5);
                box-shadow: 0 0 20px rgba(223, 33, 68, 0.2);
            }

        .table {
            color: #ffffff;
        }

            .table thead th {
                background: #2d2d2d;
                color: #df2144;
                border-color: rgba(255, 255, 255, 0.1);
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.75rem;
                letter-spacing: 0.5px;
                padding: 1rem;
            }

            .table tbody td {
                background: #1a1a1a;
                border-color: rgba(255, 255, 255, 0.1);
                padding: 1rem;
                vertical-align: middle;
            }

            .table tbody tr:hover td {
                background: #252525;
            }

        .btn-outline-secondary {
            color: #ffffff;
            border-color: rgba(255, 255, 255, 0.3);
        }

            .btn-outline-secondary:hover {
                background: rgba(255, 255, 255, 0.1);
                border-color: rgba(255, 255, 255, 0.5);
                color: #ffffff;
            }

        .btn-outline-primary {
            color: #df2144;
            border-color: #df2144;
        }

            .btn-outline-primary:hover {
                background: #df2144;
                border-color: #df2144;
                color: #ffffff;
            }

        .btn-success {
            background: #df2144;
            border-color: #df2144;
        }

            .btn-success:hover {
                background: #ff2951;
                border-color: #ff2951;
            }

        .badge {
            font-weight: 500;
            padding: 0.35em 0.65em;
        }

            .badge.bg-info {
                background: #17a2b8 !important;
            }

            .badge.bg-success {
                background: #28a745 !important;
            }

            .badge.bg-warning {
                background: #ffc107 !important;
            }

            .badge.bg-secondary {
                background: #6c757d !important;
            }

        .alert {
            border: none;
            border-radius: 0.5rem;
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.2);
            color: #ff6b6b;
            border: 1px solid rgba(220, 53, 69, 0.3);
        }

        .alert-success {
            background: rgba(40, 167, 69, 0.2);
            color: #6eff8b;
            border: 1px solid rgba(40, 167, 69, 0.3);
        }

        .btn-group .btn {
            border-color: rgba(255, 255, 255, 0.2);
        }

        .btn-outline-info {
            color: #17a2b8;
            border-color: #17a2b8;
        }

            .btn-outline-info:hover {
                background: #17a2b8;
                color: #ffffff;
            }

        .btn-outline-warning {
            color: #ffc107;
            border-color: #ffc107;
        }

            .btn-outline-warning:hover {
                background: #ffc107;
                color: #000000;
            }

        .btn-outline-danger {
            color: #dc3545;
            border-color: #dc3545;
        }

            .btn-outline-danger:hover {
                background: #dc3545;
                color: #ffffff;
            }

        .empty-state {
            padding: 4rem 2rem;
            text-align: center;
        }

            .empty-state i {
                color: #df2144;
                opacity: 0.5;
            }

            .empty-state h5 {
                color: #999;
                margin-top: 1rem;
            }

        .stats-info {
            color: #999;
            font-size: 0.875rem;
        }

        .pagination .page-link {
            background: #1a1a1a;
            border-color: rgba(255, 255, 255, 0.1);
            color: #ffffff;
        }

        .pagination .page-item.active .page-link {
            background: #df2144;
            border-color: #df2144;
        }

        .pagination .page-item.disabled .page-link {
            background: #1a1a1a;
            color: #666;
        }

        .promotion-image {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 0.5rem;
            margin-right: 1rem;
        }
    </style>
</head>
<body>
    @{
        ViewBag.CurrentPage = "PromotionManagement";
    }
    
    <!-- Header - Unified Dashboard Style -->
    @Html.Partial("_DashboardHeader")

    <!-- Main Content -->
    <main class="dashboard-container">
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="page-title">
                    <i class="fas fa-tags"></i>
                    @ViewData["Title"]
                </h1>
                <div>
                    <a href="@Url.Action("Index", "Dashboard", new { area = "" })" class="btn btn-outline-secondary me-2">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại Dashboard
                    </a>
                    <a id="refreshBtn" class="btn btn-outline-primary me-2">
                        <i class="fas fa-sync-alt me-2"></i>Tải lại
                        </a>
                        <a asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus me-2"></i>Thêm khuyến mãi mới
                        </a>
                </div>
            </div>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="dashboard-card">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Khuyến mãi</th>
                            <th>Thời gian</th>
                            <th class="text-center">Giảm giá</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var promotion in Model)
                            {
                                var isActive = DateTime.Now >= promotion.StartDate && DateTime.Now <= promotion.EndDate;
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(promotion.ImageUrl))
                                            {
                                                <img src="@promotion.ImageUrl" class="promotion-image" alt="Promotion">
                                            }
                                            <div>
                                                <div class="fw-semibold">@promotion.Title</div>
                                                <small class="text-muted">Mã: @promotion.Id.ToString().Substring(0, 8)</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>@promotion.StartDate.ToString("dd/MM/yyyy") → @promotion.EndDate.ToString("dd/MM/yyyy")</div>
                                        <small class="text-muted">
                                            @{
                                                var daysLeft = (promotion.EndDate - DateTime.Now).Days;
                                                if (isActive && daysLeft > 0)
                                                {
                                                    <span>Còn @daysLeft ngày</span>
                                                }
                                                else if (DateTime.Now < promotion.StartDate)
                                                {
                                                    <span>Bắt đầu sau @((promotion.StartDate - DateTime.Now).Days) ngày</span>
                                                }
                                            }
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-success">@promotion.DiscountPercent%</span>
                                    </td>
                                    <td class="text-center">
                                        @if (isActive)
                                        {
                                            <span class="badge bg-success">Đang chạy</span>
                                        }
                                        else if (DateTime.Now < promotion.StartDate)
                                        {
                                            <span class="badge bg-warning">Sắp diễn ra</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Đã kết thúc</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@promotion.Id" class="btn btn-outline-warning" title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="Delete" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@promotion.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm"
                                                        onclick="return confirm('Bạn có chắc chắn muốn xóa khuyến mãi này?')"
                                                        title="Xóa">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">
                                    <div class="empty-state">
                                        <i class="fas fa-tags fa-4x"></i>
                                        <h5>Không có dữ liệu khuyến mãi</h5>
                                        <p class="text-muted">Nhấn nút "Thêm khuyến mãi mới" để bắt đầu</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <div class="stats-info">
                    Hiển thị <span class="fw-bold text-white">@(Model?.Count ?? 0)</span> khuyến mãi
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Trước</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Tiếp</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </main>

    <!-- Footer -->
    @Html.Partial("footer")

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function() {
            // Xử lý nút tải lại
            $('#refreshBtn').click(function() {
                location.reload();
            });
        });
    </script>
</body>
</html>