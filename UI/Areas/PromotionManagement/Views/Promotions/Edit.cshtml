@model UI.Models.PromotionViewModel
@{
    ViewData["Title"] = "Chỉnh sửa khuyến mãi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema City</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        body {
            background-color: #0a0a0a;
            color: #ffffff;
            font-family: 'Inter', sans-serif;
        }

        .page-header {
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
            padding: 2rem;
            border-radius: 1rem;
            margin-bottom: 2rem;
            border: 1px solid rgba(0, 180, 110, 0.3);
        }

        .page-title {
            color: #ffffff;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
        }

            .page-title i {
                color: #00b46e;
                margin-right: 1rem;
            }

        .form-card {
            background: #1a1a1a;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 1rem;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .form-section {
            background: #252525;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .form-section-title {
            color: #00b46e;
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
        }

            .form-section-title i {
                margin-right: 0.5rem;
            }

        .form-label {
            color: #ffffff;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            background: #0a0a0a;
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: #ffffff;
        }

            .form-control:focus, .form-select:focus {
                background: #0a0a0a;
                border-color: #00b46e;
                color: #ffffff;
                box-shadow: 0 0 0 0.25rem rgba(0, 180, 110, 0.25);
            }

            .form-control::placeholder {
                color: #666;
            }

        .btn-primary {
            background: #00b46e;
            border-color: #00b46e;
        }

            .btn-primary:hover {
                background: #00d180;
                border-color: #00d180;
            }

        .btn-outline-secondary {
            color: #ffffff;
            border-color: rgba(255, 255, 255, 0.3);
        }

            .btn-outline-secondary:hover {
                background: rgba(255, 255, 255, 0.1);
                border-color: rgba(255, 255, 255, 0.5);
                color: #ffffff;
            }

        .poster-preview {
            background: #0a0a0a;
            border: 2px dashed rgba(255, 255, 255, 0.2);
            border-radius: 0.5rem;
            padding: 1rem;
            min-height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .poster-preview img {
                max-width: 100%;
                max-height: 400px;
                border-radius: 0.5rem;
            }

        .image-upload-area {
            background: #0a0a0a;
            border: 2px dashed #00b46e;
            border-radius: 0.5rem;
            padding: 2rem;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .image-upload-area:hover {
                background: rgba(0, 180, 110, 0.1);
            }

        .validation-summary-errors {
            background: rgba(220, 53, 69, 0.2);
            border: 1px solid rgba(220, 53, 69, 0.3);
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .text-danger {
            color: #ff6b6b !important;
        }
    </style>
</head>
<body>
    <div class="container-fluid p-4">
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="page-title">
                    <i class="fas fa-edit"></i>
                    @ViewData["Title"]
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </div>

        <form asp-action="Edit" method="post" id="editPromotionForm">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger validation-summary-errors"></div>

            <div class="row">
                <div class="col-lg-8">
                    <!-- Thông tin cơ bản -->
                    <div class="form-card">
                        <div class="form-section">
                            <h5 class="form-section-title">
                                <i class="fas fa-info-circle"></i>
                                Thông tin khuyến mãi
                            </h5>

                            <div class="mb-3">
                                <label asp-for="Title" class="form-label">Tên khuyến mãi</label>
                                <input asp-for="Title" class="form-control" placeholder="Nhập tên chương trình khuyến mãi" required />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="StartDate" class="form-label">Ngày bắt đầu (mm/dd/yyyy)</label>
                                    <input asp-for="StartDate" type="date" class="form-control"
                                           value="@Model.StartDate.ToString("yyyy-MM-dd")" required />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="EndDate" class="form-label">Ngày kết thúc (mm/dd/yyyy)</label>
                                    <input asp-for="EndDate" type="date" class="form-control"
                                           value="@Model.EndDate.ToString("yyyy-MM-dd")" required />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DiscountPercent" class="form-label">Giảm giá (%)</label>
                                <input asp-for="DiscountPercent" type="number" min="1" max="100" class="form-control" placeholder="5-100%" required />
                                <span asp-validation-for="DiscountPercent" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Mô tả chi tiết -->
                        <div class="form-section">
                            <h5 class="form-section-title">
                                <i class="fas fa-align-left"></i>
                                Mô tả chi tiết
                            </h5>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Nội dung khuyến mãi</label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả về chương trình khuyến mãi..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <!-- Hình ảnh khuyến mãi -->
                    <div class="form-card">
                        <div class="form-section">
                            <h5 class="form-section-title">
                                <i class="fas fa-image"></i>
                                Hình ảnh khuyến mãi
                            </h5>

                            <div class="poster-preview mb-3">
                                <img id="promotionPreview" src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "https://via.placeholder.com/300x450/1a1a1a/666666?text=Khuy%E1%BA%BFn+m%C3%A3i")" alt="Promotion preview" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="ImageUrl" class="form-label">URL hình ảnh</label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/promotion.jpg" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>

                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" id="termsCheck" required>
                                <label class="form-check-label" for="termsCheck">
                                    Tôi xác nhận thông tin khuyến mãi là chính xác
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg px-5">
                    <i class="fas fa-save me-2"></i>Cập nhật
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 ms-3">
                    <i class="fas fa-times me-2"></i>Hủy
                </a>
            </div>
        </form>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function() {
            // Preview promotion image
            $('#ImageUrl').on('input', function() {
                var imageUrl = $(this).val();
                if (imageUrl) {
                    $('#promotionPreview').attr('src', imageUrl);
                } else {
                    $('#promotionPreview').attr('src', 'https://via.placeholder.com/300x450/1a1a1a/666666?text=Khuy%E1%BA%BFn+m%C3%A3i');
                }
            });

            // Form validation
            $('#editPromotionForm').on('submit', function(e) {
                if (!$('#termsCheck').is(':checked')) {
                    e.preventDefault();
                    alert('Vui lòng xác nhận thông tin khuyến mãi là chính xác');
                    return false;
                }
            });
        });
    </script>
</body>
</html>