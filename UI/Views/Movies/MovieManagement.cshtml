@model List<UI.Models.MovieViewModel>
@{
    ViewData["Title"] = "Quản lý phim";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">
            <i class="fas fa-film me-2 text-primary"></i>@ViewData["Title"]
        </h1>
        <button id="refreshBtn" class="btn btn-outline-primary">
            <i class="fas fa-sync-alt me-2"></i>Tải lại
        </button>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2 text-secondary"></i>Danh sách phim
                </h5>
                <a asp-action="Create" class="btn btn-sm btn-success">
                    <i class="fas fa-plus me-2"></i>Thêm phim mới
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th class="text-nowrap">Tên phim</th>
                            <th class="text-nowrap">Ngày phát hành</th>
                            <th class="text-nowrap">Hãng sản xuất</th>
                            <th class="text-nowrap text-center">Thời lượng (phút)</th>
                            <th class="text-nowrap">Phiên bản</th>
                            <th class="text-nowrap text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var movie in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@movie.Title</td>
                                    <td>@movie.ReleaseDate.ToString("dd/MM/yyyy")</td>
                                    <td>@movie.ProductionCompany</td>
                                    <td class="text-center">@movie.RunningTime</td>
                                    <td>
                                        <span class="badge bg-info">@movie.Version</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button class="btn btn-outline-info view-btn" data-id="@movie.Id" title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-warning edit-btn" data-id="@movie.Id" title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-outline-danger delete-btn" data-id="@movie.Id" title="Xóa">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <div class="d-flex flex-column align-items-center">
                                        <i class="fas fa-film fa-3x text-muted mb-3"></i>
                                        <h5 class="text-muted">Không có dữ liệu phim</h5>
                                        <p class="text-muted mb-0">Nhấn nút "Thêm phim mới" để bắt đầu</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Hiển thị <span class="fw-bold">@Model?.Count</span> phim
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Trước</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Tiếp</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            border-top: none;
        }

        .table td {
            vertical-align: middle;
        }

        .card {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 40, 50, 0.15);
        }

        .card-header {
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
        }

        .badge {
            font-weight: 500;
            padding: 0.35em 0.65em;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Xử lý nút tải lại
            $('#refreshBtn').click(function() {
                location.reload();
            });

            // Hiệu ứng hover cho nút action
            $('.view-btn').hover(
                function() { $(this).html('<i class="fas fa-search"></i>'); },
                function() { $(this).html('<i class="fas fa-eye"></i>'); }
            );

            $('.edit-btn').hover(
                function() { $(this).html('<i class="fas fa-pencil-alt"></i>'); },
                function() { $(this).html('<i class="fas fa-edit"></i>'); }
            );

            $('.delete-btn').hover(
                function() { $(this).html('<i class="fas fa-times"></i>'); },
                function() { $(this).html('<i class="fas fa-trash-alt"></i>'); }
            );
        });
    </script>
}