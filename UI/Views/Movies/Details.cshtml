@model UI.Models.MovieViewModel
@{
    ViewData["Title"] = "Chi tiết phim";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">
            <i class="fas fa-film me-2 text-primary"></i>Chi tiết phim
        </h1>
        <a asp-action="MovieManagement" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại
        </a>
    </div>

    @if (Model == null)
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>Không tìm thấy thông tin phim
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body p-0">
                        <img src="@Model.ImageUrl" class="img-fluid w-100" alt="@Model.Title" 
                             onerror="this.src='https://via.placeholder.com/600x900?text=Không+có+hình+ảnh'">
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header bg-white">
                        <h4 class="mb-0">@Model.Title</h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">ID:</div>
                            <div class="col-md-9">@Model.Id</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Ngày phát hành:</div>
                            <div class="col-md-9">@Model.ReleaseDate.ToString("dd/MM/yyyy")</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Hãng sản xuất:</div>
                            <div class="col-md-9">@(Model.ProductionCompany ?? "Chưa cập nhật")</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Thời lượng:</div>
                            <div class="col-md-9">@Model.RunningTime phút</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Phiên bản:</div>
                            <div class="col-md-9">
                                <span class="badge bg-info">@Model.Version</span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Diễn viên:</div>
                            <div class="col-md-9">@(Model.Actors ?? "Chưa cập nhật")</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Đạo diễn:</div>
                            <div class="col-md-9">@(Model.Director ?? "Chưa cập nhật")</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Thể loại:</div>
                            <div class="col-md-9">
                                @foreach (var genre in Model.Genres ?? new List<string>())
                                {
                                    <span class="badge bg-secondary me-1">@genre</span>
                                }
                                @if (Model.Genres == null || !Model.Genres.Any())
                                {
                                    <span class="text-muted">Chưa cập nhật</span>
                                }
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Nội dung:</div>
                            <div class="col-md-9">@(Model.Content ?? "Chưa cập nhật")</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-3 fw-bold">Trailer:</div>
                            <div class="col-md-9">
                                @if (!string.IsNullOrEmpty(Model.TrailerUrl))
                                {
                                    <a href="@Model.TrailerUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                        <i class="fab fa-youtube me-2"></i>Xem trailer
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa cập nhật</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-clock me-2 text-secondary"></i>Lịch chiếu
                            </h5>
                            <a asp-action="Showtimes" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye me-2"></i>Xem tất cả
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Ngày</th>
                                        <th>Giờ</th>
                                        <th>Phòng</th>
                                        <th>Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.ShowTimes != null && Model.ShowTimes.Any())
                                    {
                                        foreach (var showtime in Model.ShowTimes)
                                        {
                                            <tr>
                                                <td>@showtime.ShowDate.ToString("dd/MM/yyyy")</td>
                                                <td>@showtime.ShowTime</td>
                                                <td>@showtime.RoomName</td>
                                                <td>
                                                    <span class="badge bg-success">@showtime.Status</span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center py-3">Chưa có lịch chiếu</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4 mb-5">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="fas fa-images me-2 text-secondary"></i>Hình ảnh
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @if (Model.Images != null && Model.Images.Any())
                            {
                                foreach (var image in Model.Images)
                                {
                                    <div class="col-md-3 mb-3">
                                        <a href="@image.ImageUrl" target="_blank" class="d-block">
                                            <img src="@image.ImageUrl" alt="@image.Description" class="img-fluid rounded shadow-sm"
                                                 onerror="this.src='https://via.placeholder.com/300x200?text=Không+có+hình+ảnh'">
                                        </a>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-12 text-center py-3">
                                    <p class="text-muted mb-0">Chưa có hình ảnh</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .movie-poster-section img {
            width: 100%;
            max-width: 400px;
        }

        .action-buttons .btn {
            border-radius: 8px;
        }

        .movie-header {
            margin-bottom: 2rem;
        }

        .movie-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 1rem;
        }

        .movie-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            align-items: center;
        }

        .movie-meta span {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #666;
        }

        .rating {
            color: #ffa500 !important;
            font-weight: 600;
        }

        .badge-warning {
            background-color: #ffc107;
            color: #333;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.9rem;
        }

        .nav-tabs .nav-link {
            border: none;
            color: #666;
            font-weight: 500;
        }

        .nav-tabs .nav-link.active {
            color: #dc3545;
            border-bottom: 2px solid #dc3545;
            background: none;
        }

        .tab-content {
            padding: 2rem 0;
        }

        .cast-card {
            text-align: center;
        }

        .cast-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .video-container {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 3rem;
            text-align: center;
            border: 2px dashed #dee2e6;
        }

        .video-placeholder i {
            font-size: 3rem;
            color: #dc3545;
            margin-bottom: 1rem;
            display: block;
        }

        .rating-overview .rating-score {
            font-size: 3rem;
            font-weight: 700;
            color: #ffa500;
            margin-bottom: 0.5rem;
        }

        .rating-overview .stars {
            color: #ffa500;
            margin-bottom: 0.5rem;
        }

        .rating-bar {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 0.5rem;
        }

        .rating-bar span:first-child {
            width: 30px;
            text-align: right;
        }

        .rating-bar .progress {
            flex: 1;
            height: 8px;
        }

        .rating-bar span:last-child {
            width: 40px;
            text-align: left;
        }

        .review-item {
            border-bottom: 1px solid #eee;
            padding: 1rem 0;
        }

        .reviewer-info {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 0.5rem;
        }

        .review-rating {
            color: #ffa500;
        }

        @@media (max-width: 768px) {
            .movie-title {
                font-size: 2rem;
            }

            .movie-meta {
                flex-direction: column;
                align-items: flex-start;
            }
        }
    </style>
}

@section Scripts {
    <script>
        function toggleWishlist() {
            alert("Đã thêm vào danh sách yêu thích!");
        }

        function shareMovie() {
            if (navigator.share) {
                navigator.share({
                    title: 'Phim Bom Tấn 2024',
                    text: 'Xem phim hay tại rạp!',
                    url: window.location.href
                });
            } else {
                // Fallback for browsers that don't support Web Share API
                navigator.clipboard.writeText(window.location.href).then(() => {
                    alert('Đã sao chép link phim!');
                });
            }
        }
    </script>
}
