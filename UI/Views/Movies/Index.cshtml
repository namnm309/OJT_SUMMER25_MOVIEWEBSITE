        }

        .selected-movie-info {
            background: rgba(255,255,255,0.15);
            border-radius: 15px;
            padding: 20px;
            color: white;
            border: 1px solid rgba(255,255,255,0.2);
        }

        /* Dates and Times Sections */
        .dates-section, .times-section {
            margin-bottom: 30px;
        }

        .dates-grid, .times-grid {
            display: grid;
