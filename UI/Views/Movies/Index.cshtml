@{
    ViewData["Title"] = "Phim";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <h1 class="page-title">
                    <i class="fas fa-film me-2"></i>Phim Đang Chiếu
                </h1>
                <p class="page-subtitle">Khám phá những bộ phim mới nhất và hấp dẫn nhất</p>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="search-container">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Tìm kiếm phim..." id="movieSearch">
                    <button class="btn btn-primary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="filter-container">
                <select class="form-select" id="genreFilter">
                    <option value="">Tất cả thể loại</option>
                    <option value="action">Hành động</option>
                    <option value="comedy">Hài kịch</option>
                    <option value="drama">Chính kịch</option>
                    <option value="horror">Kinh dị</option>
                    <option value="romance">Lãng mạn</option>
                    <option value="thriller">Ly kỳ</option>
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="movie-card">
                <div class="movie-poster">
                    <img src="https://via.placeholder.com/300x450?text=Phim+1" alt="Movie Poster" class="img-fluid">
                    <div class="movie-overlay">
                        <div class="movie-actions">
                            <a href="@Url.Action("Details", new { id = 1 })" class="btn btn-primary btn-sm">
                                <i class="fas fa-info-circle"></i> Chi tiết
                            </a>
                            <a href="@Url.Action("Showtimes", new { id = 1 })" class="btn btn-success btn-sm">
                                <i class="fas fa-clock"></i> Lịch chiếu
                            </a>
                        </div>
                    </div>
                </div>
                <div class="movie-info">
                    <h5 class="movie-title">Phim Bom Tấn 2024</h5>
                    <p class="movie-genre">Hành động, Phiêu lưu</p>
                    <div class="movie-meta">
                        <span class="movie-rating">
                            <i class="fas fa-star"></i> 8.5
                        </span>
                        <span class="movie-duration">
                            <i class="fas fa-clock"></i> 120 phút
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="movie-card">
                <div class="movie-poster">
                    <img src="https://via.placeholder.com/300x450?text=Phim+2" alt="Movie Poster" class="img-fluid">
                    <div class="movie-overlay">
                        <div class="movie-actions">
                            <a href="@Url.Action("Details", new { id = 2 })" class="btn btn-primary btn-sm">
                                <i class="fas fa-info-circle"></i> Chi tiết
                            </a>
                            <a href="@Url.Action("Showtimes", new { id = 2 })" class="btn btn-success btn-sm">
                                <i class="fas fa-clock"></i> Lịch chiếu
                            </a>
                        </div>
                    </div>
                </div>
                <div class="movie-info">
                    <h5 class="movie-title">Hài Kịch Vui Nhộn</h5>
                    <p class="movie-genre">Hài kịch, Gia đình</p>
                    <div class="movie-meta">
                        <span class="movie-rating">
                            <i class="fas fa-star"></i> 7.8
                        </span>
                        <span class="movie-duration">
                            <i class="fas fa-clock"></i> 95 phút
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="movie-card">
                <div class="movie-poster">
                    <img src="https://via.placeholder.com/300x450?text=Phim+3" alt="Movie Poster" class="img-fluid">
                    <div class="movie-overlay">
                        <div class="movie-actions">
                            <a href="@Url.Action("Details", new { id = 3 })" class="btn btn-primary btn-sm">
