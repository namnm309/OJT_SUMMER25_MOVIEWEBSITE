<!-- Hero Section -->
<section class="hero-section">
    <!-- Floating Elements -->
    <div class="floating-element floating-1">
        <i class="fas fa-film fa-3x"></i>
    </div>
    <div class="floating-element floating-2">
        <i class="fas fa-ticket-alt fa-2x"></i>
    </div>
    <div class="floating-element floating-3">
        <i class="fas fa-video fa-3x"></i>
    </div>
    
    <div class="hero-content">
        <h1 class="hero-title">
            <i class="fas fa-film me-3"></i>
            MovieWeb Cinema
        </h1>
        <p class="hero-subtitle">
            Trải nghiệm điện ảnh đỉnh cao với công nghệ hiện đại nhất
        </p>
        <div class="hero-buttons">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-controller="Dashboard" asp-action="Index" class="btn-hero primary">
                    <i class="fas fa-tachometer-alt me-2"></i>Bảng điều khiển
                </a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Register" class="btn-hero primary">
                    <i class="fas fa-user-plus me-2"></i>Đăng ký ngay
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn-hero secondary">
                    <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                </a>
            }
        </div>
    </div>
</section>

