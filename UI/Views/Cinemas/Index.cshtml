@section Styles {
    <style>
        .page-header {
            text-align: center;
            margin-bottom: 2rem;
            padding: 2rem 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 10px;
            margin-bottom: 3rem;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            font-size: 1.1rem;
            opacity: 0.9;
            margin-bottom: 0;
        }

        .cinema-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
            height: 100%;
        }

        .cinema-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .cinema-image {
            position: relative;
            overflow: hidden;
        }

        .cinema-image img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .cinema-card:hover .cinema-image img {
            transform: scale(1.05);
        }

        .cinema-status {
            position: absolute;
            top: 15px;
            right: 15px;
        }

        .status-badge {
            padding: 5px 12px;
            border-radius: 15px;
            font-size: 0.8rem;
            font-weight: 600;
            color: white;
        }

        .status-badge.open {
            background: #28a745;
        }

        .status-badge.maintenance {
            background: #ffc107;
            color: #333;
        }

        .status-badge.closed {
            background: #dc3545;
        }

        .cinema-content {
            padding: 1.5rem;
        }

        .cinema-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }

        .cinema-name {
            font-weight: 600;
            color: #333;
            margin: 0;
        }

        .cinema-rating {
            color: #ffa500;
            font-weight: 600;
        }

        .cinema-rating i {
            margin-right: 5px;
        }

        .cinema-info {
            margin-bottom: 1rem;
        }

        .info-item {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
            color: #666;
        }

        .info-item i {
            width: 20px;
            color: #dc3545;
            margin-right: 10px;
        }

        .cinema-facilities {
            margin-bottom: 1.5rem;
        }

        .facility-tag {
            display: inline-block;
            background: #f8f9fa;
            color: #495057;
            padding: 3px 8px;
            border-radius: 10px;
            font-size: 0.75rem;
            font-weight: 600;
            margin-right: 5px;
            margin-bottom: 5px;
            border: 1px solid #dee2e6;
        }

        .cinema-actions {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        .cinema-actions .btn {
            flex: 1;
            min-width: 120px;
        }

        .search-container, .filter-container, .location-filter {
            margin-bottom: 1rem;
        }

        .input-group .btn {
            border-left: none;
        }

        .form-select, .form-control {
            border-radius: 5px;
        }

        @@media (max-width: 768px) {
            .page-title {
                font-size: 2rem;
            }

            .cinema-header {
                flex-direction: column;
                gap: 10px;
            }

            .cinema-actions {
                flex-direction: column;
            }

            .cinema-actions .btn {
                min-width: auto;
            }
        }
    </style>
}

@section Scripts {
    <script>
        function findNearestCinema() {
            if ("geolocation" in navigator) {
                navigator.geolocation.getCurrentPosition(function(position) {
                    alert("Đang tìm rạp gần nhất...");

                }, function(error) {
                    alert("Không thể truy cập vị trí. Vui lòng kiểm tra cài đặt trình duyệt.");
                });
            } else {
                alert("Trình duyệt không hỗ trợ định vị.");
            }
        }
    </script>
}
