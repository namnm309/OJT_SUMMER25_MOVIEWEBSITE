@{
    ViewData["Title"] = "Bảng điều khiển Thành viên";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema City</title>
    <link rel="icon" type="image/svg+xml" href="~/cinema-favicon-projector.svg" />
    
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/new-dashboard.css" />
</head>
<body>
    
    <div class="new-dashboard-layout">
        
        <aside class="new-dashboard-sidebar">
            
            <div class="new-sidebar-header">
                <a href="@Url.Action("Index", "Home")" class="new-sidebar-brand">
                    <div class="new-brand-logo"></div>
                    <div class="new-brand-text">
                        <h2>Cinema City</h2>
                        <p>Member Panel</p>
                    </div>
                </a>
            </div>
            
            
            <nav class="new-sidebar-nav">
                <div class="new-nav-section">
                    <div class="new-nav-section-title">Tổng quan</div>
                    <div class="new-nav-item">
                        <a href="@Url.Action("MemberDashboard", "Dashboard")" class="new-nav-link active">
                            <i class="fas fa-home"></i>
                            <span>Dashboard</span>
                        </a>
                    </div>
                    <div class="new-nav-item">
                        <a href="@Url.Action("Index", "Home")" class="new-nav-link">
                            <i class="fas fa-globe"></i>
                            <span>Trang chủ</span>
                        </a>
                    </div>
                </div>

                <div class="new-nav-section">
                    <div class="new-nav-section-title">Đặt vé & Xem phim</div>
                    <div class="new-nav-item">
                        <a href="@Url.Action("Index", "Movies")" class="new-nav-link">
                            <i class="fas fa-film"></i>
                            <span>Phim đang chiếu</span>
                        </a>
                    </div>
                    <div class="new-nav-item">
                        <a href="@Url.Action("SelectMovieAndShowtime", "BookTicket")" class="new-nav-link">
                            <i class="fas fa-ticket-alt"></i>
                            <span>Đặt vé ngay</span>
                        </a>
                    </div>
                    <div class="new-nav-item">
                        <a href="@Url.Action("Index", "Promotions")" class="new-nav-link">
                            <i class="fas fa-gift"></i>
                            <span>Khuyến mãi</span>
                        </a>
                    </div>
                </div>

                <div class="new-nav-section">
                    <div class="new-nav-section-title">Tài khoản của tôi</div>
                    <div class="new-nav-item">
                        <a href="@Url.Action("Profile", "Account", new { area = "UserManagement" })" class="new-nav-link">
                            <i class="fas fa-user-edit"></i>
                            <span>Hồ sơ cá nhân</span>
                        </a>
                    </div>
                    <div class="new-nav-item">
                        <a href="#" class="new-nav-link">
                            <i class="fas fa-history"></i>
                            <span>Lịch sử đặt vé</span>
                        </a>
                    </div>
                    <div class="new-nav-item">
                        <a href="#" class="new-nav-link">
                            <i class="fas fa-star"></i>
                            <span>Điểm thưởng</span>
                        </a>
                    </div>
                </div>

                <div class="new-nav-section">
                    <div class="new-nav-section-title">Hỗ trợ</div>
                    <div class="new-nav-item">
                        <a href="#" class="new-nav-link">
                            <i class="fas fa-question-circle"></i>
                            <span>Trợ giúp</span>
                        </a>
                    </div>
                    <div class="new-nav-item">
                        <a href="#" class="new-nav-link">
                            <i class="fas fa-envelope"></i>
                            <span>Liên hệ</span>
                        </a>
                    </div>
                </div>
            </nav>
            
            
            <div class="new-sidebar-user">
                <div class="new-user-profile">
                    <div class="new-user-avatar">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @User.Identity.Name?.Substring(0, 1).ToUpper()
                        }
                        else
                        {
                            <span>M</span>
                        }
                    </div>
                    <div class="new-user-info">
                        <h4>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                @(User.Identity.Name?.Length > 12 ? User.Identity.Name.Substring(0, 12) + "..." : User.Identity.Name)
                            }
                            else
                            {
                                <span>Member</span>
                            }
                        </h4>
                        <p>Thành viên</p>
                    </div>
                </div>
                <div class="new-user-actions">
                    <a href="@Url.Action("Profile", "Account", new { area = "UserManagement" })" class="new-user-action-btn">
                        <i class="fas fa-user"></i>
                    </a>
                    <form asp-controller="Account" asp-action="Logout" asp-area="" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="new-user-action-btn" style="border: none;">
                            <i class="fas fa-sign-out-alt"></i>
                        </button>
                    </form>
                </div>
            </div>
        </aside>

        
        <main class="new-dashboard-main">
            <div class="new-dashboard-content">
                
                <div class="new-page-header animate-fade-in">
                    <h1 class="new-page-title">
                        <i class="fas fa-user-circle"></i>
                        Chào mừng trở lại!
                    </h1>
                    <p class="new-page-subtitle">Khám phá những bộ phim mới và đặt vé dễ dàng</p>
                </div>
                
                
                <div class="new-stats-grid animate-fade-in">
                    <div class="new-stat-card">
                        <div class="new-stat-header">
                            <div class="new-stat-icon tickets">
                                <i class="fas fa-ticket-alt"></i>
                            </div>
                        </div>
                        <div class="new-stat-value">8</div>
                        <div class="new-stat-label">Vé đã đặt</div>
                        <div class="new-stat-change positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>+2 vé tháng này</span>
                        </div>
                    </div>

                    <div class="new-stat-card">
                        <div class="new-stat-header">
                            <div class="new-stat-icon movies">
                                <i class="fas fa-film"></i>
                            </div>
                        </div>
                        <div class="new-stat-value">15</div>
                        <div class="new-stat-label">Phim đã xem</div>
                        <div class="new-stat-change positive">
                            <i class="fas fa-heart"></i>
                            <span>Bạn yêu phim!</span>
                        </div>
                    </div>

                    <div class="new-stat-card">
                        <div class="new-stat-header">
                            <div class="new-stat-icon users">
                                <i class="fas fa-star"></i>
                            </div>
                        </div>
                        <div class="new-stat-value">1,250</div>
                        <div class="new-stat-label">Điểm thưởng</div>
                        <div class="new-stat-change positive">
                            <i class="fas fa-plus"></i>
                            <span>+120 điểm mới</span>
                        </div>
                    </div>

                    <div class="new-stat-card">
                        <div class="new-stat-header">
                            <div class="new-stat-icon revenue">
                                <i class="fas fa-calendar-check"></i>
                            </div>
                        </div>
                        <div class="new-stat-value">3</div>
                        <div class="new-stat-label">Tháng thành viên</div>
                        <div class="new-stat-change positive">
                            <i class="fas fa-trophy"></i>
                            <span>Thành viên tích cực</span>
                        </div>
                    </div>
                </div>

                
                <div class="new-content-grid animate-slide-in">
                    
                    <div class="new-content-card">
                        <div class="new-card-header">
                            <h3 class="new-card-title">
                                <i class="fas fa-rocket"></i>
                                Thao tác nhanh
                            </h3>
                        </div>
                        <div class="new-quick-actions">
                            <a href="@Url.Action("SelectMovieAndShowtime", "BookTicket")" class="new-action-btn">
                                <i class="fas fa-ticket-alt"></i>
                                <span>Đặt vé ngay</span>
                            </a>
                            <a href="@Url.Action("Index", "Movies")" class="new-action-btn">
                                <i class="fas fa-film"></i>
                                <span>Phim đang chiếu</span>
                            </a>
                            <a href="@Url.Action("Index", "Promotions")" class="new-action-btn">
                                <i class="fas fa-gift"></i>
                                <span>Ưu đãi hot</span>
                            </a>
                            <a href="@Url.Action("Profile", "Account", new { area = "UserManagement" })" class="new-action-btn">
                                <i class="fas fa-user-edit"></i>
                                <span>Cập nhật hồ sơ</span>
                            </a>
                            <a href="#" class="new-action-btn">
                                <i class="fas fa-history"></i>
                                <span>Lịch sử đặt vé</span>
                            </a>
                            <a href="#" class="new-action-btn">
                                <i class="fas fa-star"></i>
                                <span>Điểm thưởng</span>
                            </a>
                        </div>
                    </div>

                    
                    <div class="new-content-card">
                        <div class="new-card-header">
                            <h3 class="new-card-title">
                                <i class="fas fa-clock"></i>
                                Hoạt động gần đây
                            </h3>
                        </div>
                        <div class="new-activity-feed">
                            <div class="new-activity-item">
                                <div class="new-activity-icon success">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                                <div class="new-activity-content">
                                    <div class="new-activity-title">Đặt vé thành công</div>
                                    <div class="new-activity-time">Hôm nay 14:30</div>
                                </div>
                            </div>
                            <div class="new-activity-item">
                                <div class="new-activity-icon info">
                                    <i class="fas fa-star"></i>
                                </div>
                                <div class="new-activity-content">
                                    <div class="new-activity-title">Nhận 120 điểm thưởng</div>
                                    <div class="new-activity-time">Hôm nay 14:30</div>
                                </div>
                            </div>
                            <div class="new-activity-item">
                                <div class="new-activity-icon warning">
                                    <i class="fas fa-film"></i>
                                </div>
                                <div class="new-activity-content">
                                    <div class="new-activity-title">Xem phim "Avengers"</div>
                                    <div class="new-activity-time">Hôm qua 19:00</div>
                                </div>
                            </div>
                            <div class="new-activity-item">
                                <div class="new-activity-icon success">
                                    <i class="fas fa-gift"></i>
                                </div>
                                <div class="new-activity-content">
                                    <div class="new-activity-title">Sử dụng ưu đãi 20%</div>
                                    <div class="new-activity-time">3 ngày trước</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                
                <div class="new-content-grid animate-slide-in" style="margin-top: 2rem;">
                    
                    <div class="new-content-card">
                        <div class="new-card-header">
                            <h3 class="new-card-title">
                                <i class="fas fa-crown"></i>
                                Quyền lợi thành viên
                            </h3>
                        </div>
                        <div style="display: flex; flex-direction: column; gap: 1rem;">
                            <div style="display: flex; gap: 1rem; padding: 1rem; background: var(--content-secondary); border-radius: 8px;">
                                <div style="width: 50px; height: 50px; background: linear-gradient(135deg, #667eea, #764ba2); border-radius: 12px; display: flex; align-items: center; justify-content: center; color: white; font-size: 1.2rem;">
                                    <i class="fas fa-percentage"></i>
                                </div>
                                <div style="flex: 1;">
                                    <div style="font-weight: 600; margin-bottom: 0.25rem;">Giảm giá 10%</div>
                                    <div style="font-size: 0.85rem; color: var(--text-muted);">Áp dụng cho tất cả vé phim</div>
                                </div>
                            </div>
                            <div style="display: flex; gap: 1rem; padding: 1rem; background: var(--content-secondary); border-radius: 8px;">
                                <div style="width: 50px; height: 50px; background: linear-gradient(135deg, #f093fb, #f5576c); border-radius: 12px; display: flex; align-items: center; justify-content: center; color: white; font-size: 1.2rem;">
                                    <i class="fas fa-birthday-cake"></i>
                                </div>
                                <div style="flex: 1;">
                                    <div style="font-weight: 600; margin-bottom: 0.25rem;">Ưu đãi sinh nhật</div>
                                    <div style="font-size: 0.85rem; color: var(--text-muted);">Vé miễn phí trong tháng sinh nhật</div>
                                </div>
                            </div>
                            <div style="display: flex; gap: 1rem; padding: 1rem; background: var(--content-secondary); border-radius: 8px;">
                                <div style="width: 50px; height: 50px; background: linear-gradient(135deg, #4facfe, #00f2fe); border-radius: 12px; display: flex; align-items: center; justify-content: center; color: white; font-size: 1.2rem;">
                                    <i class="fas fa-calendar-plus"></i>
                                </div>
                                <div style="flex: 1;">
                                    <div style="font-weight: 600; margin-bottom: 0.25rem;">Đặt trước ưu tiên</div>
                                    <div style="font-size: 0.85rem; color: var(--text-muted);">Đặt vé sớm hơn 7 ngày</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    
                    <div class="new-content-card">
                        <div class="new-card-header">
                            <h3 class="new-card-title">
                                <i class="fas fa-chart-line"></i>
                                Tiến trình điểm thưởng
                            </h3>
                        </div>
                        <div style="text-align: center; padding: 1rem;">
                            <div style="width: 120px; height: 120px; margin: 0 auto 1rem; position: relative; border-radius: 50%; background: conic-gradient(var(--primary-purple) 0deg 250deg, var(--content-border) 250deg 360deg); display: flex; align-items: center; justify-content: center;">
                                <div style="width: 80px; height: 80px; background: var(--content-bg); border-radius: 50%; display: flex; flex-direction: column; align-items: center; justify-content: center;">
                                    <div style="font-size: 1.5rem; font-weight: 700; color: var(--primary-purple);">1,250</div>
                                    <div style="font-size: 0.8rem; color: var(--text-muted);">điểm</div>
                                </div>
                            </div>
                            <div style="margin-bottom: 1rem;">
                                <div style="font-weight: 600; margin-bottom: 0.5rem;">Còn 750 điểm để lên hạng VIP</div>
                                <div style="width: 100%; height: 8px; background: var(--content-border); border-radius: 4px; overflow: hidden;">
                                    <div style="width: 62%; height: 100%; background: linear-gradient(90deg, var(--primary-purple), var(--accent-blue));"></div>
                                </div>
                            </div>
                            <div style="font-size: 0.85rem; color: var(--text-muted);">
                                Hạng hiện tại: <strong style="color: var(--primary-purple);">Thành viên Bạc</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>

        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname.toLowerCase();
            const navLinks = document.querySelectorAll('.new-nav-link');
            
            navLinks.forEach(link => {
                const href = link.getAttribute('href')?.toLowerCase();
                if (href && currentPath.includes(href)) {

                    navLinks.forEach(l => l.classList.remove('active'));

                    link.classList.add('active');
                }
            });
            
            console.log('✅ New Member Dashboard Loaded Successfully');
        });
    </script>
</body>
</html>