@{
    ViewData["Title"] = "Bảng điều khiển Admin";
}

<div class="row">
    <div class="col-12">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-crown me-2 text-warning"></i>
                Chào mừng Admin, @ViewBag.UserName!
            </h1>
            <p class="page-subtitle">Quản trị hệ thống rạp chiếu phim</p>
        </div>
    </div>
</div>

<!-- Admin Quick Actions -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="dashboard-card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-tools me-2"></i>Quản trị hệ thống
                </h5>
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Dashboard" asp-action="Members" class="btn btn-outline-primary w-100">
                            <i class="fas fa-users me-2"></i>Quản lý thành viên
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Movies" asp-action="MovieManagement" class="btn btn-outline-success w-100">
                            <i class="fas fa-film me-2"></i>Quản lý phim
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="#" class="btn btn-outline-info w-100">
                            <i class="fas fa-calendar-alt me-2"></i>Quản lý lịch chiếu
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="#" class="btn btn-outline-warning w-100">
                            <i class="fas fa-chart-line me-2"></i>Báo cáo thống kê
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a asp-controller="Promotions" asp-action="Index" class="btn btn-outline-info w-100">
                            <i class="fas fa-calendar-alt me-2"></i>Quản lý khuyến mãi
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- System Stats -->
<div class="row">
    <div class="col-md-3 mb-4">
        <div class="dashboard-card stats-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-primary">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="ms-3">
                        <h5 class="card-title mb-0">@ViewBag.TotalUsers</h5>
                        <p class="card-text text-muted small mb-0">Tổng thành viên</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="dashboard-card stats-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-success">
                        <i class="fas fa-film"></i>
                    </div>
                    <div class="ms-3">
                        <h5 class="card-title mb-0">@ViewBag.TotalMovies</h5>
                        <p class="card-text text-muted small mb-0">Phim trong hệ thống</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="dashboard-card stats-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-warning">
                        <i class="fas fa-ticket-alt"></i>
                    </div>  
                    <div class="ms-3">
                        <h5 class="card-title mb-0">@ViewBag.TotalBookings</h5>
                        <p class="card-text text-muted small mb-0">Vé đã đặt hôm nay</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="dashboard-card stats-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-info">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="ms-3">
                        <h5 class="card-title mb-0">@ViewBag.TodayRevenue</h5>
                        <p class="card-text text-muted small mb-0">Doanh thu hôm nay</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Personal Actions -->
<div class="row">
    <div class="col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-user-circle me-2"></i>Thông tin cá nhân
                </h5>
                <p><strong>Tên đăng nhập:</strong> @ViewBag.UserName</p>
                <p><strong>Email:</strong> @ViewBag.Email</p>
                <p><strong>Vai trò:</strong> <span class="badge bg-danger">@ViewBag.Role</span></p>
                <p><strong>Họ tên:</strong> @ViewBag.FullName</p>
                <p><strong>Trạng thái:</strong> 
                    @if(ViewBag.IsActive)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Không hoạt động</span>
                    }
                </p>
                <p><strong>Ngày tạo:</strong> @ViewBag.CreatedAt</p>
                
                <div class="mt-3">
                    <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-primary me-2">
                        <i class="fas fa-user-edit me-1"></i>Chỉnh sửa hồ sơ
                    </a>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="fas fa-sign-out-alt me-1"></i>Đăng xuất
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-bell me-2"></i>Thông báo hệ thống
                </h5>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Hệ thống đang hoạt động bình thường
                </div>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Có <strong>@ViewBag.PendingTasks</strong> nhiệm vụ cần xử lý
                </div>
            </div>
        </div>
    </div>
</div> 