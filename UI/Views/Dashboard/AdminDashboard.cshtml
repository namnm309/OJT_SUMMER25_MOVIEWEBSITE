@{
    ViewData["Title"] = "Bảng điều khiển Admin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema City</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- Dashboard CSS -->
    <link rel="stylesheet" href="~/css/dashboard.css" />
</head>
<body>
    <!-- Header -->
    <header class="dashboard-header">
        <div class="header-content">
            <div class="brand-section">
                <a href="/" class="d-flex align-items-center text-decoration-none">
                    <div class="brand-logo"></div>
                    <div class="ms-3">
                        <div class="brand-name">Cinema City</div>
                        <div class="brand-subtitle">Rạp chiếu phim hiện đại</div>
                    </div>
                        </a>
                    </div>
            <nav class="nav-links">
                <a href="/" class="nav-link">Trang chủ</a>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link nav-link text-decoration-none">
                        <i class="fas fa-sign-out-alt me-1"></i>Đăng xuất
                    </button>
                </form>
            </nav>
                    </div>
    </header>

    <!-- Dashboard Layout -->
    <div class="dashboard-layout">
        <!-- Sidebar Toggle Button (Mobile) -->
        <button class="sidebar-toggle" onclick="toggleSidebar()">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Sidebar -->
        <aside class="dashboard-sidebar">
            <div class="sidebar-header">
                <div class="user-profile">
                    <div class="user-avatar-large">
                        @ViewBag.UserName?.Substring(0, 1).ToUpper()
                    </div>
                    <div class="user-details">
                        <h3>@ViewBag.FullName</h3>
                        <span class="user-role-badge badge bg-danger">Admin</span>
                    </div>

                </div>
            </div>

            <nav class="sidebar-menu">
                <!-- Main Menu -->
                <div class="menu-section">
                    <div class="menu-title">Menu Chính</div>
                    <a href="/Dashboard" class="menu-item active">
                        <i class="fas fa-tachometer-alt"></i>
                        Dashboard
                    </a>
                    <a href="/Movies" class="menu-item">
                        <i class="fas fa-film"></i>
                        Danh sách phim
                    </a>
                    <a href="/Events" class="menu-item">
                        <i class="fas fa-calendar-alt"></i>
                        Sự kiện
                    </a>
                    <a href="/PromotionManagement/Promotions" class="menu-item">
                        <i class="fas fa-gift"></i>
                        Khuyến mãi
                    </a>
                </div>

                <!-- Management -->
                <div class="menu-section">
                    <div class="menu-title">Quản trị hệ thống</div>
                    <a href="/UserManagement/Members" class="menu-item">
                        <i class="fas fa-users"></i>
                        Quản lý thành viên
                    </a>
                    <a href="/MovieManagement/Movies" class="menu-item">
                        <i class="fas fa-video"></i>
                        Quản lý phim
                    </a>
                    <a href="#" class="menu-item">
                        <i class="fas fa-calendar-check"></i>
                        Quản lý lịch chiếu
                    </a>
                    <a href="#" class="menu-item">
                        <i class="fas fa-chart-line"></i>
                        Báo cáo thống kê
                    </a>
        </div>

                <!-- Personal -->
                <div class="menu-section">
                    <div class="menu-title">Cá nhân</div>
                    <a href="/UserManagement/Account/Profile" class="menu-item">
                        <i class="fas fa-user-edit"></i>
                        Chỉnh sửa hồ sơ
                    </a>
                    <a href="#" class="menu-item">
                        <i class="fas fa-cog"></i>
                        Cài đặt
                    </a>
    </div>
            </nav>
        </aside>

        <!-- Backdrop for mobile -->
        <div class="sidebar-backdrop" onclick="toggleSidebar()"></div>

        <!-- Main Content -->
        <main class="dashboard-main">
            <div class="dashboard-container">
                <!-- Page Header -->
                <div class="page-header">
                    <h1 class="page-title">
                        <i class="fas fa-crown"></i>
                        Chào mừng Admin!
                    </h1>
                    <p class="page-subtitle">Tổng quan quản trị hệ thống rạp chiếu phim</p>
</div>

<!-- System Stats -->
                <div class="row mb-5">
    <div class="col-md-3 mb-4">
        <div class="dashboard-card stats-card">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-primary">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="ms-3">
                                    <h5>@ViewBag.TotalUsers</h5>
                                    <p>Tổng thành viên</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="dashboard-card stats-card">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-success">
                        <i class="fas fa-film"></i>
                    </div>
                    <div class="ms-3">
                                    <h5>@ViewBag.TotalMovies</h5>
                                    <p>Phim trong hệ thống</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="dashboard-card stats-card">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-warning">
                        <i class="fas fa-ticket-alt"></i>
                    </div>  
                    <div class="ms-3">
                                    <h5>@ViewBag.TotalBookings</h5>
                                    <p>Vé đã đặt hôm nay</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="dashboard-card stats-card">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-info">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="ms-3">
                                    <h5>@ViewBag.TodayRevenue</h5>
                                    <p>Doanh thu hôm nay</p>
                </div>
            </div>
        </div>
    </div>
</div>

                <!-- Quick Actions -->
                <div class="row mb-5">
                    <div class="col-12">
        <div class="dashboard-card">
                <h5 class="card-title">
                                <i class="fas fa-bolt me-2"></i>Truy cập nhanh
                </h5>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <a href="/UserManagement/Members" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-users me-2"></i>
                                        Quản lý thành viên
                                    </a>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <a href="/MovieManagement/Movies" class="btn btn-outline-success w-100">
                                        <i class="fas fa-film me-2"></i>
                                        Quản lý phim
                    </a>
                                </div>
                </div>
            </div>
        </div>
    </div>

                <!-- Notifications and Recent Activity -->
                <div class="row">
    <div class="col-md-6 mb-4">
        <div class="dashboard-card">
                <h5 class="card-title">
                    <i class="fas fa-bell me-2"></i>Thông báo hệ thống
                </h5>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Hệ thống đang hoạt động bình thường
                </div>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Có <strong>@ViewBag.PendingTasks</strong> nhiệm vụ cần xử lý
                </div>
            </div>
        </div>

                    <div class="col-md-6 mb-4">
                        <div class="dashboard-card">
                            <h5 class="card-title">
                                <i class="fas fa-history me-2"></i>Hoạt động gần đây
                            </h5>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fas fa-user-plus text-success me-2"></i>
                                    <small class="text-muted">5 phút trước</small> - Thành viên mới đăng ký
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-ticket-alt text-primary me-2"></i>
                                    <small class="text-muted">15 phút trước</small> - Đặt vé thành công
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-film text-warning me-2"></i>
                                    <small class="text-muted">1 giờ trước</small> - Cập nhật lịch chiếu
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Footer -->
    <footer class="cinema-footer">
        <div class="footer-container">
            <div class="footer-content">
                <p>&copy; @DateTime.Now.Year Cinema City. Tất cả quyền được bảo lưu.</p>
    </div>
</div> 
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Toggle sidebar for mobile
        function toggleSidebar() {
            const layout = document.querySelector('.dashboard-layout');
            layout.classList.toggle('sidebar-open');
        }

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.querySelector('.dashboard-sidebar');
            const toggle = document.querySelector('.sidebar-toggle');
            const layout = document.querySelector('.dashboard-layout');
            
            if (window.innerWidth <= 991 && 
                !sidebar.contains(event.target) && 
                !toggle.contains(event.target) &&
                layout.classList.contains('sidebar-open')) {
                layout.classList.remove('sidebar-open');
            }
        });

        // Highlight active menu item based on current page
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const menuItems = document.querySelectorAll('.menu-item');
            
            menuItems.forEach(item => {
                if (item.getAttribute('href') === currentPath) {
                    item.classList.add('active');
                } else {
                    item.classList.remove('active');
                }
            });
        });
    </script>
</body>
</html>