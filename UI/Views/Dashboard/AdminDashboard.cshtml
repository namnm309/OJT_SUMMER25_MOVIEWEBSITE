@{
    ViewData["Title"] = "Bảng điều khiển Admin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema City</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- Modern Dashboard CSS -->
    <link rel="stylesheet" href="~/css/modern-dashboard.css" />
    <!-- Shared Footer CSS - Load last to override other styles -->
    <link rel="stylesheet" href="~/css/shared-footer.css" />
</head>
<body>
    @{
        ViewBag.CurrentPage = "Dashboard";
    }
    
    <!-- Dashboard Header -->
    @await Html.PartialAsync("_DashboardHeader")
    
    <!-- Dashboard Layout -->
    <div class="dashboard-layout">
        <!-- Sidebar Toggle Button (Mobile) -->
        <button class="sidebar-toggle" onclick="toggleSidebar()">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Sidebar -->
        <aside class="dashboard-sidebar">
            <div class="sidebar-header">
                <a href="@Url.Action("Index", "Home")" class="sidebar-brand">
                    <div class="sidebar-brand-logo"></div>
                    <div class="sidebar-brand-text">
                        <h2>Cinema City</h2>
                        <p>Admin Panel</p>
                    </div>
                </a>
            </div>
            
            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Tổng quan</div>
                    <div class="nav-item">
                        <a href="@Url.Action("AdminDashboard", "Dashboard")" class="nav-link active">
                            <i class="fas fa-chart-line"></i>
                            <span>Dashboard</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="@Url.Action("Index", "Home")" class="nav-link">
                            <i class="fas fa-home"></i>
                            <span>Trang chủ</span>
                        </a>
                    </div>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title">Quản lý phim</div>
                    <div class="nav-item">
                        <a href="@Url.Action("Index", "Movies", new { area = "MovieManagement" })" class="nav-link">
                            <i class="fas fa-film"></i>
                            <span>Danh sách phim</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="@Url.Action("Create", "Movies", new { area = "MovieManagement" })" class="nav-link">
                            <i class="fas fa-plus"></i>
                            <span>Thêm phim mới</span>
                        </a>
                    </div>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title">Quản lý người dùng</div>
                    <div class="nav-item">
                        <a href="@Url.Action("Index", "Members", new { area = "UserManagement" })" class="nav-link">
                            <i class="fas fa-users"></i>
                            <span>Thành viên</span>
                            <span class="nav-badge">124</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fas fa-user-tie"></i>
                            <span>Nhân viên</span>
                        </a>
                    </div>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title">Khuyến mãi & Booking</div>
                    <div class="nav-item">
                        <a href="@Url.Action("Index", "Promotions", new { area = "PromotionManagement" })" class="nav-link">
                            <i class="fas fa-gift"></i>
                            <span>Khuyến mãi</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="@Url.Action("Index", "BookingTicket", new { area = "BookingManagement" })" class="nav-link">
                            <i class="fas fa-ticket-alt"></i>
                            <span>Đặt vé</span>
                            <span class="nav-badge">8</span>
                        </a>
                    </div>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title">Báo cáo</div>
                    <div class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fas fa-chart-bar"></i>
                            <span>Doanh thu</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fas fa-analytics"></i>
                            <span>Thống kê</span>
                        </a>
                    </div>
                </div>
            </nav>
            
            <!-- User Profile in Sidebar -->
            <div class="sidebar-user">
                <div class="user-profile">
                    <div class="user-avatar">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @User.Identity.Name?.Substring(0, 1).ToUpper()
                        }
                        else
                        {
                            <span>A</span>
                        }
                    </div>
                    <div class="user-info">
                        <h4>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                @(User.Identity.Name?.Length > 12 ? User.Identity.Name.Substring(0, 12) + "..." : User.Identity.Name)
                            }
                            else
                            {
                                <span>Admin</span>
                            }
                        </h4>
                        <p>Administrator</p>
                    </div>
                </div>
                <div class="user-actions">
                    <a href="@Url.Action("Profile", "Account", new { area = "UserManagement" })" class="user-action-btn">
                        <i class="fas fa-user"></i>
                    </a>
                    <form asp-controller="Account" asp-action="Logout" asp-area="" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="user-action-btn" style="border: none;">
                            <i class="fas fa-sign-out-alt"></i>
                        </button>
                    </form>
                </div>
            </div>
        </aside>
        
        <!-- Backdrop for mobile -->
        <div class="sidebar-backdrop" onclick="toggleSidebar()"></div>

        <!-- Main Content -->
        <main class="dashboard-main">
            <!-- Top Bar -->
            <div class="dashboard-topbar">
                <div class="topbar-content">
                    <div class="topbar-left">
                        <h1>Admin Dashboard</h1>
                        <p>Quản lý toàn bộ hệ thống Cinema City</p>
                    </div>
                    <div class="topbar-right">
                        <div class="topbar-search">
                            <i class="fas fa-search"></i>
                            <input type="text" placeholder="Tìm kiếm...">
                        </div>
                        <div class="topbar-actions">
                            <button class="topbar-btn" title="Thông báo">
                                <i class="fas fa-bell"></i>
                            </button>
                            <button class="topbar-btn" title="Cài đặt">
                                <i class="fas fa-cog"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Dashboard Content -->
            <div class="dashboard-content">
                <!-- Hero Section -->
                <div class="hero-section animate-fade-in">
                    <div class="hero-content">
                        <div class="hero-text">
                            <h1>
                                <i class="fas fa-crown"></i>
                                Chào mừng Admin!
                            </h1>
                            <p>Tổng quan quản trị hệ thống rạp chiếu phim Cinema City</p>
                        </div>
                        <div class="hero-stats">
                            <div class="hero-stat">
                                <span class="hero-stat-value">@ViewBag.TotalUsers</span>
                                <span class="hero-stat-label">Thành viên</span>
                            </div>
                            <div class="hero-stat">
                                <span class="hero-stat-value">@ViewBag.TotalMovies</span>
                                <span class="hero-stat-label">Phim</span>
                            </div>
                            <div class="hero-stat">
                                <span class="hero-stat-value">@ViewBag.TotalBookings</span>
                                <span class="hero-stat-label">Vé hôm nay</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Stats Grid -->
                <div class="stats-grid animate-fade-in">
                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-icon users">
                                <i class="fas fa-users"></i>
                            </div>
                            <button class="stat-menu">
                                <i class="fas fa-ellipsis-h"></i>
                            </button>
                        </div>
                        <div class="stat-value">@ViewBag.TotalUsers</div>
                        <div class="stat-label">Tổng thành viên</div>
                        <div class="stat-change positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>+12% so với tháng trước</span>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-icon movies">
                                <i class="fas fa-film"></i>
                            </div>
                            <button class="stat-menu">
                                <i class="fas fa-ellipsis-h"></i>
                            </button>
                        </div>
                        <div class="stat-value">@ViewBag.TotalMovies</div>
                        <div class="stat-label">Phim trong hệ thống</div>
                        <div class="stat-change positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>+5 phim mới</span>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-icon tickets">
                                <i class="fas fa-ticket-alt"></i>
                            </div>
                            <button class="stat-menu">
                                <i class="fas fa-ellipsis-h"></i>
                            </button>
                        </div>
                        <div class="stat-value">@ViewBag.TotalBookings</div>
                        <div class="stat-label">Vé đã đặt hôm nay</div>
                        <div class="stat-change positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>+8% so với hôm qua</span>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-icon revenue">
                                <i class="fas fa-dollar-sign"></i>
                            </div>
                            <button class="stat-menu">
                                <i class="fas fa-ellipsis-h"></i>
                            </button>
                        </div>
                        <div class="stat-value">@ViewBag.TodayRevenue</div>
                        <div class="stat-label">Doanh thu hôm nay</div>
                        <div class="stat-change positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>+15% so với hôm qua</span>
                        </div>
                    </div>
                </div>

                <!-- Content Grid -->
                <div class="content-grid animate-slide-in">
                    <!-- Main Panel -->
                    <div class="main-panel">
                        <!-- Quick Actions -->
                        <div class="modern-card">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <i class="fas fa-bolt"></i>
                                    Truy cập nhanh
                                </h3>
                            </div>
                            <div class="quick-actions">
                                <a href="/UserManagement/Members" class="action-btn">
                                    <i class="fas fa-users"></i>
                                    <span>Quản lý thành viên</span>
                                </a>
                                <a href="/MovieManagement/Movies" class="action-btn">
                                    <i class="fas fa-film"></i>
                                    <span>Quản lý phim</span>
                                </a>
                                <a href="/BookingManagement/Booking/SelectMovie" class="action-btn">
                                    <i class="fas fa-ticket-alt"></i>
                                    <span>Đặt vé</span>
                                </a>
                                <a href="/PromotionManagement/Promotions" class="action-btn">
                                    <i class="fas fa-gift"></i>
                                    <span>Khuyến mãi</span>
                                </a>
                                <a href="#" class="action-btn">
                                    <i class="fas fa-chart-line"></i>
                                    <span>Báo cáo</span>
                                </a>
                                <a href="#" class="action-btn">
                                    <i class="fas fa-cog"></i>
                                    <span>Cài đặt</span>
                                </a>
                            </div>
                        </div>

                        <!-- Recent Activity -->
                        <div class="modern-card">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <i class="fas fa-history"></i>
                                    Hoạt động gần đây
                                </h3>
                            </div>
                            <div class="activity-feed">
                                <div class="activity-item">
                                    <div class="activity-icon success">
                                        <i class="fas fa-user-plus"></i>
                                    </div>
                                    <div class="activity-content">
                                        <div class="activity-title">Thành viên mới đăng ký</div>
                                        <div class="activity-time">5 phút trước</div>
                                    </div>
                                </div>
                                <div class="activity-item">
                                    <div class="activity-icon info">
                                        <i class="fas fa-ticket-alt"></i>
                                    </div>
                                    <div class="activity-content">
                                        <div class="activity-title">Đặt vé thành công</div>
                                        <div class="activity-time">15 phút trước</div>
                                    </div>
                                </div>
                                <div class="activity-item">
                                    <div class="activity-icon warning">
                                        <i class="fas fa-film"></i>
                                    </div>
                                    <div class="activity-content">
                                        <div class="activity-title">Cập nhật lịch chiếu</div>
                                        <div class="activity-time">1 giờ trước</div>
                                    </div>
                                </div>
                                <div class="activity-item">
                                    <div class="activity-icon success">
                                        <i class="fas fa-dollar-sign"></i>
                                    </div>
                                    <div class="activity-content">
                                        <div class="activity-title">Thanh toán thành công</div>
                                        <div class="activity-time">2 giờ trước</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Side Panel -->
                    <div class="side-panel">
                        <!-- System Notifications -->
                        <div class="modern-card">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <i class="fas fa-bell"></i>
                                    Thông báo hệ thống
                                </h3>
                            </div>
                            <div class="notifications">
                                <div class="notification-item info">
                                    <div class="notification-content">
                                        <div class="notification-icon">
                                            <i class="fas fa-info-circle"></i>
                                        </div>
                                        <div class="notification-text">
                                            Hệ thống đang hoạt động bình thường
                                        </div>
                                    </div>
                                </div>
                                <div class="notification-item warning">
                                    <div class="notification-content">
                                        <div class="notification-icon">
                                            <i class="fas fa-exclamation-triangle"></i>
                                        </div>
                                        <div class="notification-text">
                                            Có <strong>@ViewBag.PendingTasks</strong> nhiệm vụ cần xử lý
                                        </div>
                                    </div>
                                </div>
                                <div class="notification-item success">
                                    <div class="notification-content">
                                        <div class="notification-icon">
                                            <i class="fas fa-check-circle"></i>
                                        </div>
                                        <div class="notification-text">
                                            Backup dữ liệu hoàn tất
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- System Status -->
                        <div class="modern-card">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <i class="fas fa-server"></i>
                                    Trạng thái hệ thống
                                </h3>
                            </div>
                            <div class="system-status">
                                <div class="status-item">
                                    <div class="status-indicator success"></div>
                                    <span>Server Status</span>
                                    <span class="status-value">Online</span>
                                </div>
                                <div class="status-item">
                                    <div class="status-indicator success"></div>
                                    <span>Database</span>
                                    <span class="status-value">Connected</span>
                                </div>
                                <div class="status-item">
                                    <div class="status-indicator warning"></div>
                                    <span>Storage</span>
                                    <span class="status-value">85% Used</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Footer -->
    @await Html.PartialAsync("footer")

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Toggle sidebar for mobile
        function toggleSidebar() {
            const layout = document.querySelector('.dashboard-layout');
            layout.classList.toggle('sidebar-open');
        }

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.querySelector('.dashboard-sidebar');
            const toggle = document.querySelector('.sidebar-toggle');
            const layout = document.querySelector('.dashboard-layout');
            
            if (window.innerWidth <= 991 && 
                !sidebar.contains(event.target) && 
                !toggle.contains(event.target) &&
                layout.classList.contains('sidebar-open')) {
                layout.classList.remove('sidebar-open');
            }
        });

        // Highlight active menu item based on current page
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const menuItems = document.querySelectorAll('.menu-item');
            
            menuItems.forEach(item => {
                if (item.getAttribute('href') === currentPath) {
                    item.classList.add('active');
                } else {
                    item.classList.remove('active');
                }
            });
        });
    </script>
</body>
</html>