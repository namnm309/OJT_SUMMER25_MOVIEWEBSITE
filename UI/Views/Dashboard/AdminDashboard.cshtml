@{
    ViewData["Title"] = "Bảng điều khiển Admin";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
    <!--Cấu hình css ở đây -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema City</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- New Dashboard CSS -->
    <link rel="stylesheet" href="~/css/new-dashboard.css" />
</head>
<body>
    <!-- New Dashboard Layout -->
    <div class="new-dashboard-layout">
        <!-- Sidebar -->
        <aside class="new-dashboard-sidebar">
            <!-- Sidebar Header -->
            <div class="new-sidebar-header">
                <a href="@Url.Action("Index", "Home")" class="new-sidebar-brand">
                    <div class="new-brand-logo"></div>
                    <div class="new-brand-text">
                        <h2>Cinema City</h2>
                        <p>Admin Panel</p>
                    </div>
                </a>
            </div>
            
            <!-- Navigation -->
            <nav class="new-sidebar-nav">
                <div class="new-nav-section">
                    <div class="new-nav-section-title">Tổng quan</div>
                    <div class="new-nav-item">
                        <a href="@Url.Action("AdminDashboard", "Dashboard")" class="new-nav-link active">
                            <i class="fas fa-chart-line"></i>
                            <span>Dashboard</span>
                        </a>
                    </div>
                    <div class="new-nav-item">
                        <a href="@Url.Action("Index", "Home")" class="new-nav-link">
                            <i class="fas fa-home"></i>
                            <span>Trang chủ</span>
                        </a>
                    </div>
                </div>

                <div class="new-nav-section">
                    <div class="new-nav-section-title">Quản lý</div>
                    <div class="new-nav-item">
                        <a href="@Url.Action("Index", "Movies", new { area = "MovieManagement" })" class="new-nav-link">
                            <i class="fas fa-film"></i>
                            <span>Quản lý phim</span>
                        </a>
                    </div>
                    <div class="new-nav-item">
                        <a href="@Url.Action("Index", "BookingTicket", new { area = "BookingManagement" })" class="new-nav-link">
                            <i class="fas fa-ticket-alt"></i>
                            <span>Quản lý đặt vé</span>
                        </a>
                    </div>
                    <div class="new-nav-item">
                        <a href="@Url.Action("Index", "Showtimes", new { area = "ShowtimeManagement" })" class="new-nav-link">
                            <i class="fas fa-calendar-alt"></i>
                            <span>Quản lý lịch chiếu</span>
                        </a>
                    </div>
                    <div class="new-nav-item">
                        <a href="@Url.Action("Index", "Promotions", new { area = "PromotionManagement" })" class="new-nav-link">
                            <i class="fas fa-gift"></i>
                            <span>Quản lý khuyến mãi</span>
                        </a>
                    </div>
                    <div class="new-nav-item">
                        <a href="#" class="new-nav-link">
                            <i class="fas fa-star"></i>
                            <span>Quản lý sự kiện</span>
                        </a>
                    </div>
                    <div class="new-nav-item">
                        <a href="@Url.Action("Index", "Members", new { area = "UserManagement" })" class="new-nav-link">
                            <i class="fas fa-users"></i>
                            <span>Quản lý người dùng</span>
                        </a>
                    </div>
                </div>

                <div class="new-nav-section">
                    <div class="new-nav-section-title">Hệ thống</div>
                    <div class="new-nav-item">
                        <a href="#" class="new-nav-link">
                            <i class="fas fa-chart-bar"></i>
                            <span>Báo cáo</span>
                        </a>
                    </div>
                    <div class="new-nav-item">
                        <a href="#" class="new-nav-link">
                            <i class="fas fa-cog"></i>
                            <span>Cài đặt</span>
                        </a>
                    </div>
                </div>
            </nav>
            
            <!-- User Profile in Sidebar -->
            <div class="new-sidebar-user">
                <div class="new-user-profile">
                    <div class="new-user-avatar">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @User.Identity.Name?.Substring(0, 1).ToUpper()
                        }
                        else
                        {
                            <span>A</span>
                        }
                    </div>
                    <div class="new-user-info">
                        <h4>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                @(User.Identity.Name?.Length > 12 ? User.Identity.Name.Substring(0, 12) + "..." : User.Identity.Name)
                            }
                            else
                            {
                                <span>Admin</span>
                            }
                        </h4>
                        <p>Administrator</p>
                    </div>
                </div>
                <div class="new-user-actions">
                    <a href="@Url.Action("Profile", "Account", new { area = "UserManagement" })" class="new-user-action-btn">
                        <i class="fas fa-user"></i>
                    </a>
                    <form asp-controller="Account" asp-action="Logout" asp-area="" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="new-user-action-btn" style="border: none;">
                            <i class="fas fa-sign-out-alt"></i>
                        </button>
                    </form>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="new-dashboard-main">
            <div class="new-dashboard-content">
                <!-- Page Header -->
                <div class="new-page-header animate-fade-in">
                    <h1 class="new-page-title">
                        <i class="fas fa-crown"></i>
                        Admin Dashboard
                    </h1>
                    <p class="new-page-subtitle">Quản lý toàn bộ hệ thống Cinema City</p>
                </div>
                
                <!-- Stats Grid -->
                <div class="new-stats-grid animate-fade-in">
                    <div class="new-stat-card">
                        <div class="new-stat-header">
                            <div class="new-stat-icon users">
                                <i class="fas fa-users"></i>
                            </div>
                        </div>
                        <div class="new-stat-value">@ViewBag.TotalUsers</div>
                        <div class="new-stat-label">Tổng thành viên</div>
                        <div class="new-stat-change positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>+12% so với tháng trước</span>
                        </div>
                    </div>

                    <div class="new-stat-card">
                        <div class="new-stat-header">
                            <div class="new-stat-icon movies">
                                <i class="fas fa-film"></i>
                            </div>
                        </div>
                        <div class="new-stat-value">@ViewBag.TotalMovies</div>
                        <div class="new-stat-label">Phim trong hệ thống</div>
                        <div class="new-stat-change positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>+5 phim mới</span>
                        </div>
                    </div>

                    <div class="new-stat-card">
                        <div class="new-stat-header">
                            <div class="new-stat-icon tickets">
                                <i class="fas fa-ticket-alt"></i>
                            </div>
                        </div>
                        <div class="new-stat-value">@ViewBag.TotalBookings</div>
                        <div class="new-stat-label">Vé đã đặt hôm nay</div>
                        <div class="new-stat-change positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>+8% so với hôm qua</span>
                        </div>
                    </div>

                    <div class="new-stat-card">
                        <div class="new-stat-header">
                            <div class="new-stat-icon revenue">
                                <i class="fas fa-dollar-sign"></i>
                            </div>
                        </div>
                        <div class="new-stat-value">@ViewBag.TodayRevenue</div>
                        <div class="new-stat-label">Doanh thu hôm nay</div>
                        <div class="new-stat-change positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>+15% so với hôm qua</span>
                        </div>
                    </div>
                </div>

                <!-- Content Grid -->
                <div class="new-content-grid animate-slide-in">
                    <!-- Main Panel -->
                    <div class="new-content-card">
                        <div class="new-card-header">
                            <h3 class="new-card-title">
                                <i class="fas fa-bolt"></i>
                                Truy cập nhanh
                            </h3>
                        </div>
                        <div class="new-quick-actions">
                            <a href="@Url.Action("Index", "Members", new { area = "UserManagement" })" class="new-action-btn">
                                <i class="fas fa-users"></i>
                                <span>Quản lý thành viên</span>
                            </a>
                            <a href="@Url.Action("Index", "Movies", new { area = "MovieManagement" })" class="new-action-btn">
                                <i class="fas fa-film"></i>
                                <span>Quản lý phim</span>
                            </a>
                            <a href="@Url.Action("Index", "BookingTicket", new { area = "BookingManagement" })" class="new-action-btn">
                                <i class="fas fa-ticket-alt"></i>
                                <span>Đặt vé</span>
                            </a>
                            <a href="@Url.Action("Index", "Promotions", new { area = "PromotionManagement" })" class="new-action-btn">
                                <i class="fas fa-gift"></i>
                                <span>Khuyến mãi</span>
                            </a>
                            <a href="#" class="new-action-btn">
                                <i class="fas fa-chart-line"></i>
                                <span>Báo cáo</span>
                            </a>
                            <a href="#" class="new-action-btn">
                                <i class="fas fa-cog"></i>
                                <span>Cài đặt</span>
                            </a>
                        </div>
                    </div>

                    <!-- Side Panel -->
                    <div class="new-content-card">
                        <div class="new-card-header">
                            <h3 class="new-card-title">
                                <i class="fas fa-history"></i>
                                Hoạt động gần đây
                            </h3>
                        </div>
                        <div class="new-activity-feed">
                            <div class="new-activity-item">
                                <div class="new-activity-icon success">
                                    <i class="fas fa-user-plus"></i>
                                </div>
                                <div class="new-activity-content">
                                    <div class="new-activity-title">Thành viên mới đăng ký</div>
                                    <div class="new-activity-time">5 phút trước</div>
                                </div>
                            </div>
                            <div class="new-activity-item">
                                <div class="new-activity-icon info">
                                    <i class="fas fa-ticket-alt"></i>
                                </div>
                                <div class="new-activity-content">
                                    <div class="new-activity-title">Đặt vé thành công</div>
                                    <div class="new-activity-time">15 phút trước</div>
                                </div>
                            </div>
                            <div class="new-activity-item">
                                <div class="new-activity-icon warning">
                                    <i class="fas fa-film"></i>
                                </div>
                                <div class="new-activity-content">
                                    <div class="new-activity-title">Cập nhật lịch chiếu</div>
                                    <div class="new-activity-time">1 giờ trước</div>
                                </div>
                            </div>
                            <div class="new-activity-item">
                                <div class="new-activity-icon success">
                                    <i class="fas fa-dollar-sign"></i>
                                </div>
                                <div class="new-activity-content">
                                    <div class="new-activity-title">Thanh toán thành công</div>
                                    <div class="new-activity-time">2 giờ trước</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Content Row -->
                <div class="new-content-grid animate-slide-in" style="margin-top: 2rem;">
                    <!-- System Status -->
                    <div class="new-content-card">
                        <div class="new-card-header">
                            <h3 class="new-card-title">
                                <i class="fas fa-server"></i>
                                Trạng thái hệ thống
                            </h3>
                        </div>
                        <div style="display: flex; flex-direction: column; gap: 1rem;">
                            <div style="display: flex; justify-content: space-between; align-items: center; padding: 0.75rem; background: var(--content-secondary); border-radius: 8px;">
                                <div style="display: flex; align-items: center; gap: 0.5rem;">
                                    <div style="width: 10px; height: 10px; background: var(--success); border-radius: 50%;"></div>
                                    <span>Server Status</span>
                                </div>
                                <span style="color: var(--success); font-weight: 500;">Online</span>
                            </div>
                            <div style="display: flex; justify-content: space-between; align-items: center; padding: 0.75rem; background: var(--content-secondary); border-radius: 8px;">
                                <div style="display: flex; align-items: center; gap: 0.5rem;">
                                    <div style="width: 10px; height: 10px; background: var(--success); border-radius: 50%;"></div>
                                    <span>Database</span>
                                </div>
                                <span style="color: var(--success); font-weight: 500;">Connected</span>
                            </div>
                            <div style="display: flex; justify-content: space-between; align-items: center; padding: 0.75rem; background: var(--content-secondary); border-radius: 8px;">
                                <div style="display: flex; align-items: center; gap: 0.5rem;">
                                    <div style="width: 10px; height: 10px; background: var(--warning); border-radius: 50%;"></div>
                                    <span>Storage</span>
                                </div>
                                <span style="color: var(--warning); font-weight: 500;">85% Used</span>
                            </div>
                        </div>
                    </div>

                    <!-- Notifications -->
                    <div class="new-content-card">
                        <div class="new-card-header">
                            <h3 class="new-card-title">
                                <i class="fas fa-bell"></i>
                                Thông báo hệ thống
                            </h3>
                        </div>
                        <div style="display: flex; flex-direction: column; gap: 1rem;">
                            <div style="display: flex; gap: 0.75rem; padding: 1rem; background: rgba(16, 185, 129, 0.1); border-radius: 8px; border-left: 4px solid var(--success);">
                                <i class="fas fa-check-circle" style="color: var(--success); margin-top: 0.25rem;"></i>
                                <div>
                                    <div style="font-weight: 500; margin-bottom: 0.25rem;">Hệ thống đang hoạt động bình thường</div>
                                    <div style="font-size: 0.85rem; color: var(--text-muted);">Tất cả dịch vụ đang hoạt động ổn định</div>
                                </div>
                            </div>
                            <div style="display: flex; gap: 0.75rem; padding: 1rem; background: rgba(245, 158, 11, 0.1); border-radius: 8px; border-left: 4px solid var(--warning);">
                                <i class="fas fa-exclamation-triangle" style="color: var(--warning); margin-top: 0.25rem;"></i>
                                <div>
                                    <div style="font-weight: 500; margin-bottom: 0.25rem;">Có <strong>@ViewBag.PendingTasks</strong> nhiệm vụ cần xử lý</div>
                                    <div style="font-size: 0.85rem; color: var(--text-muted);">Vui lòng kiểm tra và xử lý</div>
                                </div>
                            </div>
                            <div style="display: flex; gap: 0.75rem; padding: 1rem; background: rgba(59, 130, 246, 0.1); border-radius: 8px; border-left: 4px solid var(--primary-purple);">
                                <i class="fas fa-info-circle" style="color: var(--primary-purple); margin-top: 0.25rem;"></i>
                                <div>
                                    <div style="font-weight: 500; margin-bottom: 0.25rem;">Backup dữ liệu hoàn tất</div>
                                    <div style="font-size: 0.85rem; color: var(--text-muted);">Lần backup cuối: hôm nay 03:00</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Highlight active menu item based on current page
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname.toLowerCase();
            const navLinks = document.querySelectorAll('.new-nav-link');
            
            navLinks.forEach(link => {
                const href = link.getAttribute('href')?.toLowerCase();
                if (href && currentPath.includes(href)) {
                    // Remove active from all links
                    navLinks.forEach(l => l.classList.remove('active'));
                    // Add active to current link
                    link.classList.add('active');
                }
            });
            
        });
    </script>
</body>
</html>