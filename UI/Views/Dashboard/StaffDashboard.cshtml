@{
    ViewData["Title"] = "Bảng điều khiển nhân viên";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema City</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <!-- Modern Dashboard CSS -->
    <link rel="stylesheet" href="~/css/modern-dashboard.css" />
    <!-- Shared Footer CSS - Load last to override other styles -->
    <link rel="stylesheet" href="~/css/shared-footer.css" />
</head>
<body>
    @{
        ViewBag.CurrentPage = "Dashboard";
    }
    
    <!-- Dashboard Header -->
    @await Html.PartialAsync("_DashboardHeader")

    <!-- Dashboard Layout -->
    <div class="dashboard-layout">
        <!-- Sidebar Toggle Button (Mobile) -->
        <button class="sidebar-toggle" onclick="toggleSidebar()">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Sidebar -->
        <aside class="dashboard-sidebar">
            <div class="sidebar-header">
                <a href="@Url.Action("Index", "Home")" class="sidebar-brand">
                    <div class="sidebar-brand-logo"></div>
                    <div class="sidebar-brand-text">
                        <h2>Cinema City</h2>
                        <p>Staff Panel</p>
                    </div>
                </a>
            </div>
            
            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Tổng quan</div>
                    <div class="nav-item">
                        <a href="@Url.Action("StaffDashboard", "Dashboard")" class="nav-link active">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a href="@Url.Action("Index", "Home")" class="nav-link">
                            <i class="fas fa-home"></i>
                            <span>Trang chủ</span>
                        </a>
                </div>
            </div>

                <div class="nav-section">
                    <div class="nav-section-title">Bán vé & Dịch vụ</div>
                    <div class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fas fa-ticket-alt"></i>
                            <span>Bán vé tại quầy</span>
                    </a>
                    </div>
                    <div class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fas fa-search"></i>
                            <span>Tra cứu vé</span>
                    </a>
                    </div>
                    <div class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fas fa-box"></i>
                            <span>Sản phẩm</span>
                    </a>
                    </div>
                </div>

                <div class="nav-section">
                    <div class="nav-section-title">Quản lý</div>
                    <div class="nav-item">
                        <a href="@Url.Action("Index", "Movies")" class="nav-link">
                            <i class="fas fa-film"></i>
                            <span>Phim</span>
                    </a>
                    </div>
                    <div class="nav-item">
                        <a href="@Url.Action("Index", "Members", new { area = "UserManagement" })" class="nav-link">
                        <i class="fas fa-users"></i>
                            <span>Thành viên</span>
                    </a>
                    </div>
                    <div class="nav-item">
                        <a href="#" class="nav-link">
                        <i class="fas fa-calendar-check"></i>
                            <span>Lịch chiếu</span>
                    </a>
                    </div>
                </div>

                <div class="nav-section">
                    <div class="nav-section-title">Cá nhân</div>
                    <div class="nav-item">
                        <a href="@Url.Action("Profile", "Account", new { area = "UserManagement" })" class="nav-link">
                        <i class="fas fa-user-edit"></i>
                            <span>Hồ sơ</span>
                    </a>
                    </div>
                    <div class="nav-item">
                        <a href="#" class="nav-link">
                        <i class="fas fa-history"></i>
                            <span>Lịch sử làm việc</span>
                    </a>
                    </div>
                </div>
            </nav>
            
            <!-- User Profile in Sidebar -->
            <div class="sidebar-user">
                <div class="user-profile">
                    <div class="user-avatar">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @User.Identity.Name?.Substring(0, 1).ToUpper()
                        }
                        else
                        {
                            <span>S</span>
                        }
                    </div>
                    <div class="user-info">
                        <h4>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                @(User.Identity.Name?.Length > 12 ? User.Identity.Name.Substring(0, 12) + "..." : User.Identity.Name)
                            }
                            else
                            {
                                <span>Staff</span>
                            }
                        </h4>
                        <p>Nhân viên</p>
                    </div>
                </div>
                <div class="user-actions">
                    <a href="@Url.Action("Profile", "Account", new { area = "UserManagement" })" class="user-action-btn">
                        <i class="fas fa-user"></i>
                    </a>
                    <form asp-controller="Account" asp-action="Logout" asp-area="" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="user-action-btn" style="border: none;">
                            <i class="fas fa-sign-out-alt"></i>
                        </button>
                    </form>
                </div>
            </div>
        </aside>

        <!-- Backdrop for mobile -->
        <div class="sidebar-backdrop" onclick="toggleSidebar()"></div>

        <!-- Main Content -->
        <main class="dashboard-main">
            <!-- Top Bar -->
            <div class="dashboard-topbar">
                <div class="topbar-content">
                    <div class="topbar-left">
                        <h1>Staff Dashboard</h1>
                        <p>Quản lý bán vé và dịch vụ khách hàng</p>
                    </div>
                    <div class="topbar-right">
                        <div class="topbar-search">
                            <i class="fas fa-search"></i>
                            <input type="text" placeholder="Tra cứu vé...">
                        </div>
                        <div class="topbar-actions">
                            <button class="topbar-btn" title="Thông báo">
                                <i class="fas fa-bell"></i>
                            </button>
                            <button class="topbar-btn" title="Cài đặt">
                                <i class="fas fa-cog"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Dashboard Content -->
            <div class="dashboard-content">
                <!-- Page Header -->
                <div class="page-header">
                    <h1 class="page-title">
                        <i class="fas fa-user-tie"></i>
                        Chào mừng nhân viên!
                    </h1>
                    <p class="page-subtitle">Quản lý vé và dịch vụ khách hàng</p>
                </div>

                <!-- Work Stats -->
                <div class="row mb-5">
                    <div class="col-md-4 mb-4">
                        <div class="dashboard-card stats-card">
                            <div class="d-flex align-items-center">
                                <div class="stats-icon bg-primary">
                                    <i class="fas fa-ticket-alt"></i>
                                </div>
                                <div class="ms-3">
                                    <h5>@ViewBag.TodayTickets</h5>
                                    <p>Vé bán hôm nay</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 mb-4">
                        <div class="dashboard-card stats-card">
                            <div class="d-flex align-items-center">
                                <div class="stats-icon bg-success">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="ms-3">
                                    <h5>@ViewBag.TotalCustomers</h5>
                                    <p>Khách hàng đã phục vụ</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 mb-4">
                        <div class="dashboard-card stats-card">
                            <div class="d-flex align-items-center">
                                <div class="stats-icon bg-warning">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="ms-3">
                                    <h5>@ViewBag.WorkingHours</h5>
                                    <p>Giờ làm việc hôm nay</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row mb-5">
                    <div class="col-12">
                        <div class="dashboard-card">
                            <h5 class="card-title">
                                <i class="fas fa-bolt me-2"></i>Truy cập nhanh
                            </h5>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <a href="#" class="btn btn-outline-primary w-100">
                                        <i class="fas fa-ticket-alt me-2"></i>
                                        Bán vé mới
                                    </a>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <a href="#" class="btn btn-outline-success w-100">
                                        <i class="fas fa-search me-2"></i>
                                        Tra cứu vé
                                    </a>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <a href="#" class="btn btn-outline-info w-100">
                                        <i class="fas fa-calendar me-2"></i>
                                        Lịch chiếu hôm nay
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Today's Tasks and Shift Info -->
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="dashboard-card">
                            <h5 class="card-title">
                                <i class="fas fa-clipboard-list me-2"></i>Nhiệm vụ hôm nay
                            </h5>
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Ca làm việc: 08:00 - 17:00
                            </div>
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle me-2"></i>
                                Đã hoàn thành: Kiểm tra máy bán vé
                            </div>
                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Cần làm: Cập nhật lịch chiếu mới
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 mb-4">
                        <div class="dashboard-card">
                            <h5 class="card-title">
                                <i class="fas fa-film me-2"></i>Phim chiếu hôm nay
                            </h5>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fas fa-clock text-primary me-2"></i>
                                    <strong>09:00</strong> - Avatar 2 (Phòng 1)
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-clock text-primary me-2"></i>
                                    <strong>12:00</strong> - Spider-Man (Phòng 2)
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-clock text-primary me-2"></i>
                                    <strong>15:00</strong> - The Batman (Phòng 3)
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-clock text-primary me-2"></i>
                                    <strong>18:00</strong> - Top Gun (Phòng 1)
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

        <!-- Footer -->
    @await Html.PartialAsync("footer")

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Toggle sidebar for mobile
        function toggleSidebar() {
            const layout = document.querySelector('.dashboard-layout');
            layout.classList.toggle('sidebar-open');
        }

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.querySelector('.dashboard-sidebar');
            const toggle = document.querySelector('.sidebar-toggle');
            const layout = document.querySelector('.dashboard-layout');
            
            if (window.innerWidth <= 991 && 
                !sidebar.contains(event.target) && 
                !toggle.contains(event.target) &&
                layout.classList.contains('sidebar-open')) {
                layout.classList.remove('sidebar-open');
            }
        });

        // Highlight active menu item based on current page
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const menuItems = document.querySelectorAll('.menu-item');
            
            menuItems.forEach(item => {
                if (item.getAttribute('href') === currentPath) {
                    item.classList.add('active');
                } else {
                    item.classList.remove('active');
                }
            });
        });
    </script>
</body>
</html>