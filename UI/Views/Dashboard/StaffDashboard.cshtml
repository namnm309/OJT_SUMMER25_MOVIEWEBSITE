@{
    ViewData["Title"] = "Bảng điều khiển nhân viên";
}

<div class="row">
    <div class="col-12">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-user-tie me-2 text-info"></i>
                Chào mừng nhân viên, @ViewBag.UserName!
            </h1>
            <p class="page-subtitle">Quản lý vé và dịch vụ khách hàng</p>
        </div>
    </div>
</div>

<!-- Staff Quick Actions -->
<div class="row">
    <div class="col-12 mb-4">
        <div class="dashboard-card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-tasks me-2"></i>Công việc hàng ngày
                </h5>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <a href="#" class="btn btn-outline-primary w-100">
                            <i class="fas fa-ticket-alt me-2"></i>Bán vé tại quầy
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a asp-controller="Dashboard" asp-action="Members" class="btn btn-outline-success w-100">
                            <i class="fas fa-users me-2"></i>Xem danh sách thành viên
                        </a>
                    </div>
                    <div class="col-md-4 mb-3">
                        <a href="#" class="btn btn-outline-info w-100">
                            <i class="fas fa-calendar-check me-2"></i>Kiểm tra lịch chiếu
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Work Stats -->
<div class="row">
    <div class="col-md-4 mb-4">
        <div class="dashboard-card stats-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-primary">
                        <i class="fas fa-ticket-alt"></i>
                    </div>
                    <div class="ms-3">
                        <h5 class="card-title mb-0">@ViewBag.TodayTickets</h5>
                        <p class="card-text text-muted small mb-0">Vé bán hôm nay</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="dashboard-card stats-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-success">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="ms-3">
                        <h5 class="card-title mb-0">@ViewBag.TotalCustomers</h5>
                        <p class="card-text text-muted small mb-0">Khách hàng đã phục vụ</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="dashboard-card stats-card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="stats-icon bg-warning">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="ms-3">
                        <h5 class="card-title mb-0">@ViewBag.WorkingHours</h5>
                        <p class="card-text text-muted small mb-0">Giờ làm việc hôm nay</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Two Columns Layout -->
<div class="row">
    <!-- Personal Info -->
    <div class="col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-user-circle me-2"></i>Thông tin cá nhân
                </h5>
                <p><strong>Tên đăng nhập:</strong> @ViewBag.UserName</p>
                <p><strong>Email:</strong> @ViewBag.Email</p>
                <p><strong>Vai trò:</strong> <span class="badge bg-warning">@ViewBag.Role</span></p>
                <p><strong>Họ tên:</strong> @ViewBag.FullName</p>
                <p><strong>Trạng thái:</strong> 
                    @if(ViewBag.IsActive)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Không hoạt động</span>
                    }
                </p>
                <p><strong>Ngày bắt đầu làm:</strong> @ViewBag.CreatedAt</p>
                
                <div class="mt-3">
                    <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-primary me-2">
                        <i class="fas fa-user-edit me-1"></i>Chỉnh sửa hồ sơ
                    </a>
                    <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger">
                        <i class="fas fa-sign-out-alt me-1"></i>Đăng xuất
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Today's Tasks -->
    <div class="col-md-6 mb-4">
        <div class="dashboard-card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-clipboard-list me-2"></i>Nhiệm vụ hôm nay
                </h5>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Ca làm việc: 08:00 - 17:00
                </div>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i>
                    Đã hoàn thành: Kiểm tra máy bán vé
                </div>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Cần làm: Cập nhật lịch chiếu mới
                </div>
            </div>
        </div>
    </div>
</div> 