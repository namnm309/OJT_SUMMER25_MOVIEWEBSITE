                    const errorMessage = result.message || 'Kh√¥ng th·ªÉ ƒë·ªïi voucher. Vui l√≤ng th·ª≠ l·∫°i.';
                    toast.error(errorMessage);
                    
                    // Restore button state
                    redeemBtn.innerHTML = '<i class="fas fa-gift"></i> ƒê·ªîI VOUCHER';
                    redeemBtn.className = 'btn btn-gradient-save';
