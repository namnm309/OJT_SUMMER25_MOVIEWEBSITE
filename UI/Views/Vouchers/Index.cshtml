            const grid = document.getElementById('vouchersGrid');
            const vouchers = filterVouchers();
            if (!vouchers.length) {
                grid.innerHTML = `<div class="no-vouchers">Kh√¥ng c√≥ voucher n√†o ph√π h·ª£p.</div>`;
                return;
            }
            grid.innerHTML = vouchers.map((v, idx) => {
