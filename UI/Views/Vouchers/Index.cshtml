                    warning: 'C·∫£nh b√°o',
                    info: 'Th√¥ng b√°o'
                };
                return titles[type] || titles.info;
            }
            
            remove(toast) {
                toast.classList.remove('show');
                setTimeout(() => {
                    if (toast.parentElement) {
                        toast.parentElement.removeChild(toast);
                    }
                }, 300);
            }
            
            success(message, duration = 5000) {
