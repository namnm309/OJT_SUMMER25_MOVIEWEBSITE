@model UI.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/LoginPage/auth.css" />
    <link rel="stylesheet" href="~/css/forgot-password.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
}

<div class="main-container">
    <!-- Bên trái: ảnh background -->
    <div class="loki-background d-none d-lg-block">
        <!-- Nút về trang chủ ở góc trên trái -->
        <div class="back-home-left">
            <a href="@Url.Action("Index", "Home")" class="btn-back-home-left">
                <i class="fas fa-arrow-left me-2"></i>Về trang chủ
            </a>
        </div>
        <div class="overlay-text">CINEMA CITY</div>
    </div>

    <!-- Bên phải: nội dung form -->
    <div class="login-side">
        <!-- Top bar ở góc trên phải -->
        <div class="top-bar d-none d-lg-block">
            <span class="signup-prompt">Đã nhớ mật khẩu?</span>
            <a asp-action="Login" class="signup-btn">Đăng nhập</a>
        </div>

        <div class="login-container">
            <div class="auth-card">
                <div class="auth-header">
                    <h2 class="auth-title">Quên mật khẩu</h2>
                    <p class="auth-subtitle">Nhập email để nhận mã OTP</p>
                </div>

                <!-- Thêm div hiển thị thông báo -->
                <div id="message-container" class="alert" style="display: none;">
                </div>
                
                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>@ViewBag.SuccessMessage
                    </div>
                }

                <form id="forgotPasswordForm" method="post" asp-action="ForgotPassword">
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope me-1"></i>@Html.DisplayNameFor(m => m.Email)
                        </label>
                        <div class="position-relative">
                            <i class="fas fa-envelope input-icon"></i>
                            <input asp-for="Email" class="form-control with-icon" placeholder="Nhập email của bạn" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 auth-btn" id="submitBtn">
                        <i class="fas fa-paper-plane me-2"></i>Gửi mã OTP
                    </button>

                    <div class="auth-footer">
                        <p>Đã nhớ mật khẩu? <a asp-action="Login" class="auth-link">Đăng nhập ngay</a></p>
                        <p>Chưa có tài khoản? <a asp-action="Register" class="auth-link">Tạo tài khoản</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/forgot-password.js"></script>
} 