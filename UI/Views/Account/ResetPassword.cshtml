@model UI.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/LoginPage/auth.css" />
    <link rel="stylesheet" href="~/css/forgot-password.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <style>
        /* Thanh đo độ mạnh mật khẩu */
        .password-strength-meter {
            height: 5px;
            background-color: #f3f3f3;
            border-radius: 3px;
            position: relative;
            margin: 10px 0;
        }
        
        .password-strength-meter-bar {
            height: 100%;
            border-radius: 3px;
            transition: width 0.5s ease-in-out, background-color 0.5s ease-in-out;
            width: 0;
        }
        
        /* Các mức độ mạnh của mật khẩu */
        .strength-weak { background-color: #ff4d4d; width: 20%; }
        .strength-fair { background-color: #ffa64d; width: 40%; }
        .strength-good { background-color: #ffff4d; width: 60%; }
        .strength-strong { background-color: #4dff4d; width: 80%; }
        .strength-very-strong { background-color: #4d4dff; width: 100%; }
        
        /* Văn bản hiển thị độ mạnh */
        .password-strength-text {
            font-size: 0.8rem;
            font-weight: 500;
        }
        
        .text-weak { color: #ff4d4d; }
        .text-fair { color: #ffa64d; }
        .text-good { color: #9e9e00; }
        .text-strong { color: #00a000; }
        .text-very-strong { color: #0000a0; }
        
        /* Danh sách các yêu cầu mật khẩu */
        .password-requirements-list {
            list-style-type: none;
            padding-left: 0;
            margin-bottom: 0;
            font-size: 0.8rem;
        }
        
        .requirement-item {
            margin-bottom: 5px;
            color: #6c757d;
            display: flex;
            align-items: center;
        }
        
        .requirement-icon {
            font-size: 0.5rem;
            margin-right: 8px;
        }
        
        .requirement-met {
            color: #28a745;
        }
        
        .requirement-met .requirement-icon {
            color: #28a745;
        }
    </style>
}

<div class="main-container">
    <!-- Bên trái: ảnh background -->
    <div class="loki-background d-none d-lg-block">
        <!-- Nút về trang chủ ở góc trên trái -->
        <div class="back-home-left">
            <a href="@Url.Action("Index", "Home")" class="btn-back-home-left">
                <i class="fas fa-arrow-left me-2"></i>Về trang chủ
            </a>
        </div>
        <div class="overlay-text">CINEMA CITY</div>
    </div>

    <!-- Bên phải: nội dung form -->
    <div class="login-side">
        <!-- Top bar ở góc trên phải -->
        <div class="top-bar d-none d-lg-block">
            <span class="signup-prompt">Đã nhớ mật khẩu?</span>
            <a asp-action="Login" class="signup-btn">Đăng nhập</a>
        </div>

        <div class="login-container">
            <div class="auth-card">
                <div class="auth-header">
                    <h2 class="auth-title">Đặt lại mật khẩu</h2>
                    <p class="auth-subtitle">Nhập mã OTP và mật khẩu mới</p>
                </div>

                <!-- Thêm div hiển thị thông báo -->
                <div id="message-container" class="alert" style="display: none;">
                </div>
                
                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>@ViewBag.SuccessMessage
                    </div>
                }

                <form id="resetPasswordForm" method="post" asp-action="ResetPassword" asp-controller="Account">
                    <input asp-for="Email" type="hidden" />
                    <input type="hidden" name="__RequestVerificationToken" value="@Html.AntiForgeryToken()" />
                    
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-envelope me-1"></i>Email
                        </label>
                        <div class="position-relative">
                            <i class="fas fa-envelope input-icon"></i>
                            <input value="@Model.Email" class="form-control with-icon" readonly style="background-color: #f8f9fa;" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="OTP" class="form-label">
                            <i class="fas fa-key me-1"></i>@Html.DisplayNameFor(m => m.OTP)
                        </label>
                        <div class="position-relative">
                            <i class="fas fa-key input-icon"></i>
                            <input asp-for="OTP" class="form-control with-icon otp-input" placeholder="Nhập mã OTP 6 số" maxlength="6" 
                                   data-val="true" data-val-required="Mã OTP là bắt buộc" 
                                   data-val-length="Mã OTP phải có 6 ký tự" data-val-length-min="6" data-val-length-max="6" />
                        </div>
                        <span asp-validation-for="OTP" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewPassword" class="form-label">
                            <i class="fas fa-lock me-1"></i>@Html.DisplayNameFor(m => m.NewPassword)
                        </label>
                        <div class="position-relative">
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="NewPassword" class="form-control with-icon" placeholder="Mật khẩu mới" type="password" style="padding-right: 45px;" 
                                   data-val="true" data-val-required="Mật khẩu mới là bắt buộc" 
                                   data-val-length="Mật khẩu phải có ít nhất 8 ký tự" data-val-length-min="8" />
                            <button type="button" class="btn password-toggle" id="toggleNewPassword" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); border: none; background: transparent; color: #6c757d; padding: 0; width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-eye" id="toggleNewPasswordIcon" style="font-size: 14px;"></i>
                            </button>
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                        
                        <!-- Thêm đánh giá độ mạnh mật khẩu -->
                        <div id="passwordStrengthContainer" class="mt-2" style="display: none;">
                            <div class="password-strength-meter">
                                <div class="password-strength-meter-bar" id="passwordStrengthBar"></div>
                            </div>
                            <div class="password-strength-text mt-1" id="passwordStrengthText"></div>
                            
                            <!-- Danh sách các yêu cầu mật khẩu -->
                            <div class="password-requirements mt-2">
                                <p class="mb-1 small">Mật khẩu phải có:</p>
                                <ul class="password-requirements-list">
                                    <li id="length-requirement" class="requirement-item"><i class="fas fa-circle requirement-icon"></i> Ít nhất 8 ký tự</li>
                                    <li id="uppercase-requirement" class="requirement-item"><i class="fas fa-circle requirement-icon"></i> Ít nhất 1 chữ hoa</li>
                                    <li id="lowercase-requirement" class="requirement-item"><i class="fas fa-circle requirement-icon"></i> Ít nhất 1 chữ thường</li>
                                    <li id="number-requirement" class="requirement-item"><i class="fas fa-circle requirement-icon"></i> Ít nhất 1 số</li>
                                    <li id="special-requirement" class="requirement-item"><i class="fas fa-circle requirement-icon"></i> Ít nhất 1 ký tự đặc biệt</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="form-label">
                            <i class="fas fa-lock me-1"></i>@Html.DisplayNameFor(m => m.ConfirmPassword)
                        </label>
                        <div class="position-relative">
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="ConfirmPassword" class="form-control with-icon" placeholder="Xác nhận mật khẩu mới" type="password" style="padding-right: 45px;" 
                                   data-val="true" data-val-required="Xác nhận mật khẩu là bắt buộc" 
                                   data-val-equalto="Mật khẩu xác nhận không khớp" data-val-equalto-other="NewPassword" />
                            <button type="button" class="btn password-toggle" id="toggleConfirmPassword" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); border: none; background: transparent; color: #6c757d; padding: 0; width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-eye" id="toggleConfirmPasswordIcon" style="font-size: 14px;"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 auth-btn" id="submitBtn">
                        <i class="fas fa-save me-2"></i>Đặt lại mật khẩu
                    </button>

                    <div class="auth-footer">
                        <p>Đã nhớ mật khẩu? <a asp-action="Login" class="auth-link">Đăng nhập ngay</a></p>
                        <p>Chưa có tài khoản? <a asp-action="Register" class="auth-link">Tạo tài khoản</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/forgot-password.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Enable client-side validation
        $(document).ready(function() {
            $.validator.setDefaults({
                highlight: function(element) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function(element) {
                    $(element).removeClass('is-invalid');
                },
                errorElement: 'span',
                errorClass: 'text-danger',
                errorPlacement: function(error, element) {
                    error.insertAfter(element);
                }
            });
        });
    </script>
}