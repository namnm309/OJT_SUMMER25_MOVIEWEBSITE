@model UI.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/LoginPage/auth.css" />
    <link rel="stylesheet" href="~/css/forgot-password.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
}

<div class="main-container">
    <!-- Bên trái: ảnh background -->
    <div class="loki-background d-none d-lg-block">
        <div class="overlay-text">CINEMA CITY</div>
    </div>

    <!-- Bên phải: nội dung form -->
    <div class="login-side">
        <!-- Top bar ở góc trên phải -->
        <div class="top-bar d-none d-lg-block">
            <span class="signup-prompt">Đã nhớ mật khẩu?</span>
            <a asp-action="Login" class="signup-btn">Đăng nhập</a>
        </div>

        <div class="login-container">
            <div class="auth-card">
                <div class="auth-header">
                    <h2 class="auth-title">Đặt lại mật khẩu</h2>
                    <p class="auth-subtitle">Nhập mã OTP và mật khẩu mới</p>
                </div>

                <!-- Thêm div hiển thị thông báo -->
                <div id="message-container" class="alert" style="display: none;">
                </div>
                
                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>@ViewBag.SuccessMessage
                    </div>
                }

                <form id="resetPasswordForm" method="post" asp-action="ResetPassword">
                    <input asp-for="Email" type="hidden" />
                    
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-envelope me-1"></i>Email
                        </label>
                        <div class="position-relative">
                            <i class="fas fa-envelope input-icon"></i>
                            <input value="@Model.Email" class="form-control with-icon" readonly style="background-color: #f8f9fa;" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="OTP" class="form-label">
                            <i class="fas fa-key me-1"></i>@Html.DisplayNameFor(m => m.OTP)
                        </label>
                        <div class="position-relative">
                            <i class="fas fa-key input-icon"></i>
                            <input asp-for="OTP" class="form-control with-icon otp-input" placeholder="Nhập mã OTP 6 số" maxlength="6" />
                        </div>
                        <span asp-validation-for="OTP" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewPassword" class="form-label">
                            <i class="fas fa-lock me-1"></i>@Html.DisplayNameFor(m => m.NewPassword)
                        </label>
                        <div class="position-relative">
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="NewPassword" class="form-control with-icon" placeholder="Mật khẩu mới" type="password" style="padding-right: 45px;" />
                            <button type="button" class="btn password-toggle" id="toggleNewPassword" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); border: none; background: transparent; color: #6c757d; padding: 0; width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-eye" id="toggleNewPasswordIcon" style="font-size: 14px;"></i>
                            </button>
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="form-label">
                            <i class="fas fa-lock me-1"></i>@Html.DisplayNameFor(m => m.ConfirmPassword)
                        </label>
                        <div class="position-relative">
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="ConfirmPassword" class="form-control with-icon" placeholder="Xác nhận mật khẩu mới" type="password" style="padding-right: 45px;" />
                            <button type="button" class="btn password-toggle" id="toggleConfirmPassword" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); border: none; background: transparent; color: #6c757d; padding: 0; width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-eye" id="toggleConfirmPasswordIcon" style="font-size: 14px;"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 auth-btn" id="submitBtn">
                        <i class="fas fa-save me-2"></i>Đặt lại mật khẩu
                    </button>

                    <div class="auth-footer">
                        <p>Đã nhớ mật khẩu? <a asp-action="Login" class="auth-link">Đăng nhập ngay</a></p>
                        <p>Chưa có tài khoản? <a asp-action="Register" class="auth-link">Tạo tài khoản</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/forgot-password.js"></script>
} 