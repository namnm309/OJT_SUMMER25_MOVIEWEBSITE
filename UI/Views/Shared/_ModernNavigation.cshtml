
<nav class="figma-nav">
    <div class="figma-nav-container">
        <a class="figma-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="fas fa-film"></i>MovieWebApp
        </a>

        <button class="figma-nav-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="figma-toggler-icon"></span>
        </button>

        <div class="figma-nav-collapse">
            <ul class="figma-nav-links-left">
                <li>
                    <a class="figma-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")"
                       asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i>Trang chủ
                    </a>
                </li>
                <li>
                    <a class="figma-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Movies" ? "active" : "")"
                       asp-area="" asp-controller="Movies" asp-action="Index">
                        <i class="fas fa-film"></i>Phim
                    </a>
                </li>
                <li>
                    <a class="figma-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" ? "active" : "")"
                       asp-area="" asp-controller="Products" asp-action="Index">
                        <i class="fas fa-shopping-cart"></i>Sản Phẩm
                    </a>
                </li>
                <li>
                    <a class="figma-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Events" ? "active" : "")"
                       asp-area="" asp-controller="Events" asp-action="Index">
                        <i class="fas fa-calendar-alt"></i>Sự Kiện
                    </a>
                </li>
                <li>
                    <a class="figma-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Cinemas" ? "active" : "")"
                       asp-area="" asp-controller="Cinemas" asp-action="Index">
                        <i class="fas fa-building"></i>Rạp
                    </a>
                </li>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <li>
                        <a class="figma-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")"
                           asp-area="" asp-controller="Dashboard" asp-action="Index">
                            <i class="fas fa-tachometer-alt"></i>Bảng điều khiển
                        </a>
                    </li>
                    @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                    {
                        <li>
                            <a class="figma-nav-link" asp-area="" asp-controller="Dashboard" asp-action="Members">
                                <i class="fas fa-users"></i>Thành viên
                            </a>
                        </li>
                    }
                }
            </ul>

            <ul class="figma-nav-links-right">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <li class="figma-dropdown">
                        <a class="figma-nav-link figma-dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user-circle"></i>@(User.FindFirst("FullName")?.Value ?? User.Identity.Name)
                        </a>
                        <ul class="figma-dropdown-menu">
                            <li><a class="figma-dropdown-item" asp-controller="Account" asp-action="Profile">
                                <i class="fas fa-user-edit"></i>Chỉnh sửa hồ sơ
                            </a></li>
                            <li><hr class="figma-dropdown-divider"></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="figma-dropdown-item">
                                        <i class="fas fa-sign-out-alt"></i>Đăng xuất
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li>
                        <a class="figma-nav-link" asp-controller="Account" asp-action="Login">
                            <i class="fas fa-sign-in-alt"></i>Đăng nhập
                        </a>
                    </li>
                    <li>
                        <a class="figma-nav-link" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus"></i>Đăng ký
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
