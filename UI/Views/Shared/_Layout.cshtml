<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UI</title>
    <link rel="icon" type="image/svg+xml" href="~/cinema-favicon-projector.svg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Thêm media và keyframes từ CDN -->
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared-footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/movie-card-fix.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/movie-card-emergency-fix.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pagination-fix.css" asp-append-version="true" />
    <!-- Unified header styles -->
    <link rel="stylesheet" href="~/css/HomePage/base.css" />
    <link rel="stylesheet" href="~/css/HomePage/header.css" />
    <link rel="stylesheet" href="~/css/Shared/_header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Shared/fix-header-offset.css" />
    @await RenderSectionAsync("Styles", required: false)
    <style>
        /* Cho phép scroll cho modal khi nội dung quá dài */
        .modal-content {
            max-height: 80vh;
            overflow-y: auto;
            /* Firefox scrollbar */
            scrollbar-width: thin;
            scrollbar-color: #7b56c2 rgba(0,0,0,0.1);
        }
        .modal-body {
            max-height: 70vh;
            overflow-y: auto;
        }
        /* Chrome, Edge, WebkitScrollbar */
        .modal-content::-webkit-scrollbar {
            width: 8px;
        }
        .modal-content::-webkit-scrollbar-track {
            background: rgba(0,0,0,0.1);
        }
        .modal-content::-webkit-scrollbar-thumb {
            background-color: #7b56c2;
            border-radius: 4px;
        }
    </style>
</head>
<body>

    <!-- Global header -->
    @await Html.PartialAsync("_Header")

    @if (ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index")
    {
        <main role="main">
            @RenderBody()
        </main>
    }
    else
    {
        <div class="container">
            <main role="main" class="pb-3 pt-3">
                @RenderBody()
            </main>
        </div>
    }

    @await Html.PartialAsync("_SharedFooter")


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Tự động thêm header Authorization cho tất cả AJAX requests (jQuery)
        $(document).ajaxSend(function (event, jqxhr, settings) {
            const token = sessionStorage.getItem('jwtToken');
            if (token) {
                jqxhr.setRequestHeader('Authorization', 'Bearer ' + token);
            }
        });

        // Xử lý clear token khi logout (dựa vào kết quả JSON clearToken)
        $(document).ajaxSuccess(function (event, xhr, settings, data) {
            if (data && data.clearToken) {
                sessionStorage.removeItem('jwtToken');
                sessionStorage.removeItem('userRole');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
