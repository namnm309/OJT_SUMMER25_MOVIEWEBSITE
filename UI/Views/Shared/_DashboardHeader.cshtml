@{
    string currentPage = ViewBag.CurrentPage as string ?? "";
}

<!-- Debug info - remove in production -->
@if (User.IsInRole("Admin"))
{
    // <div style="position: fixed; top: 0; right: 0; background: rgba(0,0,0,0.8); color: white; padding: 10px; z-index: 9999; font-size: 12px;">
    //     CurrentPage: @currentPage
    // </div>
}

<header class="dashboard-header">
    <div class="header-content">
        <div class="brand-section">
            <a href="@Url.Action("Index", "Home", new { area = "" })" class="d-flex align-items-center text-decoration-none">
                <div class="brand-logo"></div>
                <div class="ms-3">
                    <div class="brand-name">Cinema City</div>
                    <div class="brand-subtitle">Rạp chiếu phim hiện đại</div>
                </div>
            </a>
        </div>
        <nav class="nav-links">
            <a href="@Url.Action("Index","Home", new { area = "" })" class="nav-link @(currentPage == "Home" ? "active" : "")">
                <i class="fas fa-home me-1"></i>Trang chủ
            </a>
            
            @* Management links for Admin/Staff *@
            @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
            {
                <a href="@Url.Action("Index", "Movies", new { area = "MovieManagement" })" class="nav-link @(currentPage == "MovieManagement" ? "active" : "")">
                    <i class="fas fa-film me-1"></i>Quản lý phim
                </a>
                <a href="@Url.Action("Index", "Members", new { area = "UserManagement" })" class="nav-link @(currentPage == "UserManagement" ? "active" : "")">
                    <i class="fas fa-users me-1"></i>Quản lý thành viên
                </a>
                <a href="@Url.Action("Index", "Promotions", new { area = "PromotionManagement" })" class="nav-link @(currentPage == "PromotionManagement" ? "active" : "")">
                    <i class="fas fa-gift me-1"></i>Quản lý khuyến mãi
                </a>
                <a href="@Url.Action("Index", "BookingTicket", new { area = "BookingManagement" })" class="nav-link @(currentPage == "BookingManagement" ? "active" : "")">
                    <i class="fas fa-ticket-alt me-1"></i>Quản lý đặt vé
                </a>
            }
            
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="dropdown">
                    <a href="#" class="nav-link dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-circle me-1"></i>
                        @(User.Identity?.Name?.Length > 10 ? 
                          User.Identity.Name.Substring(0, 10) + "..." : 
                          User.Identity?.Name)
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Profile", "Account", new { area = "UserManagement" })">
                                <i class="fas fa-user-edit me-2"></i>Hồ sơ
                            </a>
                        </li>
                        @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                        {
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Movies", new { area = "MovieManagement" })">
                                    <i class="fas fa-film me-2"></i>Quản lý phim
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Members", new { area = "UserManagement" })">
                                    <i class="fas fa-users me-2"></i>Quản lý thành viên
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Promotions", new { area = "PromotionManagement" })">
                                    <i class="fas fa-gift me-2"></i>Quản lý khuyến mãi
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "BookingTicket", new { area = "BookingManagement" })">
                                    <i class="fas fa-ticket-alt me-2"></i>Quản lý đặt vé
                                </a>
                            </li>
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Account" asp-action="Logout" asp-area="" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <a href="@Url.Action("Login", "Account", new { area = "" })" class="nav-link">
                    <i class="fas fa-sign-in-alt me-1"></i>Đăng nhập
                </a>
                <a href="@Url.Action("Register", "Account", new { area = "" })" class="nav-link">
                    <i class="fas fa-user-plus me-1"></i>Đăng ký
                </a>
            }
        </nav>
    </div>
</header>

<style>
    /* Dashboard Header Styles */
    .dashboard-header {
        background: linear-gradient(180deg, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.6) 100%);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1001;
        height: 80px;
    }

    .header-content {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 100%;
    }

    .brand-section {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .brand-logo {
        width: 50px;
        height: 40px;
        background: #df2144;
        border-radius: 8px;
    }

    .brand-name {
        font-size: 24px;
        font-weight: 700;
        color: white;
    }

    .brand-subtitle {
        font-size: 14px;
        color: rgba(255, 255, 255, 0.7);
    }

    .nav-links {
        display: flex;
        gap: 30px;
        align-items: center;
    }

    .nav-link {
        color: rgba(255, 255, 255, 0.8) !important;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
        padding: 8px 12px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        color: #df2144 !important;
        background: rgba(223, 33, 68, 0.1);
        text-decoration: none;
    }

    .nav-link.active {
        color: #df2144 !important;
        background: rgba(223, 33, 68, 0.1);
    }

    /* Enhanced dropdown styles for navigation */
    .nav-links .dropdown-menu {
        background: #1a1a1a !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        border-radius: 12px !important;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3) !important;
        min-width: 250px !important;
        padding: 0.5rem 0 !important;
        margin-top: 0.5rem !important;
    }
    
    .nav-links .dropdown-item {
        color: rgba(255, 255, 255, 0.8) !important;
        padding: 0.75rem 1rem !important;
        transition: all 0.3s ease !important;
        border: none !important;
        background: transparent !important;
        width: 100% !important;
        text-align: left !important;
    }
    
    .nav-links .dropdown-item:hover {
        background: rgba(223, 33, 68, 0.1) !important;
        color: #ffffff !important;
    }
    
    .nav-links .dropdown-divider {
        border-top: 1px solid rgba(255, 255, 255, 0.1) !important;
        margin: 0.5rem 0 !important;
    }
    
    .nav-links .dropdown-toggle::after {
        margin-left: 0.5rem !important;
    }

    /* Make brand link hover effect */
    .brand-section a:hover .brand-name {
        color: #df2144;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .header-content {
            padding: 15px;
        }
        
        .nav-links {
            gap: 15px;
        }
        
        .brand-name {
            font-size: 20px;
        }
        
        .nav-link {
            font-size: 14px;
        }
    }
</style>

<script>
    // Navigation dropdown support
    document.addEventListener('DOMContentLoaded', function() {
        // Enable Bootstrap dropdown if present
        const dropdownElementList = document.querySelectorAll('.dropdown-toggle');
        const dropdownList = [...dropdownElementList].map(dropdownToggleEl => {
            if (typeof bootstrap !== 'undefined') {
                return new bootstrap.Dropdown(dropdownToggleEl);
            }
            return null;
        });
        
        // Debug: Log current page for troubleshooting
        console.log('Current Page:', '@currentPage');
        console.log('User Roles:', '@String.Join(",", User.FindAll("role").Select(c => c.Value))');
    });
</script> 