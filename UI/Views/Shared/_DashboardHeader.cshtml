@using System.Security.Claims

@{
    var currentPage = ViewContext.RouteData.Values["Area"]?.ToString() ?? ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
}

<link href="~/css/dashboard-header-dropdown.css" rel="stylesheet" />

<header class="dashboard-header">
    <div class="header-content">
        <div class="brand-section">
            <a href="/" class="d-flex align-items-center text-decoration-none">
                <div class="brand-logo"></div>
                <div class="ms-3">
                    <h1 class="brand-name mb-0">Cinema City</h1>
                    <p class="brand-subtitle mb-0">Admin Dashboard</p>
                </div>
            </a>
        </div>
        
        <nav class="nav-links">
            @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
            {
                <a href="@Url.Action("Index", "Movies", new { area = "MovieManagement" })" class="nav-link @(currentPage == "MovieManagement" ? "active" : "")">
                    <i class="fas fa-film me-1"></i>Quản lý phim
                </a>
                <a href="@Url.Action("Index", "Showtimes", new { area = "ShowtimeManagement" })" class="nav-link @(currentPage == "ShowtimeManagement" ? "active" : "")">
                    <i class="fas fa-calendar-alt me-1"></i>Quản lý lịch chiếu
                </a>
                <a href="@Url.Action("Index", "Promotions", new { area = "PromotionManagement" })" class="nav-link @(currentPage == "PromotionManagement" ? "active" : "")">
                    <i class="fas fa-gift me-1"></i>Quản lý khuyến mãi
                </a>
                <a href="@Url.Action("Index", "BookingTicket", new { area = "BookingManagement" })" class="nav-link @(currentPage == "BookingManagement" ? "active" : "")">
                    <i class="fas fa-ticket-alt me-1"></i>Quản lý đặt vé
                </a>
            }
            
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="dropdown">
                    <a href="#" class="nav-link dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-user-circle me-1"></i>
                        @(User.Identity?.Name?.Length > 10 ? 
                          User.Identity.Name.Substring(0, 10) + "..." : 
                          User.Identity?.Name)
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li class="dropdown-header">
                            <div class="user-info">
                                <i class="fas fa-user-circle fa-2x mb-2"></i>
                                <div class="user-name">@(User.Identity?.Name ?? "Admin")</div>
                                <div class="user-email">@(User.IsInRole("Admin") ? "Administrator" : User.IsInRole("Staff") ? "Staff" : "User")</div>
                            </div>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("Profile", "Account", new { area = "UserManagement" })">
                                <i class="fas fa-user-edit"></i>
                                Chỉnh sửa thông tin
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="@Url.Action("AdminDashboard", "Dashboard")">
                                <i class="fas fa-tachometer-alt"></i>
                                Dashboard
                            </a>
                        </li>
                        @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                        {
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Movies", new { area = "MovieManagement" })">
                                    <i class="fas fa-film"></i>
                                    Quản lý phim
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Members", new { area = "UserManagement" })">
                                    <i class="fas fa-users"></i>
                                    Quản lý thành viên
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "Promotions", new { area = "PromotionManagement" })">
                                    <i class="fas fa-gift"></i>
                                    Quản lý khuyến mãi
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Index", "BookingTicket", new { area = "BookingManagement" })">
                                    <i class="fas fa-ticket-alt"></i>
                                    Quản lý đặt vé
                                </a>
                            </li>
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Account" asp-action="Logout" asp-area="" method="post" class="m-0">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="fas fa-sign-out-alt"></i>
                                    Đăng xuất
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <a href="@Url.Action("Login", "Account", new { area = "" })" class="nav-link">
                    <i class="fas fa-sign-in-alt me-1"></i>Đăng nhập
                </a>
                <a href="@Url.Action("Register", "Account", new { area = "" })" class="nav-link">
                    <i class="fas fa-user-plus me-1"></i>Đăng ký
                </a>
            }
        </nav>
    </div>
</header>

<style>
    
    .dashboard-header {
        background: linear-gradient(180deg, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.6) 100%);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1001;
        height: 80px;
    }

    .header-content {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 100%;
    }

    .brand-section {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .brand-logo {
        width: 50px;
        height: 40px;
        background: #df2144;
        border-radius: 8px;
    }

    .brand-name {
        font-size: 24px;
        font-weight: 700;
        color: white;
    }

    .brand-subtitle {
        font-size: 14px;
        color: rgba(255, 255, 255, 0.7);
    }

    .nav-links {
        display: flex;
        gap: 30px;
        align-items: center;
    }

    .nav-link {
        color: rgba(255, 255, 255, 0.8) !important;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
        padding: 8px 12px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        color: #df2144 !important;
        background: rgba(223, 33, 68, 0.1);
        text-decoration: none;
    }

    .nav-link.active {
        color: #df2144 !important;
        background: rgba(223, 33, 68, 0.1);
    }
    
    
    .brand-section a:hover .brand-name {
        color: #df2144;
    }

    
    @@media (max-width: 768px) {
        .header-content {
            padding: 15px;
        }
    
        .nav-links {
            gap: 15px;
        }
        
        .brand-name {
            font-size: 20px;
        }
        
        .nav-link {
            font-size: 14px;
        }
    }
</style>

<script>

    document.addEventListener('DOMContentLoaded', function() {

        const dropdownElementList = document.querySelectorAll('.dropdown-toggle');
        const dropdownList = [...dropdownElementList].map(dropdownToggleEl => {
            if (typeof bootstrap !== 'undefined') {
                return new bootstrap.Dropdown(dropdownToggleEl);
            }
            return null;
        });
        

        console.log('Current Page:', '@currentPage');
        console.log('User Roles:', '@String.Join(",", User.FindAll("role").Select(c => c.Value))');
    });
</script> 