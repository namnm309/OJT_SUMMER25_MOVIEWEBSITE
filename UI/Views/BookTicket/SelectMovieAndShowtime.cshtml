                    <p class="page-subtitle">Chọn phim và suất chiếu chỉ với vài bước đơn giản</p>
                </div>
            </div>
        </div>

        <div class="container px-lg-5">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show animated delay-1" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="row">
                <div class="col-12 px-lg-4">
                    <div class="booking-container animated delay-1">
                        <select id="movieSelect" class="form-select">
                            <option value="">1. Chọn Phim</option>
                            @if (Model != null && Model.Movies != null)
                            {
                                foreach (var movie in Model.Movies)
                                {
                                    <option value="@movie.Id">@movie.Title</option>
                                }
                            }
                        </select>

                        <select id="dateSelect" class="form-select" disabled>
                            <option value="">2. Chọn Ngày</option>
                        </select>

                        <select id="timeSelect" class="form-select" disabled>
                            <option value="">3. Chọn Suất</option>
                        </select>

                        <button id="bookNowBtn" class="btn btn-book" disabled>
                            <i class="fas fa-ticket-alt mr-2"></i>ĐẶT VÉ NGAY
                        </button>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <h3 class="section-title animated delay-2"><i class="fas fa-film mr-2"></i>Phim Đang Chiếu</h3>
                </div>

                
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4 animated delay-2">
                    <div class="movie-card h-100">
                        <div class="movie-poster">
                            <img src="https://via.placeholder.com/300x450?text=Phim+Bom+Tấn" alt="Movie Poster">
                            <div class="movie-overlay">
                                <div class="movie-actions">
                                    <a href="#" class="btn btn-detail">
                                        <i class="fas fa-info-circle mr-1"></i> Chi tiết
                                    </a>
                                    <a href="#" class="btn btn-schedule">
                                        <i class="fas fa-clock mr-1"></i> Lịch chiếu
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="movie-info">
                            <h5 class="movie-title">Phim Bom Tấn 2024</h5>
                            <div class="movie-genre">
                                <span class="genre-badge">Hành động</span>
                                <span class="genre-badge">Phiêu lưu</span>
                                <span class="genre-badge">Kịch tính</span>
                            </div>
                            <div class="movie-meta">
                                <span class="movie-rating">
                                    <i class="fas fa-star"></i> 8.5/10
                                </span>
                                <span class="movie-duration">
                                    <i class="fas fa-clock"></i> 120'
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4 animated delay-3">
                    <div class="movie-card h-100">
                        <div class="movie-poster">
                            <img src="https://via.placeholder.com/300x450?text=Hài+Kịch" alt="Movie Poster">
                            <div class="movie-overlay">
                                <div class="movie-actions">
                                    <a href="#" class="btn btn-detail">
                                        <i class="fas fa-info-circle mr-1"></i> Chi tiết
                                    </a>
                                    <a href="#" class="btn btn-schedule">
                                        <i class="fas fa-clock mr-1"></i> Lịch chiếu
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="movie-info">
                            <h5 class="movie-title">Hài Kịch Vui Nhộn</h5>
                            <div class="movie-genre">
                                <span class="genre-badge">Hài kịch</span>
                                <span class="genre-badge">Gia đình</span>
                            </div>
                            <div class="movie-meta">
                                <span class="movie-rating">
                                    <i class="fas fa-star"></i> 7.8/10
                                </span>
                                <span class="movie-duration">
                                    <i class="fas fa-clock"></i> 95'
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4 animated delay-4">
                    <div class="movie-card h-100">
                        <div class="movie-poster">
                            <img src="https://via.placeholder.com/300x450?text=Tình+Cảm" alt="Movie Poster">
                            <div class="movie-overlay">
                                <div class="movie-actions">
                                    <a href="#" class="btn btn-detail">
                                        <i class="fas fa-info-circle mr-1"></i> Chi tiết
                                    </a>
                                    <a href="#" class="btn btn-schedule">
                                        <i class="fas fa-clock mr-1"></i> Lịch chiếu
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="movie-info">
                            <h5 class="movie-title">Câu Chuyện Tình Yêu</h5>
                            <div class="movie-genre">
                                <span class="genre-badge">Lãng mạn</span>
                                <span class="genre-badge">Tâm lý</span>
                                <span class="genre-badge">Đời thường</span>
                            </div>
                            <div class="movie-meta">
                                <span class="movie-rating">
                                    <i class="fas fa-star"></i> 8.2/10
                                </span>
                                <span class="movie-duration">
                                    <i class="fas fa-clock"></i> 105'
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4 animated delay-3">
                    <div class="movie-card h-100">
                        <div class="movie-poster">
                            <img src="https://via.placeholder.com/300x450?text=Kinh+Dị" alt="Movie Poster">
                            <div class="movie-overlay">
                                <div class="movie-actions">
                                    <a href="#" class="btn btn-detail">
                                        <i class="fas fa-info-circle mr-1"></i> Chi tiết
                                    </a>
                                    <a href="#" class="btn btn-schedule">
                                        <i class="fas fa-clock mr-1"></i> Lịch chiếu
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="movie-info">
                            <h5 class="movie-title">Ám Ảnh Kinh Hoàng</h5>
                            <div class="movie-genre">
                                <span class="genre-badge">Kinh dị</span>
                                <span class="genre-badge">Bí ẩn</span>
                                <span class="genre-badge">Tâm lý</span>
                            </div>
                            <div class="movie-meta">
                                <span class="movie-rating">
                                    <i class="fas fa-star"></i> 7.1/10
                                </span>
                                <span class="movie-duration">
                                    <i class="fas fa-clock"></i> 110'
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            var movieSelect = $('#movieSelect');
            var dateSelect = $('#dateSelect');
            var timeSelect = $('#timeSelect');
            var bookNowBtn = $('#bookNowBtn');


            dateSelect.prop('disabled', true);
            timeSelect.prop('disabled', true);
            bookNowBtn.prop('disabled', true);


            function checkBookingReadiness() {
                if (movieSelect.val() && dateSelect.val() && timeSelect.val()) {
                    bookNowBtn.prop('disabled', false);
                } else {
                    bookNowBtn.prop('disabled', true);
                }
            }


            movieSelect.on('change', function () {
                var movieId = $(this).val();
                dateSelect.empty().append('<option value="">2. Chọn Ngày</option>');
                timeSelect.empty().append('<option value="">3. Chọn Suất</option>');
                dateSelect.prop('disabled', true);
                timeSelect.prop('disabled', true);
                bookNowBtn.prop('disabled', true);

                if (movieId) {
                    $.ajax({
                        url: '@Url.Action("GetShowDates", "BookTicket")',
                        type: 'GET',
                        data: { movieId: movieId },
                        beforeSend: function() {
                            dateSelect.addClass('disabled');
                            dateSelect.html('<option value="">Đang tải ngày chiếu...</option>');
                        },
                        success: function (response) {
                            dateSelect.removeClass('disabled');
                            if (response.success && response.dates && response.dates.length > 0) {
                                dateSelect.empty().append('<option value="">2. Chọn Ngày</option>');
                                $.each(response.dates, function (i, dateString) {
                                    var date = new Date(dateString);
                                    var options = { weekday: 'long', year: 'numeric', month: '2-digit', day: '2-digit' };
                                    var formattedDate = date.toLocaleDateString('vi-VN', options);
                                    dateSelect.append($('<option>', {
                                        value: dateString,
                                        text: formattedDate
                                    }));
                                });
                                dateSelect.prop('disabled', false);
                            } else {
                                dateSelect.append('<option value="">Không có ngày chiếu</option>');
                                alert(response.message || 'Không có ngày chiếu nào cho phim này.');
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error("Error fetching show dates:", error);
                            dateSelect.empty().append('<option value="">Lỗi tải dữ liệu</option>');
                            alert('Đã xảy ra lỗi khi tải ngày chiếu.');
                        }
                    });
                }
            });


            dateSelect.on('change', function () {
                var movieId = movieSelect.val();
                var selectedDate = $(this).val();
                timeSelect.empty().append('<option value="">3. Chọn Suất</option>');
                timeSelect.prop('disabled', true);
                bookNowBtn.prop('disabled', true);

                if (movieId && selectedDate) {
                    $.ajax({
                        url: '@Url.Action("GetShowTimes", "BookTicket")',
                        type: 'GET',
                        data: { movieId: movieId, showDate: selectedDate },
                        beforeSend: function() {
                            timeSelect.addClass('disabled');
                            timeSelect.html('<option value="">Đang tải suất chiếu...</option>');
                        },
                        success: function (response) {
                            timeSelect.removeClass('disabled');
                            if (response.success && response.times && response.times.length > 0) {
                                timeSelect.empty().append('<option value="">3. Chọn Suất</option>');
                                $.each(response.times, function (i, timeItem) {
                                    timeSelect.append($('<option>', {
                                        value: timeItem.id,
                                        text: timeItem.time
                                    }));
                                });
                                timeSelect.prop('disabled', false);
                            } else {
                                timeSelect.append('<option value="">Không có suất chiếu</option>');
                                alert(response.message || 'Không có suất chiếu nào vào ngày này.');
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error("Error fetching show times:", error);
                            timeSelect.empty().append('<option value="">Lỗi tải dữ liệu</option>');
                            alert('Đã xảy ra lỗi khi tải suất chiếu.');
                        }
                    });
                }
            });


            movieSelect.on('change', checkBookingReadiness);
            dateSelect.on('change', checkBookingReadiness);
            timeSelect.on('change', checkBookingReadiness);


            bookNowBtn.on('click', function (e) {
                e.preventDefault();
                var selectedMovieId = movieSelect.val();
                var selectedDate = dateSelect.val();
                var selectedShowtimeId = timeSelect.val();

                if (selectedMovieId && selectedDate && selectedShowtimeId) {
                    window.location.href = '@Url.Action("SelectSeat", "BookTicket")' + '?showtimeId=' + selectedShowtimeId;
                } else {
                    alert('Vui lòng chọn đầy đủ Phim, Ngày và Suất chiếu.');
                }
            });


            $(window).scroll(function() {
                $('.animated').each(function() {
                    var position = $(this).offset().top;
                    var scroll = $(window).scrollTop();
                    var windowHeight = $(window).height();

                    if (scroll + windowHeight > position + 100) {
                        $(this).addClass('fadeIn');
                    }
                });
            });
        });
    </script>
</body>
</html>