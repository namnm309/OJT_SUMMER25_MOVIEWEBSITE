@model TicketInfoViewModel
@{
    ViewData["Title"] = "Thông Tin Vé";
    Layout = "_Layout";
}

<div class="container-fluid bg-dark text-white min-vh-100 py-4">
    <div class="container">
        @if(ViewBag.IsNewBooking == true)
        {
            <div class="alert alert-success text-center">
                <h4><i class="fas fa-check-circle"></i> Đặt vé thành công!</h4>
                <p>Mã đặt vé: <strong>@ViewBag.BookingCode</strong></p>
            </div>
        }

        <div class="text-center mb-4">
            <h1 class="text-danger">Thông Tin Vé Điện Tử</h1>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card bg-secondary text-white">
                    <div class="card-header bg-danger text-center">
                        <h3>CINEMA CITY - VÉ XEM PHIM</h3>
                        <h4>Mã: @Model.BookingCode</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <img src="@Model.MoviePoster" alt="@Model.MovieTitle" class="img-fluid rounded">
                            </div>
                            <div class="col-md-8">
                                <h3 class="text-danger">@Model.MovieTitle</h3>
                                <div class="ticket-details">
                                    <p><i class="fas fa-map-marker-alt text-danger"></i> <strong>Phòng:</strong> @Model.CinemaRoom</p>
                                    <p><i class="fas fa-calendar text-danger"></i> <strong>Ngày:</strong> @Model.ShowDate.ToString("dd/MM/yyyy")</p>
                                    <p><i class="fas fa-clock text-danger"></i> <strong>Giờ:</strong> @Model.ShowTime.ToString(@"hh\:mm")</p>
                                    <p><i class="fas fa-couch text-danger"></i> <strong>Ghế:</strong> @string.Join(", ", Model.SeatNumbers)</p>
                                    <p><i class="fas fa-money-bill text-danger"></i> <strong>Tổng tiền:</strong> 
                                       <span class="text-success">@String.Format("{0:N0}", Model.TotalPrice) VNĐ</span></p>
                                </div>
                            </div>
                        </div>

                        <hr class="border-secondary">

                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="text-warning">Thông tin khách hàng</h5>
                                <p><strong>Tên:</strong> @Model.CustomerName</p>
                                <p><strong>SĐT:</strong> @Model.CustomerPhone</p>
                                <p><strong>Email:</strong> @Model.CustomerEmail</p>
                            </div>
                            <div class="col-md-6">
                                <h5 class="text-warning">Thông tin đặt vé</h5>
                                <p><strong>Thời gian đặt:</strong> @Model.BookingTime.ToString("dd/MM/yyyy HH:mm")</p>
                                <p><strong>Trạng thái:</strong> <span class="badge bg-success">@Model.Status</span></p>
                                @if(Model.PointsEarned > 0)
                                {
                                    <p><strong>Điểm tích lũy:</strong> <span class="text-warning">+@Model.PointsEarned</span></p>
                                }
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <div class="qr-placeholder bg-light text-dark p-4 rounded d-inline-block">
                                <i class="fas fa-qrcode fa-3x"></i>
                                <p class="mb-0 mt-2">QR Code</p>
                                <small>@Model.BookingCode</small>
                            </div>
                            <p class="mt-2 text-warning">
                                <i class="fas fa-info-circle"></i> Xuất trình QR tại quầy để nhận vé
                            </p>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <div class="d-flex gap-2 justify-content-center flex-wrap">
                        <button class="btn btn-outline-light" onclick="window.print()">
                            <i class="fas fa-print"></i> In vé
                        </button>
                        <a href="/BookingManagement/Booking/SelectMovie" class="btn btn-danger">
                            <i class="fas fa-plus"></i> Đặt vé khác
                        </a>
                        <a href="/Dashboard" class="btn btn-success">
                            <i class="fas fa-home"></i> Trang chủ
                        </a>
                    </div>
                </div>

                <div class="alert alert-warning mt-4">
                    <h6><i class="fas fa-exclamation-triangle"></i> Lưu ý:</h6>
                    <ul>
                        <li>Đến rạp trước 15-30 phút</li>
                        <li>Mang theo giấy tờ tùy thân</li>
                        <li>Vé không thể đổi/hoàn</li>
                        <li>Hotline: 1900 xxxx</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .ticket-details p {
        margin-bottom: 0.75rem;
        font-size: 1.1rem;
    }
    
    .qr-placeholder {
        border: 2px dashed #6c757d;
    }
    
    @@media print {
        .btn, .alert-warning { display: none !important; }
        body { background: white !important; color: black !important; }
    }
</style> 