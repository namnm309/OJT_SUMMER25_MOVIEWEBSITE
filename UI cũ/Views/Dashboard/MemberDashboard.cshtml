@{
    ViewData["Title"] = "Bảng điều khiển";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cinema City</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #0a0a0a;
            color: white;
            display: flex;
            flex-direction: column;
        }

        /* Wrapper cho toàn bộ nội dung */
        .page-wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* Header Styles - Reuse from homepage */
        .dashboard-header {
            background: linear-gradient(180deg, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.6) 100%);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .header-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .brand-section {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .brand-logo {
            width: 50px;
            height: 40px;
            background: #df2144;
            border-radius: 8px;
        }

        .brand-name {
            font-size: 24px;
            font-weight: 700;
            color: white;
        }

        .brand-subtitle {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.7);
        }

        .nav-links {
            display: flex;
            gap: 30px;
            align-items: center;
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .nav-link:hover {
            color: #df2144;
        }

        .nav-link.active {
            color: #df2144;
        }

        /* Main Content */
        .dashboard-container {
            flex: 1;
            max-width: 1200px;
            width: 100%;
            margin: 0 auto;
            padding: 40px 20px;
        }

        /* Dashboard Layout */
        .dashboard-layout {
            display: flex;
            flex-direction: column;
            flex: 1 0 auto;
        }

        .dashboard-main {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .dashboard-content {
            flex: 1;
            padding-bottom: 40px; /* Add space before footer */
        }

        /* Cinema Footer - Ensure it stays at the bottom */
        .cinema-footer {
            flex-shrink: 0;
        }

        /* Welcome Section */
        .welcome-section {
            text-align: center;
            margin-bottom: 50px;
            padding: 60px 20px;
            background: linear-gradient(135deg, rgba(223, 33, 68, 0.1) 0%, rgba(223, 33, 68, 0.05) 100%);
            border-radius: 20px;
            border: 1px solid rgba(223, 33, 68, 0.2);
        }

        .welcome-title {
            font-size: 48px;
            font-weight: 700;
            margin-bottom: 20px;
            background: linear-gradient(135deg, #df2144 0%, #ff4466 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .welcome-subtitle {
            font-size: 20px;
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 30px;
        }

        .member-stats {
            display: flex;
            justify-content: center;
            gap: 40px;
            margin-top: 30px;
        }

        .stat-item {
            text-align: center;
        }

        .stat-value {
            font-size: 36px;
            font-weight: 700;
            color: #df2144;
        }

        .stat-label {
            font-size: 14px;
            color: rgba(255, 255, 255, 0.7);
        }

        /* Dashboard Cards */
        .dashboard-card {
            background: linear-gradient(135deg, rgba(26, 26, 26, 0.9) 0%, rgba(45, 45, 45, 0.9) 100%);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 30px;
            height: 100%;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .dashboard-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #df2144, #ff4466);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(223, 33, 68, 0.2);
        }

        .dashboard-card:hover::before {
            opacity: 1;
        }

        .card-title {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 20px;
            color: white;
        }

        .card-icon {
            font-size: 48px;
            color: #df2144;
            margin-bottom: 20px;
        }

        /* Quick Actions */
        .action-btn {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: white;
            padding: 20px;
            border-radius: 15px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
            height: 100%;
        }

        .action-btn:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: #df2144;
            color: #df2144;
            transform: translateY(-5px);
        }

        .action-btn i {
            font-size: 36px;
        }

        .action-btn span {
            font-weight: 500;
            font-size: 16px;
        }

        /* Personal Info */
        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }

        .info-item {
            padding: 15px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .info-label {
            font-size: 12px;
            color: rgba(255, 255, 255, 0.6);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 5px;
        }

        .info-value {
            font-size: 16px;
            font-weight: 500;
            color: white;
        }

        /* Badges */
        .badge {
            padding: 6px 16px;
            border-radius: 20px;
            font-weight: 500;
            font-size: 14px;
        }

        .badge.bg-info {
            background: linear-gradient(135deg, #17a2b8, #117a8b);
        }

        .badge.bg-success {
            background: linear-gradient(135deg, #28a745, #1e7e34);
        }

        /* Footer - Let shared-footer.css handle all footer styles */

        /* User Menu */
        .user-menu {
            position: relative;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            padding: 8px 16px;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .user-info:hover {
            background: rgba(255, 255, 255, 0.1);
        }

        .user-avatar {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: #df2144;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 14px;
        }

        .user-name {
            color: white;
            font-weight: 500;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .welcome-title {
                font-size: 36px;
            }

            .member-stats {
                flex-direction: column;
                gap: 20px;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }

            .dashboard-card {
                padding: 20px;
            }
        }
    </style>
    
    <!-- Modern Dashboard CSS -->
    <link rel="stylesheet" href="~/css/modern-dashboard.css" />
    <!-- Shared Footer CSS - Load last to override other styles -->
    <link rel="stylesheet" href="~/css/shared-footer.css" />
</head>
<body>
    @{
        ViewBag.CurrentPage = "Dashboard";
    }
    
    <div class="page-wrapper">
        <!-- Dashboard Header -->
        @await Html.PartialAsync("_DashboardHeader")

        <!-- Dashboard Layout -->
        <div class="dashboard-layout">
            <!-- Sidebar Toggle Button (Mobile) -->
            <button class="sidebar-toggle" onclick="toggleSidebar()">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Sidebar -->
            <aside class="dashboard-sidebar">
                <div class="sidebar-header">
                    <a href="@Url.Action("Index", "Home")" class="sidebar-brand">
                        <div class="sidebar-brand-logo"></div>
                        <div class="sidebar-brand-text">
                            <h2>Cinema City</h2>
                            <p>Member Panel</p>
                        </div>
                    </a>
                </div>
                
                <nav class="sidebar-nav">
                    <div class="nav-section">
                        <div class="nav-section-title">Tổng quan</div>
                        <div class="nav-item">
                            <a href="@Url.Action("MemberDashboard", "Dashboard")" class="nav-link active">
                                <i class="fas fa-tachometer-alt"></i>
                                <span>Dashboard</span>
                            </a>
                        </div>
                        <div class="nav-item">
                            <a href="@Url.Action("Index", "Home")" class="nav-link">
                                <i class="fas fa-home"></i>
                                <span>Trang chủ</span>
                            </a>
                        </div>
                    </div>
                    
                    <div class="nav-section">
                        <div class="nav-section-title">Đặt vé</div>
                        <div class="nav-item">
                            <a href="@Url.Action("Index", "Movies")" class="nav-link">
                                <i class="fas fa-film"></i>
                                <span>Phim đang chiếu</span>
                            </a>
                        </div>
                        <div class="nav-item">
                            <a href="@Url.Action("SelectMovieAndShowtime", "BookTicket")" class="nav-link">
                                <i class="fas fa-ticket-alt"></i>
                                <span>Đặt vé</span>
                            </a>
                        </div>
                        <div class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-history"></i>
                                <span>Lịch sử đặt vé</span>
                            </a>
                        </div>
                    </div>
                    
                    <div class="nav-section">
                        <div class="nav-section-title">Khuyến mãi</div>
                        <div class="nav-item">
                            <a href="@Url.Action("Index", "Promotions")" class="nav-link">
                                <i class="fas fa-gift"></i>
                                <span>Khuyến mãi</span>
                            </a>
                        </div>
                        <div class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-coins"></i>
                                <span>Điểm tích lũy</span>
                            </a>
                        </div>
                    </div>
                    
                    <div class="nav-section">
                        <div class="nav-section-title">Tài khoản</div>
                        <div class="nav-item">
                            <a href="@Url.Action("Profile", "Account", new { area = "UserManagement" })" class="nav-link">
                                <i class="fas fa-user-edit"></i>
                                <span>Hồ sơ cá nhân</span>
                            </a>
                        </div>
                        <div class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="fas fa-cog"></i>
                                <span>Cài đặt</span>
                            </a>
                        </div>
                    </div>
                </nav>
                
                <!-- User Profile in Sidebar -->
                <div class="sidebar-user">
                    <div class="user-profile">
                        <div class="user-avatar">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                @User.Identity.Name?.Substring(0, 1).ToUpper()
                            }
                            else
                            {
                                <span>M</span>
                            }
                        </div>
                        <div class="user-info">
                            <h4>
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    @(User.Identity.Name?.Length > 12 ? User.Identity.Name.Substring(0, 12) + "..." : User.Identity.Name)
                                }
                                else
                                {
                                    <span>Member</span>
                                }
                            </h4>
                            <p>Thành viên</p>
                        </div>
                    </div>
                    <div class="user-actions">
                        <a href="@Url.Action("Profile", "Account", new { area = "UserManagement" })" class="user-action-btn">
                            <i class="fas fa-user"></i>
                        </a>
                        <form asp-controller="Account" asp-action="Logout" asp-area="" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="user-action-btn" style="border: none;">
                                <i class="fas fa-sign-out-alt"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </aside>
            
            <!-- Backdrop for mobile -->
            <div class="sidebar-backdrop" onclick="toggleSidebar()"></div>

            <!-- Main Content -->
            <main class="dashboard-main">
                <!-- Top Bar -->
                <div class="dashboard-topbar">
                    <div class="topbar-content">
                        <div class="topbar-left">
                            <h1>Member Dashboard</h1>
                            <p>Quản lý tài khoản và đặt vé xem phim</p>
                        </div>
                        <div class="topbar-right">
                            <div class="topbar-search">
                                <i class="fas fa-search"></i>
                                <input type="text" placeholder="Tìm phim...">
                            </div>
                            <div class="topbar-actions">
                                <button class="topbar-btn" title="Thông báo">
                                    <i class="fas fa-bell"></i>
                                </button>
                                <button class="topbar-btn" title="Cài đặt">
                                    <i class="fas fa-cog"></i>
                                </button>
                            </div>
                    </div>
                </div>
            </div>

                <!-- Dashboard Content -->
                <div class="dashboard-content">
                <!-- Hero Section -->
                <div class="hero-section animate-fade-in">
                    <div class="hero-content">
                        <div class="hero-text">
                            <h1>
                                <i class="fas fa-user-circle"></i>
                                Xin chào, @ViewBag.FullName!
                            </h1>
                            <p>Chào mừng bạn đến với Cinema City</p>
                        </div>
                        <div class="hero-stats">
                            <div class="hero-stat">
                                <span class="hero-stat-value">@ViewBag.Score</span>
                                <span class="hero-stat-label">Điểm tích lũy</span>
                            </div>
                            <div class="hero-stat">
                                <span class="hero-stat-value">@ViewBag.TotalBookings</span>
                                <span class="hero-stat-label">Vé đã đặt</span>
                            </div>
                            <div class="hero-stat">
                                <span class="hero-stat-value">@ViewBag.MemberLevel</span>
                                <span class="hero-stat-label">Hạng thành viên</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Content Grid -->
                <div class="content-grid animate-slide-in">
                    <!-- Main Panel -->
                    <div class="main-panel">
                        <!-- Quick Actions -->
                        <div class="modern-card">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <i class="fas fa-bolt"></i>
                                    Thao tác nhanh
                                </h3>
                            </div>
                            <div class="quick-actions">
                    <a href="@Url.Action("Index", "Movies")" class="action-btn">
                        <i class="fas fa-film"></i>
                        <span>Xem phim</span>
                    </a>
                    <a href="#" class="action-btn">
                        <i class="fas fa-ticket-alt"></i>
                        <span>Vé của tôi</span>
                    </a>
                    <a href="@Url.Action("Index", "Promotions")" class="action-btn">
                        <i class="fas fa-gift"></i>
                        <span>Khuyến mãi</span>
                    </a>
                    <a href="@Url.Action("Profile", "Account", new { area = "UserManagement" })" class="action-btn">
                        <i class="fas fa-user-edit"></i>
                        <span>Chỉnh sửa hồ sơ</span>
                    </a>
                </div>
            </div>

                        <!-- User Information -->
                        <div class="modern-card">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <i class="fas fa-user-circle"></i>
                                    Thông tin tài khoản
                                </h3>
                            </div>
                            <div class="user-info-grid">
                                <div class="user-info-item">
                                <div class="info-label">Tên đăng nhập</div>
                                <div class="info-value">@ViewBag.UserName</div>
                            </div>
                                <div class="user-info-item">
                                <div class="info-label">Email</div>
                                <div class="info-value">@ViewBag.Email</div>
                            </div>
                                <div class="user-info-item">
                                <div class="info-label">Họ tên</div>
                                <div class="info-value">@ViewBag.FullName</div>
                            </div>
                                <div class="user-info-item">
                                <div class="info-label">Vai trò</div>
                                <div class="info-value">
                                        <span class="status-badge member">@ViewBag.Role</span>
                                    </div>
                                </div>
                                <div class="user-info-item">
                                <div class="info-label">Trạng thái</div>
                                <div class="info-value">
                                @if(ViewBag.IsActive)
                                {
                                            <span class="status-badge active">Hoạt động</span>
                                }
                                else
                                {
                                            <span class="status-badge inactive">Không hoạt động</span>
                                        }
                                    </div>
                                </div>
                                <div class="user-info-item">
                                    <div class="info-label">Ngày tham gia</div>
                                    <div class="info-value">@ViewBag.CreatedAt</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Side Panel -->
                    <div class="side-panel">
                        <!-- Member Benefits -->
                        <div class="modern-card">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <i class="fas fa-star"></i>
                                    Đặc quyền thành viên
                                </h3>
                            </div>
                            <div class="benefits-list">
                                <div class="benefit-item">
                                    <div class="benefit-icon">
                                        <i class="fas fa-percent"></i>
                                    </div>
                                    <div class="benefit-content">
                                        <div class="benefit-title">Giảm giá vé</div>
                                        <div class="benefit-desc">Giảm 10% cho thành viên</div>
                                    </div>
                                </div>
                                <div class="benefit-item">
                                    <div class="benefit-icon">
                                        <i class="fas fa-gift"></i>
                                    </div>
                                    <div class="benefit-content">
                                        <div class="benefit-title">Quà tặng</div>
                                        <div class="benefit-desc">Ưu đãi đặc biệt mỗi tháng</div>
                                    </div>
                                </div>
                                <div class="benefit-item">
                                    <div class="benefit-icon">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div class="benefit-content">
                                        <div class="benefit-title">Đặt vé sớm</div>
                                        <div class="benefit-desc">Ưu tiên đặt vé trước</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Point System -->
                        <div class="modern-card">
                            <div class="card-header">
                                <h3 class="card-title">
                                    <i class="fas fa-coins"></i>
                                    Hệ thống điểm
                                </h3>
                            </div>
                            <div class="points-info">
                                <div class="points-circle">
                                    <div class="points-value">@ViewBag.Score</div>
                                    <div class="points-label">Điểm hiện tại</div>
                                </div>
                                <div class="points-progress">
                                    <div class="progress-label">Tiến độ lên hạng</div>
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: 65%"></div>
                                    </div>
                                    <div class="progress-text">Còn 350 điểm để lên Gold</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

        <!-- Footer -->
        @await Html.PartialAsync("_Footer")
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Toggle sidebar for mobile
        function toggleSidebar() {
            const layout = document.querySelector('.dashboard-layout');
            layout.classList.toggle('sidebar-open');
        }

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.querySelector('.dashboard-sidebar');
            const toggle = document.querySelector('.sidebar-toggle');
            const layout = document.querySelector('.dashboard-layout');
            
            if (window.innerWidth <= 991 && 
                !sidebar.contains(event.target) && 
                !toggle.contains(event.target) &&
                layout.classList.contains('sidebar-open')) {
                layout.classList.remove('sidebar-open');
            }
        });

        // Highlight active menu item based on current page
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            
            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                } else {
                    link.classList.remove('active');
                }
            });
        });
    </script>
</body>
</html>